---
/**
 * RankingCategoryPills - Category navigation pills
 */
import { RANKING_CATEGORIES } from '../../data/ranking-categories';

interface Props {
  currentCategory: string;
}

const { currentCategory } = Astro.props;
---

<div class="flex flex-wrap justify-center gap-2 mb-10">
  {Object.entries(RANKING_CATEGORIES).map(([slug, config]) => (
    <a 
      href={`/ranking/${slug}`}
      class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${
        slug === currentCategory 
          ? 'bg-indigo-600 text-white' 
          : 'bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-indigo-100 dark:hover:bg-gray-700'
      }`}
    >
      {config.title.replace(' Models', '')}
    </a>
  ))}
</div>
