interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<div id="floating-compare-bar" class={`floating-compare-bar ${className}`} data-hidden="true">
  <div class="compare-bar-inner">
    <div class="compare-info">
      <span class="compare-icon">ğŸ“Š</span>
      <span class="compare-label">Compare</span>
      <span class="compare-count">(<span id="compare-count">0</span>/5)</span>
    </div>
    
    <div class="compare-models" id="compare-models-list"></div>
    
    <div class="compare-actions">
      <button id="clear-compare" class="btn-clear" title="Clear all">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      <a id="start-compare" href="/compare" class="btn-compare-start">Compare Now â†’</a>
    </div>
  </div>
</div>

<style>
  .floating-compare-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 50;
    transform: translateY(100%);
    transition: transform 0.3s ease-out;
  }
  
  .floating-compare-bar[data-hidden="false"] {
    transform: translateY(0);
  }
  
  .compare-bar-inner {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, #1e1b4b 0%, #312e81 100%);
    border-top: 1px solid rgba(99, 102, 241, 0.3);
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.3);
  }
  
  .compare-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: white;
    font-weight: 600;
    flex-shrink: 0;
  }
  
  .compare-icon { font-size: 1.25rem; }
  .compare-count { color: #a5b4fc; font-size: 0.875rem; }
  
  .compare-models {
    display: flex;
    gap: 0.5rem;
    flex: 1;
    overflow-x: auto;
    padding: 0.25rem 0;
  }
  
  .compare-models::-webkit-scrollbar { height: 4px; }
  .compare-models::-webkit-scrollbar-track { background: rgba(255, 255, 255, 0.1); border-radius: 2px; }
  .compare-models::-webkit-scrollbar-thumb { background: rgba(99, 102, 241, 0.5); border-radius: 2px; }
  
  :global(.model-chip) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 9999px;
    color: white;
    font-size: 0.875rem;
    white-space: nowrap;
    flex-shrink: 0;
  }
  
  :global(.model-chip:hover) { background: rgba(255, 255, 255, 0.15); }
  
  :global(.model-chip .remove-btn) {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    cursor: pointer;
    font-size: 0.75rem;
    line-height: 1;
    transition: background 0.2s;
  }
  
  :global(.model-chip .remove-btn:hover) { background: #ef4444; }
  
  .compare-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-shrink: 0;
  }
  
  .btn-clear {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    border-radius: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    color: #f87171;
    border: none;
    cursor: pointer;
    transition: background 0.2s;
  }
  
  .btn-clear:hover { background: rgba(239, 68, 68, 0.2); }
  
  .btn-compare-start {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1.25rem;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: white;
    font-weight: 600;
    border-radius: 9999px;
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  
  .btn-compare-start:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
  }
  
  @media (max-width: 768px) {
    .compare-bar-inner { flex-wrap: wrap; padding: 0.5rem 1rem; }
    .compare-models { order: 3; width: 100%; margin-top: 0.5rem; }
    .compare-info { flex: 1; }
  }
</style>

<script>
  import '../../scripts/compare-cart.ts';
</script>
