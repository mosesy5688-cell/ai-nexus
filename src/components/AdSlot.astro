---
export interface Props {
  type: 'google' | 'amazon' | 'custom' | 'affiliate-banner' | 'media-net';
  // Google AdSense 专用
  googleAdClient?: string; // 例如 'ca-pub-YOUR_ADSENSE_PUBLISHER_ID'
  googleAdSlot?: string;   // 例如 'YOUR_GOOGLE_SLOT_ID'
  // 其他广告网络通用
  adId?: string;           // 例如 Amazon 的 ad unit ID, 或其他网络的 ID
  width?: string;
  height?: string;
  className?: string;
}

const { type, googleAdClient, googleAdSlot, adId, width, height, className } = Astro.props;
---

<div class={`ad-container my-4 ${className || ''}`}>
  {type === 'google' && googleAdClient && googleAdSlot && (
    <ins class="adsbygoogle"
         style="display:block;"
         data-ad-client={googleAdClient}
         data-ad-slot={googleAdSlot}
         data-ad-format="auto"
         data-full-width-responsive="true"></ins>
