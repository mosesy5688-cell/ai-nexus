---
export interface Props {
  type: 'google' | 'amazon' | 'custom' | 'affiliate-banner' | 'media-net';
  // For Google AdSense
  googleAdClient?: string; // e.g., 'ca-pub-YOUR_ADSENSE_PUBLISHER_ID'
  googleAdSlot?: string;   // e.g., 'YOUR_GOOGLE_SLOT_ID'
  // For other ad networks
  adId?: string;           // e.g., Amazon's ad unit ID, or other network IDs
  width?: string;
  height?: string;
  className?: string;
}

const { type, googleAdClient, googleAdSlot, adId, width, height, className } = Astro.props;
---

<div class={`ad-container my-4 ${className || ''}`}>
  {type === 'google' && googleAdClient && googleAdSlot && (
    <>
      <ins class="adsbygoogle"
           style="display:block;"
           data-ad-client={googleAdClient}
           data-ad-slot={googleAdSlot}
           data-ad-format="auto"
           data-full-width-responsive="true"></ins>
      <script is:inline>
        (window.adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </>
  )}

  {type === 'amazon' && adId && (
    <div id={`amazon-ad-${adId}`} style={{ width, height }}>
      {/* Place Amazon Associates ad code here */}
    </div>
  )}

  {type === 'media-net' && adId && (
    <div id={`media-net-ad-${adId}`} style={{ width, height }}>
      {/* Place Media.net ad code here */}
    </div>
  )}
</div>