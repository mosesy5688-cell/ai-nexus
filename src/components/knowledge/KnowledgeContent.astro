---
// src/components/knowledge/KnowledgeContent.astro
interface Props {
  content: string;
}

const { content } = Astro.props;

import { marked } from 'marked';

// Configure marked for information density styling
const htmlContent = marked.parse(content || '');
---

<article class="article-content prose prose-indigo dark:prose-invert max-w-none [&_a]:text-blue-600 [&_a]:font-bold [&_a]:underline" set:html={htmlContent} />
