---
// src/components/knowledge/KnowledgeContent.astro
interface Props {
  content: string;
}

const { content } = Astro.props;

// Current simple markdown parser from original file
const htmlContent = content
  .replace(/\n/g, '<br>')
  .replace(/## /g, '<h2>')
  .replace(/<br><h2>/g, '</p><h2>')
  .replace(/<h2>([^<]+)/g, '<h2>$1</h2><p>');
---

<article class="article-content" set:html={htmlContent} />
