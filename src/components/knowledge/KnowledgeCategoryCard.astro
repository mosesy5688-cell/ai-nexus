---
/**
 * KnowledgeCategoryCard - Single category display component
 */
import type { KnowledgeCategory } from '../../data/knowledge-base-config';

interface Props {
  category: KnowledgeCategory;
}

const { category } = Astro.props;
---

<section class="category-card" id={category.id}>
  <div class="category-header">
    <span class="category-icon">{category.icon}</span>
    <h2 class="category-title">{category.title}</h2>
  </div>
  <p class="category-description">{category.description}</p>
  
  <ul class="article-list">
    {category.articles.map(article => (
      <li class="article-item">
        <a href={`/knowledge/${article.slug}`} class="article-link">
          <span class="article-title">{article.title}</span>
          <span class="article-description">{article.description}</span>
        </a>
      </li>
    ))}
  </ul>
</section>

<style>
  .category-card {
    background: rgba(30, 41, 59, 0.5);
    border: 1px solid #334155;
    border-radius: 16px;
    padding: 1.5rem;
    transition: transform 0.2s, border-color 0.2s;
  }

  .category-card:hover {
    transform: translateY(-2px);
    border-color: #818cf8;
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .category-icon {
    font-size: 1.5rem;
  }

  .category-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #f1f5f9;
    margin: 0;
  }

  .category-description {
    color: #94a3b8;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .article-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .article-item {
    border-left: 2px solid #334155;
    padding-left: 0.75rem;
    transition: border-color 0.2s;
  }

  .article-item:hover {
    border-color: #818cf8;
  }

  .article-link {
    display: block;
    text-decoration: none;
    padding-left: 0.5rem;
  }

  .article-title {
    display: block;
    color: #e2e8f0;
    font-weight: 500;
    margin-bottom: 0.25rem;
    transition: color 0.2s;
  }

  .article-link:hover .article-title {
    color: #818cf8;
  }

  .article-description {
    display: block;
    color: #8b9aae;
    font-size: 0.8rem;
  }
</style>
