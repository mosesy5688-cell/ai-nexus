---
// src/components/benchmark/BenchmarkCard.astro
// V21.0: Professional technical performance datasheet
import { getRouteFromId } from '../../utils/knowledge-cache-reader.js';

interface Props {
  umid?: string;
  name: string;
  mmlu?: number;
  humaneval?: number;
  truthfulqa?: number;
  hellaswag?: number;
  arc_challenge?: number;
  winogrande?: number;
  gsm8k?: number;
  avg_score?: number;
  quality_flag?: 'ok' | 'suspect' | 'invalid';
  compact?: boolean;
  scores?: Record<string, number>;
}

const { 
  umid,
  name, 
  mmlu, 
  humaneval, 
  hellaswag, 
  arc_challenge,
  truthfulqa,
  winogrande,
  gsm8k,
  avg_score,
  quality_flag = 'ok',
  compact = false,
  scores = {}
} = Astro.props;

// Aggregate all available scores
const allMetrics = [
  { id: 'avg', label: 'Average', value: avg_score || scores?.avg?.score || scores?.avg || scores?.average?.score || scores?.average },
  { id: 'mmlu', label: 'MMLU', value: mmlu || scores?.mmlu?.score || scores?.mmlu },
  { id: 'humaneval', label: 'HumanEval', value: humaneval || scores?.humaneval?.score || scores?.humaneval || scores?.human_eval?.score || scores?.human_eval },
  { id: 'hellaswag', label: 'HellaSwag', value: hellaswag || scores?.hellaswag?.score || scores?.hellaswag },
  { id: 'arc', label: 'ARC-C', value: arc_challenge || scores?.arc_challenge?.score || scores?.arc_challenge || scores?.arc?.score || scores?.arc },
  { id: 'gsm8k', label: 'GSM8K', value: gsm8k || scores?.gsm8k?.score || scores?.gsm8k },
  { id: 'truthfulqa', label: 'TruthfulQA', value: truthfulqa || scores?.truthfulqa?.score || scores?.truthfulqa },
  { id: 'winogrande', label: 'Winogrande', value: winogrande || scores?.winogrande?.score || scores?.winogrande },
].filter(m => m.value !== undefined && m.value !== null);

function getScoreColor(val: number): string {
  if (val >= 80) return 'text-emerald-600 dark:text-emerald-400';
  if (val >= 70) return 'text-indigo-600 dark:text-indigo-400';
  if (val >= 50) return 'text-amber-600 dark:text-amber-400';
  return 'text-rose-600 dark:text-rose-400';
}
---

<div class={`bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-2xl overflow-hidden shadow-sm ${compact ? 'p-4' : 'p-6 md:p-8'}`}>
  <div class="flex items-center justify-between mb-8 pb-4 border-b border-zinc-100 dark:border-zinc-800">
    <div class="flex items-center gap-3">
      <div class="w-2 h-2 rounded-full bg-indigo-500"></div>
      <h3 class="text-sm font-black text-zinc-900 dark:text-white uppercase tracking-widest">
        {name} <span class="text-zinc-400 font-bold ml-1">Performance Datasheet</span>
      </h3>
    </div>
    {quality_flag !== 'ok' && (
      <span class="px-2 py-0.5 bg-amber-50 dark:bg-amber-900/20 text-amber-600 text-[9px] font-black uppercase tracking-widest rounded border border-amber-200 dark:border-amber-800">
        Results Verified? {quality_flag}
      </span>
    )}
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-8">
    {allMetrics.map(metric => (
      <div class="flex flex-col gap-2">
        <div class="flex items-center justify-between mb-1">
          <span class="text-[10px] font-black text-zinc-400 dark:text-zinc-500 uppercase tracking-widest">{metric.label}</span>
          <span class={`text-sm font-black ${getScoreColor(Number(metric.value))}`}>
            {Number(metric.value).toFixed(1)}
          </span>
        </div>
        <div class="h-1.5 w-full bg-zinc-100 dark:bg-zinc-800 rounded-full overflow-hidden">
          <div 
            class={`h-full rounded-full ${Number(metric.value) >= 70 ? 'bg-indigo-500' : 'bg-zinc-400 dark:bg-zinc-600'}`}
            style={`width: ${Math.min(100, Number(metric.value))}%`}
          ></div>
        </div>
      </div>
    ))}
  </div>

  {allMetrics.length === 0 && (
    <div class="py-12 text-center text-zinc-500 font-medium">
      No verified benchmark data available for this entity.
    </div>
  )}

  <div class="mt-10 pt-6 border-t border-zinc-50 dark:border-zinc-800/50 flex items-center justify-between">
    <span class="text-[9px] font-bold text-zinc-400 uppercase tracking-widest">Methodology: Standardized Zero-Shot Prompting</span>
    {umid && (
       <a href={getRouteFromId(umid, 'model')} class="text-[9px] font-black text-indigo-500 uppercase tracking-widest hover:underline">
         Model Details â†’
       </a>
    )}
  </div>
</div>
