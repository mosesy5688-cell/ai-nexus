---
// src/components/Footer.astro
// Sprint 4: Site Navigation Audit - Footer Update
// Pillar VII Trust: Methodology must be prominent

const currentYear = new Date().getFullYear();

// Footer navigation structure
const footerSections = {
  resources: {
    title: "Resources",
    links: [
      { href: "/ranking", text: "Model Rankings" },       // V3.2: Consolidated from /explore
      { href: "/methodology", text: "FNI Methodology" },  // Pillar VII: Trust
      { href: "/reports", text: "AI Reports" },
    ]
  },
  legal: {
    title: "Legal",
    links: [
      { href: "/compliance", text: "Data Compliance" },
      { href: "/about", text: "About Us" },
    ]
  },
  connect: {
    title: "Connect",
    links: [
      { href: "https://github.com/mosesy5688-cell/ai-nexus", text: "GitHub", external: true },
      { href: "#", text: "Contact", email: true },
    ]
  }
};
---

<footer class="bg-gray-900 text-gray-300">
  <div class="container mx-auto px-4 py-8">
    <!-- Footer Grid -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
      
      <!-- Brand Column - V3.1 Phase 7 SEO -->
      <div class="col-span-1">
        <h3 class="text-xl font-bold text-white mb-4">Free2AITools</h3>
        <p class="text-gray-400 text-sm leading-relaxed">
          Open-Source AI Model Selection Hub. Find the best LLM for your needs with our VRAM calculator and one-click deploy guides.
        </p>
        <p class="text-gray-500 text-xs mt-3">
          Powered by the Fair Nexus Index (methodology-based, non-commercial)
        </p>
      </div>
      
      <!-- Resources -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wide mb-4">{footerSections.resources.title}</h4>
        <ul class="space-y-2">
          {footerSections.resources.links.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors text-sm">
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Legal -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wide mb-4">{footerSections.legal.title}</h4>
        <ul class="space-y-2">
          {footerSections.legal.links.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors text-sm">
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Connect -->
      <div>
        <h4 class="text-sm font-semibold text-white uppercase tracking-wide mb-4">{footerSections.connect.title}</h4>
        <ul class="space-y-2">
          {footerSections.connect.links.map(link => (
            <li>
                <a 
                  href={link.href} 
                  class={`text-gray-400 hover:text-white transition-colors text-sm flex items-center gap-2 ${link.email ? 'contact-link' : ''}`}
                  target={link.external ? "_blank" : undefined}
                  rel={link.external ? "noopener noreferrer" : undefined}
                  data-user={link.email ? "compliance" : undefined}
                  data-domain={link.email ? "free2aitools.com" : undefined}
                >
                  {link.text === "GitHub" && (
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                    </svg>
                  )}
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
      
      <!-- Bottom Bar -->
      <div class="border-t border-gray-800 pt-6 flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-gray-400">
          &copy; {currentYear} Free2AITools. An open-source project to help you find the best AI models.
        </p>
        <div class="flex items-center gap-4 text-sm text-gray-400">
          <a href="/methodology" class="hover:text-white transition-colors">How we score models</a>
          <span class="text-gray-600">â€¢</span>
          <a href="/compliance" class="hover:text-white transition-colors">Data Policy</a>
        </div>
      </div>
    </div>
  </footer>
  
  <script>
    /**
     * V16.3: Contact Obfuscation
     * Prevents Cloudflare Email Protection block.
     */
    document.addEventListener('astro:page-load', () => {
      document.querySelectorAll('.contact-link').forEach(link => {
        link.addEventListener('mouseenter', () => {
          const user = (link as HTMLElement).dataset.user;
          const domain = (link as HTMLElement).dataset.domain;
          if (user && domain) {
            (link as HTMLAnchorElement).href = `mailto:${user}@${domain}`;
          }
        });
      });
    });
  </script>