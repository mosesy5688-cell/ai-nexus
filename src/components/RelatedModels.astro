---
/**
 * Related Models Component - V5.0
 * Displays intelligent model recommendations based on multi-factor similarity
 * CES-001: Clean URL format
 */
import { getRelatedModels } from '../lib/enhanced-data';
import { getRecommendationReasons } from '../lib/recommendation-service.js';
import { generateEntityUrl } from '../utils/url-utils.js';

interface Props {
  modelId: string;
  limit?: number;
}

const { modelId, limit = 6 } = Astro.props;
const kv = Astro.locals.runtime?.env?.KV_CACHE;
const relatedModels = await getRelatedModels(modelId, kv, limit);
---

{relatedModels.length > 0 && (
  <section class="related-models">
    <div class="header">
      <h2>Related Models</h2>
      <p class="subtitle">Discovered {relatedModels.length} similar models based on intelligent matching</p>
    </div>
    
    <div class="models-grid">
      {relatedModels.map((model: any) => {
        const reasons = model.similarity_breakdown ? getRecommendationReasons(model.similarity_breakdown) : [];
        const matchPercent = model.similarity_score ? Math.round(model.similarity_score * 100) : 0;
        
        return (
          <article class="model-card">
            <a href={generateEntityUrl(model, 'model')} class="card-link">
              <div class="card-header">
                <h3 class="model-name">{model.name}</h3>
                {model.author && <p class="model-author">by {model.author}</p>}
              </div>
              
              {model.tags && model.tags.length > 0 && (
                <div class="tags">
                  {model.tags.slice(0, 3).map((tag: string) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
              
              {model.similarity_score && (
                <div class="similarity">
                  <div class="similarity-bar-container">
                    <div class="similarity-bar" style={`width: ${matchPercent}%`}></div>
                  </div>
                  <span class="similarity-text">{matchPercent}% match</span>
                </div>
              )}
              
              {reasons.length > 0 && (
                <div class="reasons">
                  {reasons.map((reason: string) => (
                    <span class="reason-badge">{reason}</span>
                  ))}
                </div>
              )}
            </a>
          </article>
        );
      })}
    </div>
  </section>
)}

<style>
  .related-models {
    margin: 3rem 0;
    padding: 2rem;
    background: linear-gradient(to bottom, #f9fafb, #ffffff);
    border-radius: 1rem;
  }
  
  .header {
    margin-bottom: 2rem;
  }
  
  h2 {
    font-size: 1.75rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 0.5rem;
  }
  
  .subtitle {
    font-size: 0.95rem;
    color: #6b7280;
  }
  
  .models-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }
  
  .model-card {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 0.75rem;
    padding: 1.5rem;
    transition: all 0.2s ease;
    position: relative;
  }
  
  .model-card:hover {
    border-color: #3b82f6;
    box-shadow: 0 10px 25px rgba(59, 130, 246, 0.15);
    transform: translateY(-2px);
  }
  
  .card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  
  .card-header {
    margin-bottom: 1rem;
  }
  
  .model-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: #111827;
    margin-bottom: 0.25rem;
  }
  
  .model-card:hover .model-name {
    color: #3b82f6;
  }
  
  .model-author {
    font-size: 0.875rem;
    color: #6b7280;
    margin: 0;
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.625rem;
    background: #f3f4f6;
    color: #4b5563;
    border-radius: 0.375rem;
    font-weight: 500;
  }
  
  .similarity {
    margin: 1rem 0;
  }
  
  .similarity-bar-container {
    width: 100%;
    height: 6px;
    background: #e5e7eb;
    border-radius: 3px;
    overflow: hidden;
    margin-bottom: 0.5rem;
  }
  
  .similarity-bar {
    height: 100%;
    background: linear-gradient(90deg, #3b82f6, #8b5cf6);
    border-radius: 3px;
    transition: width 0.3s ease;
  }
  
  .similarity-text {
    font-size: 0.875rem;
    font-weight: 600;
    color: #6b7280;
  }
  
  .reasons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }
  
  .reason-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.625rem;
    background: linear-gradient(135deg, #e0e7ff, #ddd6fe);
    color: #4f46e5;
    border-radius: 0.375rem;
    font-weight: 600;
  }
  
  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .related-models {
      background: linear-gradient(to bottom, #1f2937, #111827);
    }
    
    .model-card {
      background: #1f2937;
      border-color: #374151;
    }
    
    .model-card:hover {
      border-color: #60a5fa;
      box-shadow: 0 10px 25px rgba(96, 165, 250, 0.15);
    }
    
    h2, .model-name {
      color: #f9fafb;
    }
    
    .subtitle, .model-author, .similarity-text {
      color: #9ca3af;
    }
    
    .tag {
      background: #374151;
      color: #d1d5db;
    }
    
    .similarity-bar-container {
      background: #374151;
    }
  }
</style>
