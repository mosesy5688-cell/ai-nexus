// src/components/ModelCard.astro
const { model, isRisingStar } = Astro.props;

// Use the robust slug from the database, fallback to ID replacement only if necessary
const modelUrl = `/model/${model.slug || model.id.replace(/\//g, '--')}`;
const description = model.description?.replace(/<[^>]*>?/gm, '') || 'No description available.';

function formatNumber(num) {
    if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
    if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
    return num;
}

function getSourceIcon(source) {
    switch(source?.toLowerCase()) {
        case 'huggingface': return 'ü§ó';
        case 'github': return 'üêô';
        case 'pytorch': return 'üî•';
        default: return 'üì¶';
    }
}

function getSourceLabel(source) {
    switch(source?.toLowerCase()) {
        case 'huggingface': return 'HF';
        case 'github': return 'GH';
        case 'pytorch': return 'PT';
        default: return 'UNK';
    }
}
