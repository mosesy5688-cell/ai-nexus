---
// src/components/ModelCard.astro
import type { Model } from '../lib/data';

interface Props {
  model: Model;
}

const { model } = Astro.props;
---

<article class="bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 border border-gray-200 dark:border-gray-700 p-6 flex flex-col justify-between">
  <div>
    <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-2 line-clamp-2">
      {model.name}
    </h2>
    <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
      Task: <span class="font-medium text-gray-700 dark:text-gray-300">{model.task || 'General'}</span>
    </p>
    
    <div class="flex flex-wrap gap-2 mb-4">
      {Array.isArray(model.tags) && model.tags.slice(0, 3).map(tag => (
        <span class="text-xs font-semibold px-3 py-1 bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 rounded-full">
          {tag}
        </span>
      ))}
    </div>
  </div>

  <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-700 flex justify-between items-center">
    <span class="text-sm text-gray-500 dark:text-gray-400">
      By {model.author || 'Community'}
    </span>
    <a 
      href={model.source} 
      target="_blank" 
      rel="noopener noreferrer"
      class="bg-blue-600 text-white text-sm font-medium py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors shadow-md"
    >
      Go to Model
    </a>
  </div>
</article>