---
// src/components/ModelCard.astro
import type { Model } from '../lib/data';

interface Props {
  model: Model;
}

const { model } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 border border-gray-200 dark:border-gray-700 p-6 flex flex-col justify-between" data-model-id={model.id}>
  <div class="flex-grow">
    <div class="flex justify-between items-start mb-2">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white line-clamp-2 pr-2">
        {model.name}
      </h2>
      {model.sourcePlatform && (
        <span class={`text-xs font-bold px-2 py-1 rounded-full whitespace-nowrap ${model.sourcePlatform === 'Civitai' ? 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200' : 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200'}`}>
          {model.sourcePlatform}
        </span>
      )}
    </div>
    <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
      Task: <span class="font-medium text-gray-700 dark:text-gray-300 capitalize">{model.task?.replace(/-/g, ' ') || 'General'}</span>
    </p>
    <p class="text-sm text-gray-600 dark:text-gray-400 mb-4 line-clamp-3 h-16">
      {model.description || 'No description available.'}
    </p>
    
    <div class="flex flex-wrap gap-2 mb-4">
      {Array.isArray(model.tags) && model.tags.slice(0, 3).map(tag => (
        <span class="text-xs font-semibold px-3 py-1 bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 rounded-full">
          {tag}
        </span>
      ))}
    </div>
  </div>

  <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-700 flex justify-between items-center">
    <span class="text-sm text-gray-500 dark:text-gray-400">
      By {model.author || 'Community'}
    </span>
    <button
      type="button"
      class="view-details-btn bg-blue-600 text-white text-sm font-medium py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors shadow-md"
    >
      View Details
    </button>
  </div>
</div>