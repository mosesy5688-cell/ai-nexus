---
interface Props {
  space: any;
}

const { space } = Astro.props;
import FullReadmeSection from '../model-detail/FullReadmeSection.astro';
---

<div class="space-y-12">
  {/* V16.99: Demo Preview Decommissioned per Core Audit - Focus on Depth & Documentation */}
  
  <!-- Section: README -->
  <div class="relative">
     <div class="absolute -left-6 top-10 w-1 bg-indigo-500/20 h-24 rounded-full blur-sm"></div>
     <FullReadmeSection 
       bodyContent={space.html_readme || space.body_content || space.description}
       type="space"
       initialCollapsed={false}
       maxPreviewLength={5000}
     />
  </div>
</div>
