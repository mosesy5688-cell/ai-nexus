---
/**
 * Weekly Trending Section V4.8.1
 * Displays L8 precomputed trending models for weekly reports
 * Real-time data from R2 cache
 */

// Fetch trending data from R2 cache
let trendingData: {
    generated_at: string;
    results: { 
        id: string; 
        name: string; 
        author: string;
        downloads: number;
        likes: number;
        fni_score: number;
        trending_score: number;
    }[];
} | null = null;

try {
    const runtime = Astro.locals.runtime;
    if (runtime?.env?.R2_ASSETS) {
        const r2 = runtime.env.R2_ASSETS;
        const trendingFile = await r2.get('cache/trending.json');
        if (trendingFile) {
            trendingData = await trendingFile.json() as any;
        }
    }
} catch (e) {
    console.error('[WeeklyTrendingSection] Error:', e);
}

const hasTrending = trendingData && trendingData.results && trendingData.results.length > 0;
const topModels = hasTrending ? trendingData.results.slice(0, 10) : [];
const generatedAt = trendingData?.generated_at ? new Date(trendingData.generated_at) : null;
---

<section class="weekly-trending bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg mb-8">
    <div class="header">
        <h2 class="title">ðŸ“ˆ This Week's Trending Models</h2>
        {generatedAt && (
            <span class="generated-date">
                Updated: {generatedAt.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
            </span>
        )}
    </div>
    
    {hasTrending ? (
        <div class="trending-list">
            {topModels.map((model, index) => (
                <a href={`/model/${model.id}`} class="trending-item">
                    <span class="rank">#{index + 1}</span>
                    <div class="model-info">
                        <span class="model-name">{model.name}</span>
                        <span class="model-author">{model.author}</span>
                    </div>
                    <div class="stats">
                        {model.fni_score > 0 && (
                            <span class={`fni ${model.fni_score >= 70 ? 'high' : model.fni_score >= 50 ? 'mid' : 'low'}`}>
                                FNI {model.fni_score.toFixed(0)}
                            </span>
                        )}
                        <span class="downloads">
                            â†“{model.downloads >= 1000 ? (model.downloads / 1000).toFixed(1) + 'K' : model.downloads}
                        </span>
                    </div>
                </a>
            ))}
        </div>
    ) : (
        <div class="no-data">
            <p>Trending data unavailable</p>
            <span class="hint">Data will be generated at next L8 cycle</span>
        </div>
    )}
    
    <div class="footer">
        <a href="/explore?sort=trending" class="view-all">View All Trending Models â†’</a>
    </div>
</section>

<style>
    .weekly-trending {
        border: 1px solid rgba(99, 102, 241, 0.2);
    }
    
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }
    
    .title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--gray-900);
        margin: 0;
    }
    
    .generated-date {
        font-size: 0.75rem;
        color: var(--gray-500);
        background: rgba(99, 102, 241, 0.1);
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
    }
    
    .trending-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .trending-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.75rem 1rem;
        background: var(--gray-50);
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.2s;
    }
    
    .trending-item:hover {
        background: rgba(99, 102, 241, 0.1);
        transform: translateX(4px);
    }
    
    .rank {
        font-weight: 700;
        color: var(--indigo-600);
        font-size: 0.875rem;
        min-width: 2.5rem;
    }
    
    .model-info {
        flex: 1;
        min-width: 0;
    }
    
    .model-name {
        display: block;
        font-weight: 600;
        color: var(--gray-900);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .model-author {
        font-size: 0.75rem;
        color: var(--gray-500);
    }
    
    .stats {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }
    
    .fni {
        font-size: 0.7rem;
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
        font-weight: 600;
    }
    
    .fni.high { background: rgba(34, 197, 94, 0.2); color: #16a34a; }
    .fni.mid { background: rgba(234, 179, 8, 0.2); color: #ca8a04; }
    .fni.low { background: rgba(239, 68, 68, 0.2); color: #dc2626; }
    
    .downloads {
        font-size: 0.75rem;
        color: var(--gray-500);
    }
    
    .footer {
        margin-top: 1.5rem;
        text-align: center;
    }
    
    .view-all {
        color: var(--indigo-600);
        text-decoration: none;
        font-weight: 600;
    }
    
    .view-all:hover {
        text-decoration: underline;
    }
    
    .no-data {
        text-align: center;
        padding: 2rem;
        color: var(--gray-500);
    }
    
    .hint {
        font-size: 0.75rem;
        color: var(--gray-400);
    }
    
    :root {
        --gray-50: #f9fafb;
        --gray-400: #9ca3af;
        --gray-500: #6b7280;
        --gray-900: #111827;
        --indigo-600: #4f46e5;
    }
    
    :global(.dark) .title { color: #f3f4f6; }
    :global(.dark) .trending-item { background: rgba(31, 41, 55, 0.8); }
    :global(.dark) .model-name { color: #f3f4f6; }
</style>
