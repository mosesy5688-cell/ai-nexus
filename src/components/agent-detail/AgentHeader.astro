---
/**
 * AgentHeader Component - Phase B P2
 * Displays agent name, author, type badge, and GitHub stars
 * 
 * @component
 */

interface Props {
  name: string;
  author: string;
  description?: string;
  sourceUrl?: string;
  stars?: number;
  agentType?: string;
}

const { name, author, description, sourceUrl, stars, agentType = 'agent' } = Astro.props;

// Agent type badge colors
const typeColors: Record<string, { bg: string; text: string }> = {
  'framework': { bg: 'bg-purple-100 dark:bg-purple-900/30', text: 'text-purple-700 dark:text-purple-300' },
  'mcp-server': { bg: 'bg-blue-100 dark:bg-blue-900/30', text: 'text-blue-700 dark:text-blue-300' },
  'autonomous': { bg: 'bg-orange-100 dark:bg-orange-900/30', text: 'text-orange-700 dark:text-orange-300' },
  'workflow': { bg: 'bg-green-100 dark:bg-green-900/30', text: 'text-green-700 dark:text-green-300' },
  'agent': { bg: 'bg-pink-100 dark:bg-pink-900/30', text: 'text-pink-700 dark:text-pink-300' },
};

const colors = typeColors[agentType] || typeColors['agent'];
---

<header class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-md border border-gray-200 dark:border-gray-700">
  <div class="flex items-start justify-between gap-4 flex-wrap">
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-3 mb-2">
        <span class="text-3xl">ðŸ¤–</span>
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white truncate">
          {name}
        </h1>
      </div>
      
      <div class="flex items-center gap-3 text-sm text-gray-600 dark:text-gray-400 mb-4">
        <span>by <strong class="text-gray-900 dark:text-white">{author}</strong></span>
        <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${colors.bg} ${colors.text}`}>
          {agentType}
        </span>
      </div>
      
      {description && (
        <p class="text-gray-700 dark:text-gray-300 line-clamp-3 max-w-2xl">
          {description}
        </p>
      )}
    </div>
    
    <div class="flex items-center gap-4">
      {stars && stars > 0 && (
        <div class="flex items-center gap-1 text-yellow-600 dark:text-yellow-400 font-medium">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <span>{stars.toLocaleString()}</span>
        </div>
      )}
      
      {sourceUrl && (
        <a 
          href={sourceUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-lg font-medium hover:bg-gray-700 dark:hover:bg-gray-100 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          View Source
        </a>
      )}
    </div>
  </div>
</header>
