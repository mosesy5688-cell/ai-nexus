---
interface Props {
  agent: any;
}

const { agent } = Astro.props;
import TechSpecsFull from '../entity/TechSpecsFull.astro';

// Mock Config YAML
const agentName = agent?.name || agent?.canonical_name || 'unknown-agent';
const mockConfig = `agent:
  name: "${agentName}"
  framework: "${agent.framework || 'unknown'}"
  version: "1.0.0"
capabilities:
  - web_search
  - code_interpreter
`;
---

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
   <!-- Left Column: Content & Config -->
   <div class="lg:col-span-2 space-y-8">
      <!-- Description / Body -->
      {agent.body_content ? (
         <section class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
               <span>üìñ</span> Description
            </h2>
            <div class="prose dark:prose-invert max-w-none text-gray-700 dark:text-gray-300">
               <Fragment set:html={agent.body_content} />
            </div>
         </section>
      ) : (
         <section class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
            <p class="text-gray-500 italic">No detailed description available.</p>
         </section>
      )}

      <!-- Configuration (V15 Spec) -->
      <section class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
         <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span>‚öôÔ∏è</span> Configuration
         </h2>
         <div class="relative group">
            <pre class="bg-black text-green-400 p-5 rounded-xl font-mono text-xs overflow-x-auto border border-gray-800 scrollbar-thin scrollbar-thumb-gray-800">{mockConfig}</pre>
            <button 
              class="absolute top-3 right-3 px-3 py-1 bg-white hover:bg-gray-200 text-black text-[10px] font-bold rounded-md opacity-0 group-hover:opacity-100 transition-all active:scale-95 shadow-lg border border-gray-200"
              onclick={`navigator.clipboard.writeText(\`${mockConfig}\`).then(() => { this.textContent = 'Copied!'; setTimeout(() => this.textContent = 'Copy', 2000); })`}
            >
              Copy
            </button>
         </div>
      </section>
      
      <!-- Installation -->
      <section class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
         <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span>üíª</span> Installation
         </h2>
         <div class="relative group">
            <div class="bg-black text-gray-300 p-5 rounded-xl font-mono text-sm border border-gray-800 flex justify-between items-center pr-16">
               <code id="agent-install-cmd">pip install {(agent?.name || agent?.canonical_name || 'agent').toLowerCase().replace(/ /g, '-')}</code>
            </div>
            <button 
              class="absolute top-3 right-3 px-3 py-1 bg-white hover:bg-gray-200 text-black text-[10px] font-bold rounded-md opacity-0 group-hover:opacity-100 transition-all active:scale-95 shadow-lg border border-gray-200"
              onclick={`navigator.clipboard.writeText(document.getElementById('agent-install-cmd').innerText).then(() => { this.textContent = 'Copied!'; setTimeout(() => this.textContent = 'Copy', 2000); })`}
            >
              Copy
            </button>
         </div>
      </section>
   </div>

   <!-- Right Column: Specs -->
   <div class="lg:col-span-1">
       <TechSpecsFull entity={agent} type="agent" />
   </div>
</div>
