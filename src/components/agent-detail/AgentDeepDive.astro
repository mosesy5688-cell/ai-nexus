---
interface Props {
  agent: any;
}

const { agent } = Astro.props;
import FullReadmeSection from '../model-detail/FullReadmeSection.astro';
import TechSpecsFull from '../entity/TechSpecsFull.astro';
import QuickCommands from '../common/QuickCommands.astro';
import ModelGallery from '../model-detail/ModelGallery.astro';
import MarkdownRenderer from '../model-detail/MarkdownRenderer.astro';

// Mock Config YAML
const agentName = agent?.name || agent?.canonical_name || 'unknown-agent';
const mockConfig = `agent:
  name: "${agentName}"
  framework: "${agent.framework || 'unknown'}"
  version: "1.0.0"
capabilities:
  - web_search
  - code_interpreter
`;
---

   <div class="lg:col-span-3 space-y-8">
      <!-- Full README / Agent Profile -->
      <FullReadmeSection 
        bodyContent={agent.body_content || agent.description}
        type="agent"
        maxPreviewLength={5000}
      />

      {/* V16.2: Visual & Developer Enhancements */}
      <ModelGallery content={agent.body_content || agent.description} title="Agent Framework Visuals" />
      <QuickCommands entity={agent} type="agent" />


      {/* V16.2: Real Data Deep Dive */}
      {agent.installation && (
        <section class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span>üíª</span> Installation
          </h2>
          <MarkdownRenderer content={agent.installation} />
        </section>
      )}

      {agent.configuration && (
        <section class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span>‚öôÔ∏è</span> Configuration
          </h2>
          <MarkdownRenderer content={agent.configuration} />
        </section>
      )}

      {agent.usage && (
        <section class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span>üöÄ</span> Usage Examples
          </h2>
          <MarkdownRenderer content={agent.usage} />
        </section>
      )}

      {agent.license_full && (
        <section class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
            <span>üìÑ</span> License Details
          </h2>
          <div class="bg-gray-50 dark:bg-gray-900/50 p-4 rounded-lg text-xs text-gray-600 dark:text-gray-400 font-mono whitespace-pre-wrap border border-gray-100 dark:border-gray-800">
            {agent.license_full}
          </div>
        </section>
      )}
   </div>
