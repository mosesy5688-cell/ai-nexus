---
/**
 * Related Models Section Component
 * Per V5.2.1 Art 6.1 (3+ Internal Links)
 */

interface Model {
  id: string;
  slug?: string;
  name: string;
  author?: string;
  fni_score?: number;
  cover_image_url?: string;
}

interface Props {
  models: Model[];
  title?: string;
}

const { models = [], title = "Similar Models" } = Astro.props;
---

{models.length > 0 && (
  <section class="related-models-section">
    <h3 class="section-title">{title}</h3>
    <div class="related-models-grid">
      {models.slice(0, 6).map((model) => {
        const slug = model.slug || model.id.replace(/\//g, '--');
        return (
          <a href={`/model/${slug}`} class="related-model-card">
            <div class="card-image">
              {model.cover_image_url ? (
                <img 
                  src={model.cover_image_url} 
                  alt={model.name}
                  loading="lazy"
                  width="120"
                  height="80"
                />
              ) : (
                <div class="placeholder-image">
                  <span>ðŸ¤–</span>
                </div>
              )}
            </div>
            <div class="card-content">
              <span class="model-name">{model.name}</span>
              {model.author && <span class="model-author">by {model.author}</span>}
              {model.fni_score && (
                <span class="model-fni">FNI: {Math.round(model.fni_score)}</span>
              )}
            </div>
          </a>
        );
      })}
    </div>
  </section>
)}

<style>
  .related-models-section {
    margin-top: 3rem;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.05), rgba(147, 51, 234, 0.05));
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--text-primary, #fff);
  }

  .related-models-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
  }

  .related-model-card {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
  }

  .related-model-card:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(59, 130, 246, 0.5);
    transform: translateY(-2px);
  }

  .card-image {
    width: 100%;
    height: 80px;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 0.75rem;
    background: rgba(0, 0, 0, 0.2);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .model-name {
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--text-primary, #fff);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .model-author {
    font-size: 0.8rem;
    color: var(--text-secondary, #9ca3af);
  }

  .model-fni {
    font-size: 0.75rem;
    color: var(--accent, #60a5fa);
    font-weight: 500;
  }

  @media (max-width: 640px) {
    .related-models-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
