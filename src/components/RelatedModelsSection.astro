---
/**
 * Related Models Section Component
 * Per V5.2.1 Art 6.1 (3+ Internal Links)
 */

interface Model {
  id: string;
  slug?: string;
  name: string;
  author?: string;
  fni_score?: number;
  cover_image_url?: string;
}

interface Props {
  models: Model[];
  title?: string;
}

const { models = [], title = "Similar Models" } = Astro.props;
---

{models.length > 0 && (
  <section class="related-models-section">
    <h3 class="section-title">{title}</h3>
    <div class="related-models-grid">
      {models.slice(0, 6).map((model) => {
        const slug = model.slug || model.id.replace(/\//g, '--');
        return (
          <a href={`/model/${slug}`} class="related-model-card group p-2.5 sm:p-3 border-b border-zinc-100 dark:border-zinc-800 hover:bg-zinc-50 dark:hover:bg-zinc-800/50 transition-colors flex flex-col gap-1.5">
            <div class="flex items-center justify-between gap-2">
              <span class="text-xs sm:text-sm font-bold text-zinc-900 dark:text-zinc-100 group-hover:text-blue-500 transition-colors truncate">{model.name}</span>
              {model.fni_score && (
                <span class="text-emerald-600 dark:text-emerald-400 font-black text-[9px] sm:text-[10px] flex-shrink-0">FNI {Math.round(model.fni_score)}</span>
              )}
            </div>
            {model.author && <span class="text-[10px] sm:text-[11px] text-zinc-400 font-medium truncate italic">by {model.author}</span>}
          </a>
        );
      })}
    </div>
  </section>
)}

<style>
  .related-models-section {
    margin-top: 3rem;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.05), rgba(147, 51, 234, 0.05));
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--text-primary, #fff);
  }

  .related-models-grid {
    display: flex;
    flex-direction: column;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
    dark:border-color: rgba(255, 255, 255, 0.05);
  }

  .related-model-card {
    text-decoration: none;
    color: inherit;
  }
</style>
