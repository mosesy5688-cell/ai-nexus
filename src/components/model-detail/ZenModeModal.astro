---
/**
 * ZenModeModal.astro
 * UI-X: Full-screen reader view
 */
import MarkdownRenderer from './MarkdownRenderer.astro';

interface Props {
  content: string;
  displayTitle: string;
}

const { content, displayTitle } = Astro.props;
---

<div id="zen-modal" class="zen-mode-overlay">
  <div class="fixed top-0 left-0 right-0 p-4 flex justify-between items-center bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-100 dark:border-gray-800 z-50">
    <div class="flex items-center gap-2">
      <span class="text-indigo-600 dark:text-indigo-400 font-bold">ZEN MODE</span>
      <span class="text-xs text-gray-400 dark:text-gray-500">â€¢ {displayTitle}</span>
    </div>
    <button id="close-zen" class="p-2 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-full transition-colors">
      <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
  <div class="zen-mode-content">
    <MarkdownRenderer content={content} />
  </div>
</div>

<style>
  .zen-mode-overlay {
    position: fixed;
    inset: 0;
    z-index: 9999;
    background: rgba(255, 255, 255, 0.98);
    display: none;
    overflow-y: auto;
  }

  .dark .zen-mode-overlay {
    background: rgba(17, 24, 39, 0.98);
  }

  .zen-mode-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem 8rem;
  }
</style>
