---
// src/components/model-detail/ModelHeader.astro - V12 Share Buttons
import EntityNotice from '../entity/EntityNotice.astro';
// V16.2: Removed CompareButton (deprecated)
import ShareButtons from '../common/ShareButtons.astro';

interface Props {
  modelName: string;
  modelId: string;
  entityType?: string;
  entityIcon?: string;
  entityLabel?: string;
  verified?: boolean;
  author?: string;
  lastUpdated?: string;
  seoDescription?: string;
  cleanDescription?: string;
  fniScore?: number;
  fniPercentile?: number;
}

const {
  modelName,
  modelId,
  entityType = 'model',
  entityIcon = 'üß†',
  entityLabel = 'Model',
  verified = false,
  author = 'Unknown',
  lastUpdated,
  seoDescription,
  cleanDescription,
  fniScore,
  fniPercentile
} = Astro.props;
---

<header class="mb-8">
  <!-- V5.2.1: Simplified layout without cover image -->
  <div class="flex flex-col gap-4">
      <!-- V4.9: Entity Type Badge (Art.X-Entity) -->
      <div class="mb-2">
        <span class="inline-flex items-center gap-1.5 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 px-3 py-1 rounded-full text-xs font-medium border border-gray-200 dark:border-gray-700">
          <span role="img" aria-label={entityType}>{entityIcon}</span>
          {entityLabel}
        </span>
      </div>
      
      <!-- V4.9: Entity Notice for non-Model entities (Content Activation P0) -->
      <EntityNotice entityType={entityType} entityLabel={entityLabel} />
      
      <div class="flex flex-wrap items-center gap-3 mb-2">
        <h1 class="text-3xl lg:text-4xl font-extrabold text-gray-900 dark:text-white tracking-tight">
          {modelName}
        </h1>
        {fniScore !== undefined && (
          <div class="flex items-center gap-1.5 px-3 py-1 bg-indigo-600 text-white rounded-lg shadow-sm animate-pulse-subtle">
            <span class="text-[10px] font-bold uppercase tracking-wider">FNI</span>
            <span class="text-xl font-black">{fniScore}</span>
            {fniPercentile !== undefined && (
              <span class="text-[10px] opacity-80 border-l border-white/30 pl-1.5">Top {100 - Math.round(fniPercentile)}%</span>
            )}
          </div>
        )}
        {verified && (
          <span class="inline-flex items-center gap-1 text-blue-600 bg-blue-50 dark:bg-blue-900/30 dark:text-blue-300 px-2 py-0.5 rounded text-xs font-semibold border border-blue-100 dark:border-blue-800" title="Verified Organization">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Verified
          </span>
        )}
      </div>
      
      <p class="text-gray-500 dark:text-gray-400 mb-6 flex items-center gap-2 text-lg">
        by <span class="font-semibold text-gray-900 dark:text-white">{author}</span>
      </p>
      
      <!-- V15.0: "What is this?" (One-liner Description) -->
      {(seoDescription || cleanDescription) && (
        <p class="text-xl text-gray-700 dark:text-gray-200 mb-8 leading-relaxed font-medium bg-gradient-to-r from-gray-50 to-transparent dark:from-gray-800/30 dark:to-transparent p-4 border-l-4 border-indigo-600 rounded-r-xl shadow-sm">
          {seoDescription || cleanDescription || 'Innovative AI technology solution.'}
        </p>
      )}

      <div class="flex flex-wrap gap-4 text-sm text-gray-500 dark:text-gray-400 mt-auto items-center">
        {lastUpdated && (
          <span>üïê Updated {new Date(lastUpdated).toLocaleDateString()}</span>
        )}

        <ShareButtons title={modelName} description={seoDescription || cleanDescription || ''} />
      </div>
    </div>
  </div>
</header>
