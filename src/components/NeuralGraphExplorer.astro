---
/**
 * Neural Graph Explorer V4.8.1
 * Art.11-G: Version-locked static graph from neural_graph.json
 * NO DB fallback, NO dynamic computation
 */

interface Props {
    currentModelId?: string;
}

const { currentModelId } = Astro.props;

// Fetch neural graph from R2 cache (Art.11-G: version-locked)
let graphData: {
    version: string;
    nodes: { id: string; name: string; author: string; arch: string; fni: number; local: boolean }[];
    links: { source: string; target: string; type: string; weight: number }[];
} | null = null;

let graphVersion = null;
let relatedNodes: typeof graphData.nodes = [];

try {
    const runtime = Astro.locals.runtime;
    if (runtime?.env?.R2_ASSETS) {
        const r2 = runtime.env.R2_ASSETS;
        const graphFile = await r2.get('cache/neural_graph.json');
        if (graphFile) {
            graphData = await graphFile.json() as any;
            graphVersion = graphData?.version;
            
            // Find related nodes for current model
            if (currentModelId && graphData?.links) {
                const relatedIds = new Set<string>();
                for (const link of graphData.links) {
                    if (link.source === currentModelId) {
                        relatedIds.add(link.target);
                    } else if (link.target === currentModelId) {
                        relatedIds.add(link.source);
                    }
                }
                
                relatedNodes = (graphData.nodes || [])
                    .filter(n => relatedIds.has(n.id))
                    .slice(0, 6);
            }
        }
    }
} catch (e) {
    console.error('[NeuralGraphExplorer] Error:', e);
}

const hasGraph = graphData && graphData.nodes && graphData.nodes.length > 0;
const hasRelatedNodes = relatedNodes.length > 0;
---

<section class="neural-graph-explorer">
    <div class="header">
        <h3 class="title">
            üï∏Ô∏è Neural Graph Explorer
        </h3>
        {graphVersion && (
            <span class="version-badge">v{graphVersion}</span>
        )}
    </div>
    
    {hasGraph ? (
        <div class="graph-content">
            {hasRelatedNodes ? (
                <>
                    <p class="subtitle">Related Models in the Graph</p>
                    <div class="related-grid">
                        {relatedNodes.map(node => (
                            <a href={`/model/${node.id}`} class="related-card">
                                <div class="card-header">
                                    <span class="model-name">{node.name}</span>
                                    {node.local && <span class="local-badge">Local</span>}
                                </div>
                                <div class="card-meta">
                                    <span class="author">{node.author}</span>
                                    <span class="arch">{node.arch}</span>
                                </div>
                                {node.fni > 0 && (
                                    <div class="fni-score">
                                        FNI: <span class={`score ${node.fni >= 70 ? 'high' : node.fni >= 50 ? 'mid' : 'low'}`}>
                                            {node.fni.toFixed(1)}
                                        </span>
                                    </div>
                                )}
                            </a>
                        ))}
                    </div>
                </>
            ) : (
                <div class="graph-stats">
                    <p class="subtitle">Graph Overview</p>
                    <div class="stats-row">
                        <div class="stat">
                            <span class="stat-value">{graphData.nodes.length}</span>
                            <span class="stat-label">Models</span>
                        </div>
                        <div class="stat">
                            <span class="stat-value">{graphData.links.length}</span>
                            <span class="stat-label">Connections</span>
                        </div>
                    </div>
                    <a href="/explore" class="explore-link">Explore Full Graph ‚Üí</a>
                </div>
            )}
        </div>
    ) : (
        <div class="no-data">
            <p>Graph data unavailable</p>
            <span class="hint">Data will be generated at next L8 cycle</span>
        </div>
    )}
</section>

<style>
