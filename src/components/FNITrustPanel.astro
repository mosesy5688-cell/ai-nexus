          </div>
          <div class="h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-blue-400 to-blue-600 rounded-full transition-all duration-500" style={`width: ${pPercent}%`}></div>
          </div>
        </div>

        <!-- Velocity -->
        <div>
          <div class="flex justify-between text-xs mb-1">
            <span class="text-gray-600 dark:text-gray-400">ğŸš€ Velocity (V)</span>
            <span class="font-semibold text-green-600">{fniV.toFixed(0)}</span>
          </div>
          <div class="h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-green-400 to-green-600 rounded-full transition-all duration-500" style={`width: ${vPercent}%`}></div>
          </div>
        </div>

        <!-- Credibility -->
        <div>
          <div class="flex justify-between text-xs mb-1">
            <span class="text-gray-600 dark:text-gray-400">ğŸ›¡ï¸ Credibility (C)</span>
            <span class="font-semibold text-purple-600">{fniC.toFixed(0)}</span>
          </div>
          <div class="h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-purple-400 to-purple-600 rounded-full transition-all duration-500" style={`width: ${cPercent}%`}></div>
          </div>
        </div>

        <!-- Utility (V3.3 Data Expansion) -->
