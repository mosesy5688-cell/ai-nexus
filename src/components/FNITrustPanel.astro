  </div>

  <div class="grid md:grid-cols-2 gap-6">
    <!-- Left: Score & Radar -->
    <div class="text-center">
      <!-- Big Score -->
      <div class="mb-4">
        <div class="text-5xl font-black text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
          {fniScore.toFixed(1)}
        </div>
        <div class="text-sm text-gray-500 dark:text-gray-400 mt-1">
          Top {100 - fniPercentile}% Overall Impact
        </div>
      </div>

      <!-- Simple Bar Chart -->
      <div class="space-y-3 text-left">
        <!-- Popularity -->
