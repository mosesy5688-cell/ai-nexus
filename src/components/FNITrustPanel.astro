---
/**
 * FNI Trust Panel Component
 * Constitution V3.3 Pillar VII: Fair Index Standard
 */

interface Props {
  fniScore: number;
  fniPercentile: number;
  fniP: number;
  fniV: number;
  fniC: number;
  fniU?: number;
  fniCommentary?: string;
  fniCalculatedAt?: string;
  modelName: string;
  modelId?: string;
}

const { 
  fniScore = 0, 
  fniPercentile = 0, 
  fniP = 0, 
  fniV = 0, 
  fniC = 0,
  fniU = 0,
  fniCommentary = '',
  fniCalculatedAt = '',
  modelName = '',
  modelId = ''
} = Astro.props;

// Calculate bar chart percentages
const maxScore = 100;
const pPercent = (fniP / maxScore) * 100;
const vPercent = (fniV / maxScore) * 100;
const cPercent = (fniC / maxScore) * 100;
const uPercent = (fniU / maxScore) * 100;

// Format date
const formattedDate = fniCalculatedAt 
  ? new Date(fniCalculatedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })
  : 'Not calculated';
---

<div class="fni-trust-panel bg-white dark:bg-gray-800 rounded-xl p-6 shadow-md border border-gray-200 dark:border-gray-700">
  <!-- Header -->
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-lg font-bold text-gray-900 dark:text-white flex items-center gap-2">
      <span class="text-2xl">âš–ï¸</span>
      Free2AI Nexus Index
    </h3>
    <a href="/methodology" class="text-sm text-blue-600 dark:text-blue-400 hover:underline">
      Methodology â†’
    </a>
