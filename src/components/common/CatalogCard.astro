---
// src/components/common/CatalogCard.astro
// Refined Professional SSR Card for Entity Catalogs
// V17.4: Zero-Entropy Compliant (Clean Tech)
// V19.5: High-Utility Decision Tool (Identity + Reliability + Capability)

import { generateEntityUrl } from '../../utils/url-utils.js';
import { extractAuthor, getSourceMetadata, isActive as checkActive } from '../../utils/entity-utils.js';
import FNIBadge from '../ranking/FNIBadge.astro';

const { item, type = 'model', isRisingStar = false } = Astro.props;

// Normalization Logic for SSR
const id = item.id || item.slug || item.umid || '';
const displayTitle = item.name || id.split('/').pop()?.replace(/--/g, '/') || 'Untitled Entity';
const author = extractAuthor(id, item.author || item.creator || item.organization);
const description = item.description || item.summary || item.seo_summary || 'Structural intelligence indexing in progress...';

// Source & Reliability Vitals
const source = getSourceMetadata(id || item.source);
const active = checkActive(item.last_updated || item.lastModified);

// Routing logic - V5.0 Clean Rails
const link = generateEntityUrl(item, type);

const fni = Math.round(item.fni_score || 0);
const fniPercentile = item.fni_percentile;

// V3.1 Phase 4: Parse extended metadata for Models
let meta = {};
try { 
    meta = typeof item.meta_json === 'string' ? JSON.parse(item.meta_json || '{}') : (item.meta_json || {}); 
} catch (e) { meta = {}; }
const ext = meta.extended || {};

// V3.1 Phase 4: VRAM Calculation (params_billions ‚Üí VRAM estimate)
const params = ext.params_billions || 0;
const hasQuant = (ext.quantizations?.length || 0) > 0;
const vram = params ? Math.ceil(hasQuant ? (params * 0.6 + 2) : (params * 2.2 + 4)) : null;
const sizeTag = params ? (params >= 1 ? `${params}B` : `${Math.round(params*1000)}M`) : null;

// Parse Tags
const tags = (typeof item.tags === 'string' ? JSON.parse(item.tags || '[]') : (item.tags || [])).slice(0, 2);

// Color Mapping - Professional Muted Palette
const typeColors = {
    model: 'bg-indigo-50 dark:bg-indigo-900/30 text-indigo-600 dark:text-indigo-400',
    agent: 'bg-purple-50 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400',
    dataset: 'bg-sky-50 dark:bg-sky-900/30 text-sky-600 dark:text-sky-400',
    tool: 'bg-emerald-50 dark:bg-emerald-900/30 text-emerald-600 dark:text-emerald-400',
    paper: 'bg-amber-50 dark:bg-amber-900/30 text-amber-600 dark:text-amber-400',
    space: 'bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400',
};
const typeBadgeColor = typeColors[type] || 'bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400';
const typeLabel = (item.pipeline_tag || item.primary_category || type).replace(/-/g, ' ');

function formatNumber(num) {
    if (!num) return 0;
    if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
    if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
    return num;
}
---

<a href={link} class="entity-card group p-5 bg-white dark:bg-zinc-900 rounded-2xl hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-zinc-800 hover:border-indigo-500/50 block h-full flex flex-col hover:-translate-y-1">
    <div class="flex items-center justify-between mb-3">
         <div class="flex items-center gap-2">
            <span class={`text-[10px] font-black uppercase tracking-widest px-1.5 py-0.5 rounded ${typeBadgeColor}`}>{typeLabel}</span>
            <div class="flex items-center gap-1.5 text-[10px] text-gray-500 dark:text-zinc-500 font-black uppercase tracking-widest">
                <span title={source.label}>{source.icon}</span>
                {active && (
                    <span class="w-1.5 h-1.5 rounded-full bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.6)] animate-pulse" title="Active"></span>
                )}
            </div>
            {isRisingStar && (
                <span class="text-[10px] bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-300 px-2 py-0.5 rounded-full font-black animate-pulse">
                    üî• Rising
                </span>
            )}
         </div>
         {fni > 0 && <FNIBadge fniScore={fni} fniPercentile={fniPercentile} />}
    </div>
    
    <!-- Hardware Vitals (Models Only) -->
    {(sizeTag || vram) && type === 'model' && (
        <div class="flex flex-wrap gap-2 mb-3">
            {sizeTag && (
                <span class="text-[10px] font-mono font-bold px-1.5 py-0.5 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 rounded">
                    {sizeTag}
                </span>
            )}
            {vram && (
                <span class={`text-[10px] font-bold px-1.5 py-0.5 rounded ${vram <= 12 ? 'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300' : vram <= 24 ? 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-300' : 'bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300'}`}>
                    üíæ {vram}GB VRAM
                </span>
            )}
        </div>
    )}

    <h3 class="text-sm font-black text-gray-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors line-clamp-2 mt-1 mb-1 tracking-tight" title={displayTitle}>
        {displayTitle}
    </h3>
    
    <p class="text-[11px] text-gray-400 dark:text-zinc-500 mb-3 uppercase tracking-[0.15em] font-black">by {author}</p>
    
    <p class="text-sm text-gray-600 dark:text-zinc-400 line-clamp-3 mb-4 flex-grow leading-relaxed">
        {description}
    </p>

    <!-- Footer: Tags + Basic Stats -->
    <div class="flex items-center justify-between pt-4 border-t border-gray-50 dark:border-zinc-800/50">
        <div class="flex flex-wrap gap-1.5">
            {tags.map(tag => (
                <span class="text-[9px] font-black uppercase tracking-wider px-1.5 py-0.5 bg-gray-50 dark:bg-zinc-800 text-gray-500 dark:text-zinc-500 rounded border border-gray-100 dark:border-zinc-700/50">
                    {tag}
                </span>
            ))}
        </div>
        <div class="flex items-center gap-3 text-[10px] font-black text-gray-400 uppercase tracking-widest leading-none">
            <div class="flex items-center gap-1" title="Downloads/Usage">
                <span>üì•</span>
                <span>{formatNumber(item.downloads || item.download_count)}</span>
            </div>
            <div class="flex items-center gap-1" title="Likes">
                <span>‚ù§Ô∏è</span>
                <span>{formatNumber(item.likes || item.likes_count)}</span>
            </div>
        </div>
    </div>
</a>

