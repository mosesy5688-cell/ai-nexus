---
/**
 * ListingControls Component - V16.9.22
 * Shared search, sort, and layout for all entity catalogs
 */
interface Props {
  type: string;
  placeholder?: string;
  searchId?: string;
  sortId?: string;
}

const { 
  type, 
  placeholder = `Search ${type}s...`, 
  searchId = `${type}s-search`,
  sortId = 'sort-by'
} = Astro.props;
---

