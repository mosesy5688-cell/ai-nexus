---
/**
 * EntityHeader - V15.0 Unified Hero Component
 * Replaces type-specific headers (ModelHeader, AgentHeader, etc.)
 */
import ShareButtons from '../common/ShareButtons.astro';

interface Props {
  name: string;
  author: string;
  entityType?: 'model' | 'agent' | 'dataset' | 'paper' | 'space' | 'tool';
  entityIcon?: string;
  entityLabel?: string;
  verified?: boolean;
  lastUpdated?: string;
  description?: string;
  fniScore?: number;
  fniPercentile?: number;
  fniCommentary?: string;
  paramsB?: number;
  sourceUrl?: string;
  entityId?: string;
  hasImage?: boolean;
}

const {
  name,
  author = '',
  entityType = 'model',
  entityIcon = 'ðŸ“¦',
  entityLabel = 'Entity',
  verified = false,
  lastUpdated,
  description,
  fniScore,
  fniPercentile,
  fniCommentary,
  paramsB,
  sourceUrl,
  entityId = '',
  hasImage = false
} = Astro.props;

// Type-specific colors
const typeColors: Record<string, string> = {
  model: 'text-indigo-600 bg-indigo-50 dark:bg-indigo-900/30 dark:text-indigo-300 border-indigo-100',
  agent: 'text-purple-600 bg-purple-50 dark:bg-purple-900/30 dark:text-purple-300 border-purple-100',
  dataset: 'text-emerald-600 bg-emerald-50 dark:bg-emerald-900/30 dark:text-emerald-300 border-emerald-100',
  paper: 'text-rose-600 bg-rose-50 dark:bg-rose-900/30 dark:text-rose-300 border-rose-100',
  space: 'text-blue-600 bg-blue-50 dark:bg-blue-900/30 dark:text-blue-300 border-blue-100',
  tool: 'text-amber-600 bg-amber-50 dark:bg-amber-900/30 dark:text-amber-300 border-amber-100',
};

const colors = typeColors[entityType] || typeColors.model;

// V16.2: Hardened description cleaning
const descriptionStr = typeof description === 'string' ? description : (description ? String(description) : '');
const cleanDescription = (descriptionStr && descriptionStr !== 'null')
  ? descriptionStr
      .replace(/^---[\s\S]*?---\s*/m, '')           // Remove YAML frontmatter
      .replace(/<[^>]*>?/gm, '')                     // Remove HTML tags
      .replace(/!\[.*?\]\(.*?\)/g, '')              // Remove Markdown images
      .replace(/\[!(NOTE|TIP|IMPORTANT|WARNING|CAUTION)\]/gi, '') // Remove GitHub alerts
      .replace(/!\[GitHub.*?\]\(.*?\)/gi, '')        // Remove unparsed GitHub badges
      .replace(/!\[.*?badge.*?\]\(.*?\)/gi, '')       // Remove generic badges
      .replace(/&nbsp;/g, ' ')                       // Replace nbsp
      .replace(/\s+/g, ' ')                          // Collapse multiple newlines
      .trim() 
  : '';

const displayAuthor = (author && author !== 'Unknown' && author !== '') ? author : 'Independent / Community';

// V19: Relative time formatting for freshness indicator
function formatRelativeTime(dateStr?: string): string | null {
  if (!dateStr) return null;
  try {
    const date = new Date(dateStr);
    if (isNaN(date.getTime())) return null;
    const now = new Date();
    const diffMs = now.getTime() - date.getTime();
    if (diffMs < 0) return null; // future date
    const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
    if (diffDays === 0) return 'Updated today';
    if (diffDays === 1) return 'Updated yesterday';
    if (diffDays < 30) return `Updated ${diffDays} days ago`;
    const diffMonths = Math.floor(diffDays / 30);
    if (diffMonths < 12) return `Updated ${diffMonths} month${diffMonths > 1 ? 's' : ''} ago`;
    const diffYears = Math.floor(diffMonths / 12);
    return `Updated ${diffYears} year${diffYears > 1 ? 's' : ''} ago`;
  } catch {
    return null;
  }
}
const relativeTime = formatRelativeTime(lastUpdated);
---

<header class="mb-12 border-b border-zinc-100 dark:border-zinc-800 pb-12">
  <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-8">
    <div class="flex-grow min-w-0 flex items-start gap-8">
      <div class="hidden md:flex flex-shrink-0 w-24 h-24 items-center justify-center bg-zinc-50 dark:bg-zinc-900 rounded-2xl border border-zinc-200 dark:border-zinc-800 text-5xl shadow-sm select-none">
        {entityIcon}
      </div>
      
      <div class="min-w-0">
        <div class="flex items-center gap-3 mb-4">
          <span class={`px-2 py-0.5 rounded text-[10px] font-black uppercase tracking-widest border ${colors}`}>
            {entityLabel}
          </span>
          {relativeTime && (
            <span class="text-[10px] font-bold text-zinc-400 dark:text-zinc-500 uppercase tracking-widest">
              {relativeTime}
            </span>
          )}
        </div>
        
        <h1 class="text-4xl lg:text-5xl font-black text-zinc-900 dark:text-white tracking-tighter leading-none mb-4">
          {name}
        </h1>
        
        <div class="flex flex-wrap items-center gap-6 text-sm font-bold text-zinc-500">
          <span class="flex items-center gap-2">
            by <strong class="text-zinc-900 dark:text-white font-black uppercase tracking-tight">{displayAuthor}</strong>
          </span>
          {entityId && (
            <span class="font-mono text-[11px] opacity-40 truncate max-w-[300px]" title={entityId}>
              ID: {entityId}
            </span>
          )}
        </div>
      </div>
    </div>

    <!-- Metric Block -->
    <div class="flex flex-shrink-0 gap-4">
      {paramsB && (
        <div class="px-5 py-3 bg-zinc-50 dark:bg-zinc-900 rounded-xl border border-zinc-200 dark:border-zinc-800 flex flex-col items-center">
           <span class="text-[9px] font-black text-zinc-400 uppercase tracking-[0.2em] mb-1">Scale</span>
           <span class="text-xl font-black text-zinc-900 dark:text-white leading-none">{paramsB}B</span>
        </div>
      )}

      {fniScore !== undefined && fniScore !== null && (
        <div class="flex items-center bg-zinc-50 dark:bg-zinc-900 rounded-xl border border-zinc-200 dark:border-zinc-800 overflow-hidden">
          <div class="px-5 py-3 border-r border-zinc-200 dark:border-zinc-800 flex flex-col items-center">
            <span class="text-[9px] font-black text-zinc-400 uppercase tracking-[0.2em] mb-1">FNI Rank</span>
            <span class="text-3xl font-black text-zinc-900 dark:text-white leading-none">{fniScore}</span>
          </div>
          {fniPercentile !== undefined && fniPercentile !== null && !isNaN(Number(fniPercentile)) && (
            <div class="px-5 py-3 flex flex-col items-center">
              <span class="text-[9px] font-black text-zinc-400 uppercase tracking-[0.2em] mb-1">Percentile</span>
              <span class="text-sm font-black text-indigo-600 dark:text-indigo-400 uppercase tracking-tight">Top {100 - Math.round(Number(fniPercentile))}%</span>
            </div>
          )}
        </div>
      )}
    </div>
  </div>

  {cleanDescription && (
    <div class="mt-8 max-w-4xl">
      <p class="text-xl text-zinc-600 dark:text-zinc-400 leading-relaxed font-medium tracking-tight">
        {cleanDescription.length > 300 ? cleanDescription.slice(0, 300) + '...' : cleanDescription}
      </p>
    </div>
  )}

  <div class="mt-8 flex items-center justify-between pt-8 border-t border-zinc-50 dark:border-zinc-800/50">
    <div class="flex items-center gap-4">
      {sourceUrl && (
        <a href={sourceUrl} target="_blank" class="px-6 py-2.5 bg-zinc-900 dark:bg-white text-white dark:text-zinc-900 rounded-lg font-black text-xs uppercase tracking-widest hover:bg-black dark:hover:bg-zinc-100 transition-colors flex items-center gap-2">
          View Source Code <span>â†’</span>
        </a>
      )}
    </div>
    <ShareButtons title={name} description={cleanDescription || ''} />
  </div>
</header>
