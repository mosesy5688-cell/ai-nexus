---
/**
 * EntityHeader - V15.0 Unified Hero Component
 * Replaces type-specific headers (ModelHeader, AgentHeader, etc.)
 */
import ShareButtons from '../common/ShareButtons.astro';
import EntityNotice from './EntityNotice.astro';

interface Props {
  name: string;
  author: string;
  entityType?: 'model' | 'agent' | 'dataset' | 'paper' | 'space' | 'tool';
  entityIcon?: string;
  entityLabel?: string;
  verified?: boolean;
  lastUpdated?: string;
  description?: string;
  fniScore?: number;
  fniPercentile?: number;
  sourceUrl?: string;
}

const {
  name,
  author = 'Unknown',
  entityType = 'model',
  entityIcon = 'ðŸ“¦',
  entityLabel = 'Entity',
  verified = false,
  description,
  fniScore,
  fniPercentile,
  sourceUrl
} = Astro.props;

// Type-specific colors
const typeColors: Record<string, string> = {
  model: 'text-indigo-600 bg-indigo-50 dark:bg-indigo-900/30 dark:text-indigo-300 border-indigo-100',
  agent: 'text-purple-600 bg-purple-50 dark:bg-purple-900/30 dark:text-purple-300 border-purple-100',
  dataset: 'text-emerald-600 bg-emerald-50 dark:bg-emerald-900/30 dark:text-emerald-300 border-emerald-100',
  paper: 'text-rose-600 bg-rose-50 dark:bg-rose-900/30 dark:text-rose-300 border-rose-100',
  space: 'text-blue-600 bg-blue-50 dark:bg-blue-900/30 dark:text-blue-300 border-blue-100',
  tool: 'text-amber-600 bg-amber-50 dark:bg-amber-900/30 dark:text-amber-300 border-amber-100',
};

const colors = typeColors[entityType] || typeColors.model;
---

<header class="mb-10">
  <div class="flex flex-col gap-6">
    <!-- Breadcrumb Notice (System Only) -->
    <EntityNotice entityType={entityType} entityLabel={entityLabel} />
    
    <div class="flex flex-col lg:flex-row lg:items-start justify-between gap-6">
      <div class="flex-1 min-w-0">
        <!-- Title & Badges -->
        <div class="flex flex-wrap items-center gap-3 mb-4">
          <span class="text-4xl lg:text-5xl transition-transform hover:scale-110 duration-300 cursor-default">{entityIcon}</span>
          <h1 class="text-3xl lg:text-5xl font-black text-gray-900 dark:text-white tracking-tight hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors duration-300">
            {name}
          </h1>
          
          {fniScore !== undefined && (
            <div class="relative flex items-center gap-1.5 px-3 py-1 bg-indigo-600 text-white rounded-lg shadow-[0_0_15px_rgba(79,70,229,0.4)] animate-pulse-subtle">
              <span class="text-[10px] font-bold uppercase tracking-wider opacity-80">FNI</span>
              <span class="text-2xl font-black leading-none">{fniScore}</span>
              {fniPercentile !== undefined && (
                <div class="flex flex-col border-l border-white/30 pl-1.5 ml-0.5">
                  <span class="text-[9px] font-bold uppercase leading-none">Top</span>
                  <span class="text-[9px] font-black leading-none">{100 - Math.round(fniPercentile)}%</span>
                </div>
              )}
            </div>
          )}

          {verified && (
            <span class="inline-flex items-center gap-1.5 text-blue-600 bg-blue-50 dark:bg-blue-900/40 dark:text-blue-300 px-3 py-1 rounded-full text-xs font-bold border border-blue-100 dark:border-blue-700/50 shadow-sm">
              <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745a3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Verified
            </span>
          )}
        </div>

        <div class="flex items-center gap-3 text-lg text-gray-500 dark:text-gray-400 mb-8 font-medium">
          <span class="flex items-center gap-2">
            by <strong class="text-gray-900 dark:text-white font-black">{author}</strong>
          </span>
          <span class="w-1 h-1 bg-gray-300 dark:bg-gray-700 rounded-full"></span>
          <span class={`inline-flex items-center px-4 py-1 rounded-full text-xs font-black uppercase tracking-[0.1em] border shadow-sm ${colors}`}>
            {entityLabel}
          </span>
        </div>

        {/* V15.0: "What is this?" (Brief One-liner) */}
        {description && (
          <div class="relative group">
            <div class="absolute -left-4 top-0 bottom-0 w-1.5 bg-indigo-600 rounded-full transform scale-y-90 group-hover:scale-y-100 transition-transform duration-300"></div>
            <p class="text-xl text-gray-700 dark:text-gray-200 leading-relaxed font-medium bg-gradient-to-r from-gray-50/80 to-transparent dark:from-gray-800/40 dark:to-transparent p-5 pl-2 rounded-r-2xl italic tracking-tight">
              "{description.length > 250 ? description.substring(0, 250) + '...' : description}"
            </p>
          </div>
        )}
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap items-center gap-3 lg:pt-2">
        <slot name="actions" />
        <ShareButtons title={name} description={description || ''} />
      </div>
    </div>
  </div>
</header>
