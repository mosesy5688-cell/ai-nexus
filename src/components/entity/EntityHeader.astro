---
/**
 * EntityHeader - V15.0 Unified Hero Component
 * Replaces type-specific headers (ModelHeader, AgentHeader, etc.)
 */
import ShareButtons from '../common/ShareButtons.astro';

interface Props {
  name: string;
  author: string;
  entityType?: 'model' | 'agent' | 'dataset' | 'paper' | 'space' | 'tool';
  entityIcon?: string;
  entityLabel?: string;
  verified?: boolean;
  lastUpdated?: string;
  description?: string;
  fniScore?: number;
  fniPercentile?: number;
  fniCommentary?: string;
  paramsB?: number;
  sourceUrl?: string;
}

const {
  name,
  author = '',
  entityType = 'model',
  entityIcon = 'üì¶',
  entityLabel = 'Entity',
  verified = false,
  description,
  fniScore,
  fniPercentile,
  fniCommentary,
  paramsB,
  sourceUrl
} = Astro.props;

// Type-specific colors
const typeColors: Record<string, string> = {
  model: 'text-indigo-600 bg-indigo-50 dark:bg-indigo-900/30 dark:text-indigo-300 border-indigo-100',
  agent: 'text-purple-600 bg-purple-50 dark:bg-purple-900/30 dark:text-purple-300 border-purple-100',
  dataset: 'text-emerald-600 bg-emerald-50 dark:bg-emerald-900/30 dark:text-emerald-300 border-emerald-100',
  paper: 'text-rose-600 bg-rose-50 dark:bg-rose-900/30 dark:text-rose-300 border-rose-100',
  space: 'text-blue-600 bg-blue-50 dark:bg-blue-900/30 dark:text-blue-300 border-blue-100',
  tool: 'text-amber-600 bg-amber-50 dark:bg-amber-900/30 dark:text-amber-300 border-amber-100',
};

const colors = typeColors[entityType] || typeColors.model;

// V16.2: Clean description - Strip HTML, YAML frontmatter, and Markdown alerts
const descriptionStr = typeof description === 'string' ? description : (description ? JSON.stringify(description) : '');
const cleanDescription = descriptionStr
  ? descriptionStr
      .replace(/^---[\s\S]*?---\s*/m, '')           // Remove YAML frontmatter
      .replace(/\[!(NOTE|TIP|IMPORTANT|WARNING|CAUTION)\]/gi, '') // Remove GitHub alerts
      .replace(/>\s*\[!(NOTE|TIP|IMPORTANT|WARNING|CAUTION)\]/gi, '') // Remove blockquote alerts
      .replace(/<[^>]*>?/gm, '')                     // Remove HTML tags
      .replace(/&nbsp;/g, ' ')                       // Replace nbsp
      .replace(/\n{2,}/g, ' ')                       // Collapse multiple newlines
      .trim() 
  : '';

// V15.1: Author fallback
const displayAuthor = (author && author !== 'Unknown' && author !== '') ? author : 'Independent / Community';
---

<header class="mb-10">
  <div class="flex flex-col gap-6">
    <div class="flex flex-col lg:flex-row lg:items-start justify-between gap-8">
      <div class="flex-grow min-w-0 lg:max-w-[70%]">
        <!-- Title & Badges -->
        <div class="flex flex-wrap items-center gap-4 mb-6">
          <span class="text-4xl lg:text-6xl transition-transform hover:scale-110 duration-300 cursor-default select-none">{entityIcon}</span>
          <h1 class="text-3xl lg:text-5xl font-black text-gray-900 dark:text-white tracking-tight hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors duration-300 break-words">
            {name}
          </h1>
          
          {fniScore !== undefined && (
            <div class="relative group/fni flex items-center gap-2 px-4 py-1.5 bg-indigo-600 text-white rounded-xl shadow-[0_0_20px_rgba(79,70,229,0.3)] dark:shadow-[0_0_30px_rgba(79,70,229,0.2)] cursor-help">
              <span class="text-[10px] font-black uppercase tracking-widest opacity-80">FNI</span>
              <span class="text-2xl font-black leading-none">{fniScore}</span>
              {fniPercentile !== undefined && (
                <div class="flex flex-col border-l border-white/30 pl-2 ml-1">
                  <span class="text-[9px] font-bold uppercase leading-none opacity-70">Top</span>
                  <span class="text-[10px] font-black leading-none">{100 - Math.round(fniPercentile)}%</span>
                </div>
              )}
              
              {/* V16.17: Interactive FNI Breakdown Popover */}
              <div class="absolute top-full left-0 mt-3 w-72 p-4 bg-white dark:bg-gray-900 rounded-2xl shadow-2xl border border-gray-100 dark:border-gray-800 opacity-0 invisible group-hover/fni:opacity-100 group-hover/fni:visible transition-all duration-300 z-50">
                 <div class="flex items-center gap-2 mb-3">
                    <span class="p-1.5 bg-indigo-100 dark:bg-indigo-900/40 rounded-lg text-indigo-500 text-xs">üõ°Ô∏è</span>
                    <h4 class="text-xs font-black text-gray-900 dark:text-white uppercase tracking-tight">FNI Transparency Shield</h4>
                 </div>
                 {fniCommentary ? (
                   <p class="text-[11px] text-gray-600 dark:text-gray-400 leading-relaxed italic">
                     "{fniCommentary}"
                   </p>
                 ) : (
                   <p class="text-[10px] text-gray-400 dark:text-gray-500">
                     Full quality audit metrics are being computed as this node synchronizes with the Knowledge Mesh.
                   </p>
                 )}
                 <div class="mt-4 pt-3 border-t border-gray-100 dark:border-gray-800 flex justify-between items-center">
                    <span class="text-[9px] text-gray-400 font-mono">Formula: V14.4-STABLE</span>
                    <a href="/methodology" class="text-[9px] font-bold text-indigo-600 hover:underline tracking-tighter">Learn More</a>
                 </div>
              </div>
            </div>
          )}

          {verified && (
            <span class="inline-flex items-center gap-2 text-blue-600 bg-blue-50 dark:bg-blue-900/40 dark:text-blue-300 px-4 py-1.5 rounded-full text-xs font-black border border-blue-100 dark:border-blue-700/50 shadow-sm">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Verified
            </span>
          )}

          {paramsB !== undefined && paramsB >= 50 && (
            <span class="inline-flex items-center gap-2 text-amber-700 bg-amber-50 dark:bg-amber-900/30 dark:text-amber-400 px-4 py-1.5 rounded-xl text-xs font-black border border-amber-200 dark:border-amber-800/50 shadow-sm">
              <span class="text-sm">üèÜ</span> Foundation Model
            </span>
          )}
        </div>

        <div class="flex flex-wrap items-center gap-4 text-gray-500 dark:text-gray-400 mb-8 font-bold">
          <span class="flex items-center gap-2">
            by <strong class="text-gray-900 dark:text-white font-black hover:text-indigo-600 cursor-default transition-colors">{displayAuthor}</strong>
          </span>
          <span class="hidden md:block w-1.5 h-1.5 bg-gray-300 dark:bg-gray-700 rounded-full"></span>
          <span class={`inline-flex items-center px-4 py-1 rounded-lg text-[10px] font-black uppercase tracking-widest border shadow-sm ${colors}`}>
            {entityLabel}
          </span>
        </div>

        {/* V15.0: "What is this?" (Brief One-liner) */}
        {cleanDescription && (
          <div class="relative group">
            <div class="absolute -left-4 top-0 bottom-0 w-1.5 bg-indigo-600 rounded-full transform scale-y-90 group-hover:scale-y-100 transition-transform duration-300"></div>
            <p class="text-xl text-gray-700 dark:text-gray-200 leading-relaxed font-medium bg-gradient-to-r from-gray-50/80 to-transparent dark:from-gray-800/40 dark:to-transparent p-6 pl-4 rounded-r-2xl italic tracking-tight border-l border-indigo-100 dark:border-indigo-900/30">
              "{cleanDescription}"
            </p>
          </div>
        )}
      </div>

      <div class="flex flex-shrink-0 flex-wrap items-center gap-4 lg:pt-4">
        <slot name="actions" />
        <ShareButtons title={name || 'AI Research'} description={cleanDescription || ''} />
      </div>
    </div>
  </div>
</header>
