---
/**
 * EntityHeader - V15.0 Unified Hero Component
 * Replaces type-specific headers (ModelHeader, AgentHeader, etc.)
 */
import ShareButtons from '../common/ShareButtons.astro';

interface Props {
  name: string;
  author: string;
  entityType?: 'model' | 'agent' | 'dataset' | 'paper' | 'space' | 'tool';
  entityIcon?: string;
  entityLabel?: string;
  verified?: boolean;
  lastUpdated?: string;
  description?: string;
  fniScore?: number;
  fniPercentile?: number;
  fniCommentary?: string;
  paramsB?: number;
  sourceUrl?: string;
  entityId?: string;
  hasImage?: boolean;
  trend_7d?: number[];
  contextLength?: number;
  downloads?: number;
  stars?: number;
}

const {
  name,
  author = '',
  entityType = 'model',
  entityIcon = 'ðŸ“¦',
  entityLabel = 'Entity',
  verified = false,
  lastUpdated,
  description,
  fniScore,
  fniPercentile,
  fniCommentary,
  paramsB,
  sourceUrl,
  entityId = '',
  hasImage = false,
  trend_7d: rawTrend = [],
  contextLength,
  downloads,
  stars
} = Astro.props;

const trend_7d = rawTrend || [];

// V16.7: High-Density Sparkline Generator (Server-Side SVG)
function generateSvgPath(scores: number[], width: number, height: number, pad: number) {
  if (!scores || scores.length < 2) return "";
  const max = Math.max(...scores);
  const min = Math.min(...scores);
  const range = (max - min) || 1;
  const len = scores.length;
  
  return scores.map((s, i) => {
    const x = pad + (i / (len - 1)) * (width - pad * 2);
    const y = height - pad - ((s - min) / range) * (height - pad * 2);
    return `${i === 0 ? 'M' : 'L'} ${x.toFixed(2)} ${y.toFixed(2)}`;
  }).join(' ');
}

const firstScore = trend_7d[0] || 0;
const lastScore = trend_7d[trend_7d.length - 1] || 0;
const trendDiff = lastScore - firstScore;
const trendPercent = firstScore !== 0 ? ((trendDiff / firstScore) * 100).toFixed(1) : "0.0";
const trendDir = trendDiff > 0.05 ? 'up' : trendDiff < -0.05 ? 'down' : 'stable';
const trendColor = trendDir === 'up' ? 'text-green-500' : trendDir === 'down' ? 'text-red-500' : 'text-zinc-400';
const trendStroke = trendDir === 'up' ? '#22c55e' : trendDir === 'down' ? '#ef4444' : '#94a3b8';

const svgPath = generateSvgPath(trend_7d, 80, 32, 4);

// Type-specific colors
const typeColors: Record<string, string> = {
  model: 'text-indigo-600 bg-indigo-50 dark:bg-indigo-900/30 dark:text-indigo-300 border-indigo-100',
  agent: 'text-purple-600 bg-purple-50 dark:bg-purple-900/30 dark:text-purple-300 border-purple-100',
  dataset: 'text-emerald-600 bg-emerald-50 dark:bg-emerald-900/30 dark:text-emerald-300 border-emerald-100',
  paper: 'text-rose-600 bg-rose-50 dark:bg-rose-900/30 dark:text-rose-300 border-rose-100',
  space: 'text-blue-600 bg-blue-50 dark:bg-blue-900/30 dark:text-blue-300 border-blue-100',
  tool: 'text-amber-600 bg-amber-50 dark:bg-amber-900/30 dark:text-amber-300 border-amber-100',
};

const colors = typeColors[entityType] || typeColors.model;

// V16.2: Hardened description cleaning
const descriptionStr = typeof description === 'string' ? description : (description ? String(description) : '');
const descriptionStr = typeof description === 'string' ? description : (description ? String(description) : '');
const cleanDescription = (descriptionStr && descriptionStr !== 'null')
  ? descriptionStr.replace(/^---[\s\S]*?---\s*/m, '').replace(/<[^>]*>?/gm, '')
      .replace(/!\[.*?\]\(.*?\)/g, '').replace(/\[!(NOTE|TIP|IMPORTANT|WARNING|CAUTION)\]/gi, '')
      .replace(/!\[GitHub.*?\]\(.*?\)/gi, '').replace(/!\[.*?badge.*?\]\(.*?\)/gi, '')
      .replace(/&nbsp;/g, ' ').replace(/\s+/g, ' ').trim() 
  : '';

const displayAuthor = (author && author !== 'Unknown' && author !== '') ? author : 'Independent / Community';

// V19: Relative time formatting for freshness indicator
function formatRelativeTime(dateStr?: string): string | null {
  if (!dateStr) return null;
  try {
    const date = new Date(dateStr);
    if (isNaN(date.getTime())) return null;
    const now = new Date();
    const diffMs = now.getTime() - date.getTime();
    if (diffMs < 0) return null; // future date
    const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
    if (diffDays === 0) return 'Updated today';
    if (diffDays === 1) return 'Updated yesterday';
    if (diffDays < 30) return `Updated ${diffDays} days ago`;
    const diffMonths = Math.floor(diffDays / 30);
    if (diffMonths < 12) return `Updated ${diffMonths} month${diffMonths > 1 ? 's' : ''} ago`;
    const diffYears = Math.floor(diffMonths / 12);
    return `Updated ${diffYears} year${diffYears > 1 ? 's' : ''} ago`;
  } catch {
    return null;
  }
}
const relativeTime = formatRelativeTime(lastUpdated);
---

<header class="mb-8 border-b border-zinc-100 dark:border-zinc-800 pb-8">
  <div class="flex flex-col gap-6">
    <!-- Identity Block -->
    <div class="flex items-start gap-4 sm:gap-6">
      <div class="flex flex-shrink-0 w-16 h-16 sm:w-20 sm:h-20 items-center justify-center bg-zinc-50 dark:bg-zinc-900 rounded-2xl border border-zinc-200 dark:border-zinc-800 text-3xl sm:text-4xl shadow-sm select-none">
        {entityIcon}
      </div>
      
      <div class="min-w-0">
        <div class="flex items-center gap-3 mb-3">
          <span class={`px-2 py-0.5 rounded text-[8px] sm:text-[10px] font-black uppercase tracking-widest border ${colors}`}>
            {entityLabel}
          </span>
          {relativeTime && (
            <span class="text-[8px] sm:text-[10px] font-bold text-zinc-400 dark:text-zinc-500 uppercase tracking-widest">
              {relativeTime}
            </span>
          )}
        </div>
        
        <h1 class="text-2xl sm:text-4xl lg:text-5xl font-black text-zinc-900 dark:text-white tracking-tighter leading-tight mb-3">
          {name}
        </h1>
        
        <div class="flex flex-wrap items-center gap-4 text-xs sm:text-sm font-bold text-zinc-500">
          <span class="flex items-center gap-2">
            by <strong class="text-zinc-900 dark:text-white font-black uppercase tracking-tight">{displayAuthor}</strong>
          </span>
          {entityId && (
            <span class="font-mono text-[9px] sm:text-[11px] opacity-40 truncate max-w-[250px]" title={entityId}>
              ID: {entityId}
            </span>
          )}
        </div>
      </div>
    </div>

    <!-- Metric Block (Strict Vertical Below Identity) -->
    <div class="flex flex-wrap gap-3">
      {paramsB && (
        <div class="px-4 py-3 bg-zinc-50 dark:bg-zinc-900 rounded-xl border border-zinc-200 dark:border-zinc-800 flex flex-col items-center">
           <span class="text-[8px] font-black text-zinc-400 uppercase tracking-[0.2em] mb-1">Scale</span>
           <span class="text-xl font-black text-zinc-900 dark:text-white leading-none tracking-tighter">{paramsB >= 1 ? paramsB : paramsB + 'B'}</span>
        </div>
      )}

      {contextLength && contextLength > 0 && (
        <div class="px-4 py-3 bg-zinc-50 dark:bg-zinc-900 rounded-xl border border-zinc-200 dark:border-zinc-800 flex flex-col items-center justify-center min-w-[90px]">
           <span class="text-[8px] font-black text-zinc-400 uppercase tracking-[0.2em] mb-1">Context Window</span>
           <span class="text-2xl font-black text-zinc-900 dark:text-white leading-none tracking-tighter">
             {contextLength >= 1000 ? (contextLength / 1000) + 'K' : contextLength}
           </span>
        </div>
      )}

      {(downloads !== undefined && downloads > 0) && (
        <div class="px-4 py-3 bg-zinc-50 dark:bg-zinc-900 rounded-xl border border-zinc-200 dark:border-zinc-800 flex flex-col items-center justify-center min-w-[90px]">
           <span class="text-[8px] font-black text-zinc-400 uppercase tracking-[0.2em] mb-1">Downloads</span>
           <span class="text-2xl font-black text-zinc-900 dark:text-white leading-none tracking-tighter">
             {downloads >= 1000000 ? (downloads / 1000000).toFixed(1) + 'M' : downloads >= 1000 ? (downloads / 1000).toFixed(1) + 'K' : downloads.toLocaleString()}
           </span>
        </div>
      )}
      
      {fniScore !== undefined && fniScore !== null && (
        <div class="flex items-stretch bg-zinc-50 dark:bg-zinc-900 rounded-xl border border-zinc-200 dark:border-zinc-800 overflow-hidden shadow-sm">
          <!-- Rank -->
          <div class="px-5 py-3 border-r border-zinc-200 dark:border-zinc-800 flex flex-col items-center justify-center min-w-[90px]">
            <span class="text-[8px] font-black text-zinc-400 uppercase tracking-[0.2em] mb-1">FNI Rank</span>
            <span class="text-3xl font-black text-zinc-900 dark:text-white leading-none tracking-tighter">{fniScore}</span>
          </div>

          <!-- Trend & Stats Multi-Block -->
          <div class="flex flex-col">
            <!-- Percentile (Top Row) -->
            {fniPercentile !== undefined && fniPercentile !== null && !isNaN(Number(fniPercentile)) && (
              <div class="px-4 py-1.5 border-b border-zinc-200 dark:border-zinc-800 flex items-center justify-between gap-4 bg-zinc-100/50 dark:bg-zinc-800/30">
                <span class="text-[8px] font-black text-zinc-500/70 uppercase tracking-widest">Percentile</span>
                <span class="text-[10px] font-black text-indigo-600 dark:text-indigo-400 uppercase">Top {100 - Math.round(Number(fniPercentile))}%</span>
              </div>
            )}
            
            <!-- Sparkline (Bottom Row) -->
            <div class={`px-4 flex-grow flex items-center gap-4 ${fniPercentile ? 'py-1.5' : 'py-3'}`}>
               <div class="flex flex-col">
                 <span class="text-[8px] font-black text-zinc-400 uppercase tracking-[0.2em] mb-1">Activity</span>
                 <div class="flex items-center gap-3">
                    {svgPath && (
                      <svg width="64" height="20" viewBox="0 0 80 32" class="opacity-90">
                        <path d={svgPath} fill="none" stroke={trendStroke} stroke-width="6" stroke-linecap="round" stroke-linejoin="round" />
                      </svg>
                    )}
                    <span class={`text-xs font-black ${trendColor} tracking-tighter`}>
                      {trendDiff > 0.01 ? 'â†—' : trendDiff < -0.01 ? 'â†˜' : 'â†’'} {trendPercent}%
                    </span>
                 </div>
               </div>
            </div>
          </div>
        </div>
      )}
    </div>
  </div>

  {cleanDescription && (
    <div class="mt-6 max-w-4xl">
      <p class="text-xl text-zinc-600 dark:text-zinc-400 leading-relaxed font-medium tracking-tight">
        {cleanDescription.length > 300 ? cleanDescription.slice(0, 300) + '...' : cleanDescription}
      </p>
    </div>
  )}

  <div class="mt-6 flex items-center justify-between pt-6 border-t border-zinc-50 dark:border-zinc-800/50">
    <div class="flex items-center gap-4">
      {sourceUrl && (
        <a href={sourceUrl} target="_blank" class="px-6 py-2.5 bg-zinc-900 dark:bg-white text-white dark:text-zinc-900 rounded-lg font-black text-xs uppercase tracking-widest hover:bg-black dark:hover:bg-zinc-100 transition-colors flex items-center gap-2">
          View Source Code <span>â†’</span>
        </a>
      )}
    </div>
    <ShareButtons title={name} description={cleanDescription || ''} />
  </div>
</header>
