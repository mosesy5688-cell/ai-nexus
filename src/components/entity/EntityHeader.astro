---
/**
 * EntityHeader - Barebones Diagnostic Version
 */
interface Props {
  name: string;
  author?: string;
  entityType?: string;
  entityIcon?: string;
  entityId?: string;
}

const {
  name = 'Unknown',
  author = 'Community',
  entityIcon = 'ðŸ“¦',
  entityId = ''
} = Astro.props;
---

<header class="mb-10">
  <div class="flex items-center gap-6">
    <div class="text-4xl">{entityIcon}</div>
    <div>
      <h1 class="text-3xl font-black text-gray-900 dark:text-white">
        {name}
      </h1>
      <p class="text-sm text-gray-500 font-bold">
        by <strong>{author}</strong> {entityId && `| ID: ${entityId}`}
      </p>
    </div>
  </div>
</header>
