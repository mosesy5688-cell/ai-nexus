---
/**
 * ZoneUseCases - V15.0 Zone 1.5
 * Displays inferred "Good For" and "Limit" badges for quick evaluation.
 */
interface Props {
  goodFor: string[];
  limits: string[];
}

const { goodFor = [], limits = [] } = Astro.props;
---

<section class="bg-gray-50 dark:bg-gray-800/40 rounded-xl p-6 border border-gray-100 dark:border-gray-700/50 mb-8 shadow-inner">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Good For -->
    <div>
      <h3 class="text-xs font-bold text-green-600 dark:text-green-400 uppercase tracking-widest mb-3 flex items-center gap-2">
        <span>✅ Best For</span>
        <span class="h-px flex-1 bg-green-100 dark:bg-green-900/30"></span>
      </h3>
      <div class="flex flex-wrap gap-2">
        {goodFor.map(item => (
          <span class="px-3 py-1 bg-green-50 dark:bg-green-900/20 text-green-700 dark:text-green-300 rounded-lg text-sm font-semibold border border-green-100 dark:border-green-800/50">
            {item}
          </span>
        ))}
      </div>
    </div>

    <!-- Limits -->
    <div>
      <h3 class="text-xs font-bold text-amber-600 dark:text-amber-400 uppercase tracking-widest mb-3 flex items-center gap-2">
        <span>⚠️ Considerations</span>
        <span class="h-px flex-1 bg-amber-100 dark:bg-amber-900/30"></span>
      </h3>
      <div class="flex flex-wrap gap-2">
        {limits.map(item => (
          <span class="px-3 py-1 bg-amber-50 dark:bg-amber-900/20 text-amber-700 dark:text-amber-300 rounded-lg text-sm font-semibold border border-amber-100 dark:border-amber-800/50">
            {item}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
