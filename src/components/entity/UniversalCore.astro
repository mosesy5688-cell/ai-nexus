---
/**
 * UniversalCore - V18.12.5 (Wrapper)
 * Implements Astro Server Islands with SafeZone protection.
 */
import UniversalCoreIsland from './UniversalCoreIsland.astro';
import SafeZone from '../common/SafeZone.astro';

interface Props {
  entity: any;
  type: 'model' | 'agent' | 'space' | 'tool' | 'dataset' | 'paper';
  meshRelations?: any[];
}

const { entity, type, meshRelations } = Astro.props;
const entityId = entity?.id || '';

/**
 * V18.12.5: Zero-CLS Skeleton for Intelligence Hive
 */
---

<SafeZone 
  fallbackTitle="Intelligence Hive Connectivity Lag"
  fallbackMessage="The neural graph is taking longer than expected to hydrate. Please refresh to retry."
>
  <UniversalCoreIsland 
    server:defer 
    entityId={entityId} 
    type={type} 
    entity={entity} 
    meshRelations={meshRelations}
  >
    {/* V18.12.5: High-Density Skeleton (Zero-CLS) */}
    <div slot="fallback" class="space-y-16 animate-pulse">
        {/* Graph Skeleton */}
        <div class="h-[400px] w-full bg-zinc-100 dark:bg-zinc-800/50 rounded-2xl border border-zinc-200 dark:border-zinc-800 flex items-center justify-center">
            <div class="flex flex-col items-center gap-4">
                <div class="w-12 h-12 rounded-full bg-zinc-200 dark:bg-zinc-700/50"></div>
                <div class="h-4 w-32 bg-zinc-200 dark:bg-zinc-700/50 rounded"></div>
            </div>
        </div>

        {/* Matrix Skeleton */}
        <div class="space-y-8">
            <div class="flex items-center gap-4">
                <div class="w-10 h-10 rounded-xl bg-zinc-200 dark:bg-zinc-700/50"></div>
                <div class="space-y-2">
                    <div class="h-4 w-40 bg-zinc-200 dark:bg-zinc-700/50 rounded"></div>
                    <div class="h-2 w-24 bg-zinc-200 dark:bg-zinc-700/50 rounded"></div>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {[1, 2, 3].map(() => (
                    <div class="h-24 bg-zinc-100 dark:bg-zinc-800/30 rounded-2xl border border-zinc-200 dark:border-zinc-800/50"></div>
                ))}
            </div>
        </div>
    </div>
  </UniversalCoreIsland>
</SafeZone>
