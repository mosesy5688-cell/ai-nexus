---
// src/components/entity/SpecCard.astro
// V21.0: Professional Technical Datasheet Card
interface Props {
  title: string;
  icon: string;
  specs: { label: string; value: any; highlight?: boolean }[];
}

const { title, icon, specs } = Astro.props;
---

<div class="bg-zinc-50 dark:bg-zinc-900/50 rounded-2xl p-6 border border-zinc-200 dark:border-zinc-800 transition-all hover:border-indigo-500/50">
  <div class="flex items-center gap-3 mb-6 pb-2 border-b border-zinc-100 dark:border-zinc-800">
    <span class="text-lg">{icon}</span>
    <h3 class="text-[10px] font-black uppercase tracking-[0.2em] text-zinc-900 dark:text-white">
      {title}
    </h3>
  </div>

  <div class="space-y-5">
    {specs.map(spec =>
          <div class="flex-grow min-w-0">
            <div class="text-[10px] text-zinc-400 dark:text-zinc-500 font-bold uppercase tracking-widest mb-0.5 leading-none">
              {spec.label}
            </div>
            <div class={`text-sm font-black truncate ${spec.highlight ? 'text-indigo-600 dark:text-indigo-400' : 'text-zinc-900 dark:text-zinc-100'}`} title={String(spec.value)}>
              {spec.href ? (
                <a href={spec.href} target={spec.href.startsWith('http') ? "_blank" : "_self"} class="hover:underline hover:text-indigo-500 transition-colors">
                  {spec.value}
                </a>
              ) : spec.value || 'â€”'}
            </div>
          </div>
    )}
  </div>
</div>
```
