---
/**
 * EntityNotice Component - V4.9 Content Activation
 * Art.X-Entity: Clearly indicates which metrics don't apply to non-Model entities
 * 
 * Purpose: Prevent user confusion by explicitly stating what metrics are N/A
 */
interface Props {
    entityType: string;
    entityLabel: string;
}

const { entityType, entityLabel } = Astro.props;

// Define which metrics are inapplicable for each entity type
const INAPPLICABLE: Record<string, string[]> = {
    dataset: ['FNI Score', 'Deployment Options', 'Model Architecture'],
    benchmark: ['FNI Score', 'Deployment Options'],
    paper: ['FNI Score', 'Deployment Options', 'Architecture', 'Benchmarks'],
    agent: ['FNI Score'],
    tutorial: ['FNI Score', 'Deployment Options', 'Benchmarks'],
    organization: ['FNI Score', 'Deployment Options', 'Benchmarks', 'Architecture'],
};

const items = INAPPLICABLE[entityType] || [];
const showNotice = entityType !== 'model' && items.length > 0;
---

{showNotice && (
    <div class="bg-amber-50 dark:bg-amber-900/30 border border-amber-200 dark:border-amber-700 rounded-lg p-4 mb-6">
        <div class="flex items-start gap-3">
            <span class="text-amber-500 text-xl flex-shrink-0">⚠️</span>
            <div>
                <p class="text-amber-800 dark:text-amber-200 text-sm font-medium mb-1">
                    This is a {entityLabel}, not a Model
                </p>
                <p class="text-amber-700 dark:text-amber-300 text-xs">
                    The following metrics do not apply: <span class="font-medium">{items.join(', ')}</span>
                </p>
            </div>
        </div>
    </div>
)}
