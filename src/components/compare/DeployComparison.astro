---
// src/components/compare/DeployComparison.astro
import DeployabilityBadge from '../specs/DeployabilityBadge.astro';

interface Props {
  compareModels: any[];
}

const { compareModels } = Astro.props;
---

<section class="compare-section">
  <h2 class="section-title">ðŸš€ Deployment</h2>
  <div class="deploy-grid" style={`--cols: ${compareModels.length}`}>
    {compareModels.map(model => (
      <div class="comparison-card">
        {model.specs ? (
          <DeployabilityBadge 
            params={model.specs.params_billions} 
            hasGguf={model.specs.has_gguf}
            hasOllama={model.specs.has_ollama}
          />
        ) : (
          <div class="no-data">Unknown Deployment</div>
        )}
      </div>
    ))}
  </div>
</section>
