---
// src/components/explore/filters/FilterRange.astro
interface Props {
  label: string;
  id: string;
  min?: number;
  max?: number;
  value: number;
  unit?: string;
}

const { label, id, min = 0, max = 100, value, unit = '%' } = Astro.props;
---
<div class="filter-group">
  <label>{label} <span class="range-value" id={`${id.replace('-min', '')}-value`}>{value}{unit}</span></label>
  <input 
    type="range" 
    id={id} 
    min={min} 
    max={max} 
    value={value}
    class="range-slider"
  />
</div>
