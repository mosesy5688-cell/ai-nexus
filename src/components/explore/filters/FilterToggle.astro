---
// src/components/explore/filters/FilterToggle.astro
interface Props {
  label: string;
  id: string;
  checked: boolean;
}

const { label, id, checked } = Astro.props;
---
<div class="filter-group">
  <label class="toggle">
    <input 
      type="checkbox" 
      id={id}
      checked={checked}
    />
    <span class="toggle-slider"></span>
    <span class="toggle-label">{label}</span>
  </label>
</div>
