---
// src/components/ModelCardSkeleton.astro
// Skeleton placeholder for loading state
---

<div class="skeleton-card group relative block bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden h-full border border-gray-100 dark:border-gray-700 animate-pulse">
    <!-- Image skeleton -->
    <div class="aspect-video w-full bg-gray-200 dark:bg-gray-700"></div>
    
    <!-- Content skeleton -->
    <div class="p-5 space-y-4">
        <!-- Title skeleton -->
        <div class="h-6 bg-gray-200 dark:bg-gray-700 rounded w-3/4"></div>
        
        <!-- Author skeleton -->
        <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-1/2"></div>
        
        <!-- Description skeleton -->
        <div class="space-y-2">
            <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-full"></div>
            <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-5/6"></div>
            <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-4/6"></div>
        </div>
        
        <!-- Footer skeleton -->
        <div class="flex items-center justify-between pt-3 border-t border-gray-100 dark:border-gray-700">
            <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-16"></div>
            <div class="flex gap-3">
                <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-12"></div>
                <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-12"></div>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
    }
    
    .animate-pulse {
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
</style>
