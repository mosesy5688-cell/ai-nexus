---
// src/components/leaderboard/LeaderboardFilters.astro
interface Props {
  families: string[];
}

const { families } = Astro.props;
---
<div class="filter-bar">
  <div class="filter-group">
    <label>Architecture Family</label>
    <select id="family-filter" class="filter-select">
      <option value="">All Families</option>
      {families.map(f => (
        <option value={f}>{f}</option>
      ))}
    </select>
  </div>
  
  <div class="filter-group">
    <label>Min Size (B)</label>
    <select id="min-size-filter" class="filter-select">
      <option value="0">Any Size</option>
      <option value="1">1B+</option>
      <option value="7">7B+</option>
      <option value="13">13B+</option>
      <option value="30">30B+</option>
      <option value="70">70B+</option>
    </select>
  </div>

  <div class="filter-actions">
    <a href="/compare" class="btn-compare">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 002 2h2a2 2 0 002-2z"></path>
      </svg>
      Compare Models
    </a>
  </div>
</div>
