---
// src/components/leaderboard/LeaderboardFilters.astro
interface Props {
  families: string[];
}

const { families } = Astro.props;
---
<div class="filter-bar">
  <div class="filter-group">
    <label>Architecture Family</label>
    <select id="family-filter" class="filter-select">
      <option value="">All Families</option>
      {families.map(f => (
        <option value={f}>{f}</option>
      ))}
    </select>
  </div>
  
  <div class="filter-group">
    <label>Min Size (B)</label>
    <select id="min-size-filter" class="filter-select">
      <option value="0">Any Size</option>
      <option value="1">1B+</option>
      <option value="7">7B+</option>
      <option value="13">13B+</option>
      <option value="30">30B+</option>
      <option value="70">70B+</option>
  </div>
</div>
