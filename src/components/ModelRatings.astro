---
// src/components/ModelRatings.astro
import RatingsDisplay from './RatingsDisplay.jsx';

interface Props {
    modelId: string;
}
const { modelId } = Astro.props;
---
<!-- 
  We wrap the React component in a div and pass the modelId as a data attribute.
  This allows the client-side React code to read the ID from the DOM after hydration.
-->
<div id="ratings-display-wrapper">
    <RatingsDisplay modelId={modelId} client:visible/>
</div>