<div class="space-y-6" id="search-filters">
    <!-- Platform Source -->
    <div>
        <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-3">Platform</h3>
        <div class="space-y-2">
            <label class="flex items-center space-x-2 cursor-pointer">
                <input type="checkbox" name="source" value="huggingface" class="rounded text-blue-600 focus:ring-blue-500 bg-gray-100 dark:bg-gray-700 border-gray-300 dark:border-gray-600">
                <span class="text-sm text-gray-700 dark:text-gray-300">Hugging Face</span>
            </label>
            <label class="flex items-center space-x-2 cursor-pointer">
                <input type="checkbox" name="source" value="github" class="rounded text-blue-600 focus:ring-blue-500 bg-gray-100 dark:bg-gray-700 border-gray-300 dark:border-gray-600">
                <span class="text-sm text-gray-700 dark:text-gray-300">GitHub</span>
            </label>
            <label class="flex items-center space-x-2 cursor-pointer">
                <input type="checkbox" name="source" value="arxiv" class="rounded text-blue-600 focus:ring-blue-500 bg-gray-100 dark:bg-gray-700 border-gray-300 dark:border-gray-600">
                <span class="text-sm text-gray-700 dark:text-gray-300">ArXiv</span>
            </label>
        </div>
    </div>

    <!-- Quality Filters -->
    <div>
        <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-3">Quality</h3>
        <div class="space-y-4">
            <!-- Min Stars Slider -->
            <div>
                <div class="flex justify-between text-xs text-gray-500 mb-1">
                    <span>Min Stars</span>
                    <span id="stars-display">0</span>
                </div>
                <input type="range" id="min-likes" min="0" max="10000" step="100" value="0" 
                    class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer dark:bg-gray-700">
            </div>

            <!-- SOTA Toggle -->
            <label class="flex items-center space-x-2 cursor-pointer">
                <div class="relative inline-block w-10 mr-2 align-middle select-none transition duration-200 ease-in">
                    <input type="checkbox" name="has_benchmarks" id="has-benchmarks" class="toggle-checkbox absolute block w-5 h-5 rounded-full bg-white border-4 appearance-none cursor-pointer"/>
                    <label for="has-benchmarks" class="toggle-label block overflow-hidden h-5 rounded-full bg-gray-300 cursor-pointer"></label>
                </div>
                <span class="text-sm text-gray-700 dark:text-gray-300">Has SOTA/Benchmarks</span>
            </label>
        </div>
    </div>

    <!-- Freshness -->
    <div>
        <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-3">Released In</h3>
        <div class="space-y-2">
            <label class="flex items-center space-x-2 cursor-pointer">
                <input type="radio" name="days_ago" value="0" checked class="text-blue-600 focus:ring-blue-500 bg-gray-100 dark:bg-gray-700 border-gray-300 dark:border-gray-600">
                <span class="text-sm text-gray-700 dark:text-gray-300">Any time</span>
            </label>
            <label class="flex items-center space-x-2 cursor-pointer">
                <input type="radio" name="days_ago" value="7" class="text-blue-600 focus:ring-blue-500 bg-gray-100 dark:bg-gray-700 border-gray-300 dark:border-gray-600">
                <span class="text-sm text-gray-700 dark:text-gray-300">Past Week</span>
            </label>
            <label class="flex items-center space-x-2 cursor-pointer">
                <input type="radio" name="days_ago" value="30" class="text-blue-600 focus:ring-blue-500 bg-gray-100 dark:bg-gray-700 border-gray-300 dark:border-gray-600">
                <span class="text-sm text-gray-700 dark:text-gray-300">Past Month</span>
            </label>
            <label class="flex items-center space-x-2 cursor-pointer">
                <input type="radio" name="days_ago" value="365" class="text-blue-600 focus:ring-blue-500 bg-gray-100 dark:bg-gray-700 border-gray-300 dark:border-gray-600">
                <span class="text-sm text-gray-700 dark:text-gray-300">Past Year</span>
            </label>
        </div>
    </div>
</div>

<style>
    /* Custom Toggle Switch Styles */
    .toggle-checkbox:checked {
        @apply right-0 border-green-400;
        right: 0;
        border-color: #68D391;
    }
    .toggle-checkbox:checked + .toggle-label {
        @apply bg-green-400;
        background-color: #68D391;
    }
    .toggle-checkbox {
        right: 0;
        transition: all 0.3s;
    }
    .toggle-label {
        width: 2.5rem;
    }
</style>

<script>
    // Simple UI Logic (Stars Display)
    const slider = document.getElementById('min-likes');
    const display = document.getElementById('stars-display');
    
    if (slider && display) {
        slider.addEventListener('input', (e) => {
            const val = e.target.value;
            display.textContent = val > 0 ? `> ${val}` : '0';
        });
    }
</script>
