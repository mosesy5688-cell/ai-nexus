---
// src/components/home/HomeSearch.astro
// V14.5: Refactored for CES Art 5.1 compliance - search logic extracted to home-search.js
import CategoryPills from './CategoryPills.astro';

interface Props {
  initialQuery?: string;
}

const { initialQuery = '' } = Astro.props;
---
<div class="mb-8 flex flex-col md:flex-row gap-4 items-center sticky top-[65px] bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm py-4 z-30 max-w-4xl mx-auto w-full">
    <div id="search-container" class="w-full relative">
        <form id="search-form" class="w-full" onsubmit="return false;">
            <div class="relative">
                <input
                    type="search"
                    id="search-box"
                    name="q"
                    placeholder="Search any modelâ€¦ e.g., llama, embedding, image generation"
                    class="w-full p-4 pl-12 text-lg border border-gray-300 dark:border-gray-600 rounded-full bg-white dark:bg-gray-800 focus:ring-blue-500 focus:border-blue-500 shadow-lg"
                    aria-label="Search AI Models"
                    value={initialQuery}
                />
                <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                    <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
            </div>
        </form>
        <!-- Dropdown for instant results -->
        <div id="search-results-dropdown" class="absolute z-50 w-full mt-2 bg-white dark:bg-gray-800 rounded-xl shadow-2xl border border-gray-200 dark:border-gray-700 max-h-96 overflow-y-auto hidden"></div>
        <!-- Search Hints -->
        <div class="mt-3 flex flex-wrap justify-center gap-2 text-xs text-gray-500 dark:text-gray-400">
            <span>Try:</span>
            <button type="button" class="search-hint px-2 py-1 bg-gray-100 dark:bg-gray-800 rounded-full hover:bg-indigo-100" data-query="llama 70b">llama 70b</button>
            <button type="button" class="search-hint px-2 py-1 bg-gray-100 dark:bg-gray-800 rounded-full hover:bg-indigo-100" data-query="code generation">code generation</button>
            <button type="button" class="search-hint px-2 py-1 bg-gray-100 dark:bg-gray-800 rounded-full hover:bg-indigo-100" data-query="embedding">embedding</button>
        </div>
        <!-- V14.5 Phase 5: Full Search Toggle -->
        <div id="full-search-container" class="mt-4 flex flex-col items-center gap-2 hidden">
            <div class="text-sm text-gray-500 dark:text-gray-400">Zero top results. Explore more?</div>
            <button 
                id="smartFullSearchBtn" 
                class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold rounded-full shadow-lg transition-transform hover:scale-105 flex items-center gap-2"
            >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                <span>Search all 150K+ models (~30MB)</span>
            </button>
        </div>

        <div class="mt-2 flex justify-center">
            <label class="inline-flex items-center gap-2 cursor-pointer text-xs text-gray-500 dark:text-gray-400 hover:text-indigo-600">
                <input type="checkbox" id="fullSearchToggle" class="w-4 h-4 text-indigo-600 rounded focus:ring-indigo-500" />
                <span>Persistence: Always search full index</span>
                <span id="fullSearchStatus" class="text-gray-400"></span>
            </label>
        </div>
        <!-- V14.2: Category Filter Pills -->
        <CategoryPills />
    </div>
</div>

<script>
  import { setupSearchEvents } from '../../scripts/home-search-events.js';
  document.addEventListener('DOMContentLoaded', setupSearchEvents);
</script>
