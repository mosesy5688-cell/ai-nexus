
---
interface Props {
  modelId: string;
}

const { modelId } = Astro.props;
const urn = `urn:model:${modelId}`;
---

<div class="knowledge-graph-container bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 mt-8">
  <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
    </svg>
    Knowledge Graph
  </h2>

  <div id="kg-loading" class="animate-pulse flex space-y-4 flex-col">
    <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-3/4"></div>
    <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-1/2"></div>
  </div>

  <div id="kg-error" class="hidden text-red-500 text-sm">
    Failed to load graph data.
  </div>

  <div id="kg-content" class="hidden grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Categories injected via JS -->
  </div>
</div>

<script define:vars={{ urn }}>
  async function loadGraph() {
    try {
      const res = await fetch(`/api/graph/neighbors.json?nodeId=${encodeURIComponent(urn)}`);
      if (!res.ok) throw new Error('API Error');
      const data = await res.json();
      
      const container = document.getElementById('kg-content');
      const loader = document.getElementById('kg-loading');
      
      if (!data.neighbors || data.neighbors.length === 0) {
        loader.classList.add('hidden');
        document.getElementById('kg-error').textContent = 'No additional connections found.';
        document.getElementById('kg-error').classList.remove('hidden');
        return;
      }

      // Group by type
      const groups = {};
      data.neighbors.forEach(n => {
        const type = n.type.replace(/_/g, ' ').toUpperCase();
        if (!groups[type]) groups[type] = [];
        groups[type].push(n);
      });

      let html = '';
      for (const [type, items] of Object.entries(groups)) {
        html += `
          <div class="border border-gray-100 dark:border-gray-700 rounded-lg p-3">
            <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">${type}</h3>
            <ul class="space-y-1">
              ${items.map(item => {
                const parts = item.id.split(':');
                const label = parts.length > 2 ? parts.slice(2).join(':') : item.id;
                const shortLabel = label.length > 40 ? label.substring(0, 37) + '...' : label;
                return `<li class="text-sm text-gray-700 dark:text-gray-300 flex items-center gap-1">
                  <span class="w-1.5 h-1.5 rounded-full bg-indigo-500"></span>
                  <span title="${label}">${shortLabel}</span>
                </li>`;
              }).join('')}
            </ul>
          </div>
        `;
      }

      container.innerHTML = html;
      loader.classList.add('hidden');
      container.classList.remove('hidden');

    } catch (e) {
      console.error(e);
      document.getElementById('kg-loading').classList.add('hidden');
      document.getElementById('kg-error').classList.remove('hidden');
    }
  }

  // Load when visible
  const observer = new IntersectionObserver((entries) => {
    if (entries[0].isIntersecting) {
      loadGraph();
      observer.disconnect();
    }
  });
  
  observer.observe(document.querySelector('.knowledge-graph-container'));
</script>
