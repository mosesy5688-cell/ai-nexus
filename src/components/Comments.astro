---
// src/components/Comments.astro
// Placeholder component for future Loop 3 (Auto-Guard) integration

interface Props {
  modelId: string;
}

const { modelId } = Astro.props;
---

<section class="mt-12 border-t border-gray-200 dark:border-gray-700 pt-8">
  <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Comments & Discussion</h2>
  
  <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 text-center border border-gray-200 dark:border-gray-700">
    <div class="mb-4">
      <svg class="w-12 h-12 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
      </svg>
    </div>
    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Join the Conversation</h3>
    <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-md mx-auto">
      Share your experience, ask questions, or provide feedback about this model.
    </p>
    <button 
      type="button"
      class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
      onclick="alert('Comments feature coming soon with Auto-Guard integration!')"
    >
      Write a Comment
    </button>
  </div>
</section>
