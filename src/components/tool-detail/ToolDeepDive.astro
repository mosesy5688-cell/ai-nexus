---
interface Props {
  tool: any;
}

const { tool } = Astro.props;

const installCmd = tool.language === 'Python' 
  ? `pip install ${tool.name.toLowerCase()}` 
  : (tool.language === 'JavaScript' ? `npm install ${tool.name.toLowerCase()}` : `git clone ${tool.source_url}`);

const apiExample = `import { ${tool.name.replace(/ /g,'')} } from '${tool.name.toLowerCase()}';\n\nconst client = new ${tool.name.replace(/ /g,'')}();\nawait client.connect();`;
---

<div class="space-y-8">
  <!-- Section: Tool Info & Tags -->
  <section class="grid grid-cols-1 md:grid-cols-2 gap-6">
       <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
         <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
            <span>üìã</span> Tool Info
         </h2>
         <dl class="space-y-3 text-sm">
           <div class="flex justify-between">
             <dt class="text-gray-500 dark:text-gray-400">Language</dt>
             <dd class="font-medium text-gray-900 dark:text-white">{tool.language || 'Unknown'}</dd>
           </div>
           <div class="flex justify-between">
             <dt class="text-gray-500 dark:text-gray-400">License</dt>
             <dd class="font-medium text-gray-900 dark:text-white">{tool.license || 'Unknown'}</dd>
           </div>
           {tool.source_url && (
             <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-700">
               <a href={tool.source_url} target="_blank" rel="noopener noreferrer"
                  class="flex items-center justify-center w-full px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors text-sm font-medium">
                 View Source Code
               </a>
             </div>
           )}
         </dl>
       </div>

       <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
         <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
            <span>üè∑Ô∏è</span> Classification
         </h2>
         {tool.tags && tool.tags.length > 0 ? (
           <div class="flex flex-wrap gap-2">
             {(Array.isArray(tool.tags) ? tool.tags : JSON.parse(tool.tags || '[]')).slice(0, 15).map((tag: string) => (
               <a href={`/search?q=${encodeURIComponent(tag)}`}
                  class="px-3 py-1 text-xs bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300 rounded-full hover:bg-blue-100 transition-colors">
                 {tag}
               </a>
             ))}
           </div>
         ) : (
            <p class="text-gray-500 italic text-sm">No tags available.</p>
         )}
       </div>
  </section>

  <!-- Section: Installation -->
  <section class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
      <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
         <span>üíª</span> Installation
      </h2>
      <div class="bg-gray-900 text-gray-300 p-4 rounded-lg font-mono text-sm relative group">
         <code>{installCmd}</code>
         <button class="absolute top-3 right-3 opacity-0 group-hover:opacity-100 px-2 py-1 bg-gray-700 rounded text-xs">Copy</button>
      </div>
  </section>
  
  <!-- Section: API Reference (Placeholder) -->
   <section class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-100 dark:border-gray-700">
      <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
         <span>üîå</span> API Reference
      </h2>
      <div class="bg-gray-900 text-blue-300 p-4 rounded-lg font-mono text-xs overflow-x-auto">
         <pre>{apiExample}</pre>
      </div>
      <p class="mt-4 text-center text-sm text-gray-500">
         <a href={tool.source_url} target="_blank" class="text-indigo-500 hover:underline">Read full documentation</a>
      </p>
  </section>
</div>
