---
// V16.2: Updated Navigation - Focused on Core Features
// Removed: Compare (deprecated, not core feature)
const navLinks = [
  { href: "/", text: "Home" },
  { href: "/ranking", text: "Rankings" },
  { href: "/models", text: "Models" },
  { href: "/agents", text: "Agents" },
  { href: "/spaces", text: "Spaces" },
  { href: "/tools", text: "Tools" },
  { href: "/datasets", text: "Datasets" },
  { href: "/papers", text: "Papers" },
  { href: "/reports", text: "Reports" },
  { href: "/knowledge", text: "Knowledge" },
];

// External links
const externalLinks = [
  { href: "https://github.com/mosesy5688-cell/ai-nexus", text: "GitHub", icon: "github" },
];
---
<header class="sticky top-0 z-30 w-full backdrop-blur flex-none transition-colors duration-500 lg:border-b lg:border-gray-200 bg-white/80" x-data="{ open: false }">
    <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <!-- Site Logo (V16.5 Free2AI Branding) -->
            <a href="/" class="flex items-center gap-2 text-xl sm:text-2xl font-black text-gray-900 dark:text-white tracking-tighter group transition-all hover:scale-[1.02]">
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600">Free2AITools</span>
            </a>
            
            <!-- Right-side items -->
            <div class="flex items-center gap-4">
                <!-- Desktop Navigation -->
                <div class="hidden md:flex items-center gap-6">
                    {navLinks.map(link => (
                        <a href={link.href} class="text-sm font-bold text-gray-600 hover:text-blue-600 transition-colors whitespace-nowrap">
                            {link.text}
                        </a>
                    ))}
                    <!-- GitHub Icon -->
                    <a 
                      href="https://github.com/mosesy5688-cell/ai-nexus" 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="text-gray-600 hover:text-gray-900 transition-colors"
                      title="View on GitHub"
                    >
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                        </svg>
                    </a>
                </div>
                <!-- Mobile Search & Menu Toggle -->
                <button @click="open = !open" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200" aria-controls="navbar-default" :aria-expanded="open">
                    <span class="sr-only">Open main menu</span>
                    <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/></svg>
                </button>
            </div>
        </div>
        <!-- Mobile Collapsible Menu -->
        <div class="w-full md:hidden" id="navbar-default" x-show="open" x-transition>
            <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50">
                {navLinks.map(link => (
                    <li>
                        <a href={link.href} class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0">{link.text}</a>
                    </li>
                ))}
            </ul>
        </div>
    </nav>
</header>