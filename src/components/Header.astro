---
// src/components/Header.astro
import ThemeToggle from './ThemeToggle.astro';
import Search from './Search.astro';
const navLinks = [
  { href: "/explore", text: "Explore Models" },
  { href: "/reports", text: "Reports" },
  { href: "/about", text: "About" },
];
---

<header class="sticky top-0 z-40 w-full backdrop-blur flex-none transition-colors duration-500 lg:z-50 lg:border-b lg:border-gray-900/10 dark:border-gray-50/[0.06] bg-white/80 dark:bg-gray-900/80">
    <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <!-- Site Logo -->
            <a href="/" class="flex items-center gap-2 text-xl sm:text-2xl font-bold text-gray-900 dark:text-white">
                <span>Free AI Tools</span>
            </a>
            
            <!-- Centered Desktop Search -->
            <div class="hidden md:flex flex-1 justify-center px-8 lg:px-16">
                <Search />
            </div>
            
            <!-- Right-side items -->
            <div class="flex items-center gap-4">
                <!-- Desktop Navigation -->
                <div class="hidden md:flex items-center gap-6">
                    {navLinks.map(link => (
                        <a href={link.href} class="text-base font-medium text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                            {link.text}
                        </a>
                    ))}
                </div>
                <div class="hidden md:block"><ThemeToggle /></div>
                
                <!-- Mobile Search & Menu Toggle -->
                <button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-default" aria-expanded="false">
                    <span class="sr-only">Open main menu</span>
                    <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/></svg>
                </button>
            </div>
        </div>
        <!-- Mobile Collapsible Menu -->
        <div class="hidden w-full md:hidden" id="navbar-default">
            <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 dark:bg-gray-800 dark:border-gray-700">
                <li class="mb-4"><Search /></li>
                {navLinks.map(link => (
                    <li>
                        <a href={link.href} class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">{link.text}</a>
                    </li>
                ))}
                <li class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                    <div class="flex items-center justify-between">
                        <span class="text-gray-600 dark:text-gray-400">Theme</span>
                        <ThemeToggle />
                    </div>
                </li>
            </ul>
        </div>
    </nav>
</header>