---
// src/components/Header.astro
const navLinks = [
  { href: "/explore", text: "Explore Models" },
  { href: "/reports", text: "Reports" },
  { href: "/about", text: "About" },
];
---

<header class="bg-white/80 dark:bg-gray-950/80 backdrop-blur-lg sticky top-0 z-50 border-b border-gray-200 dark:border-gray-800">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-20">
      <!-- Site Logo -->
      <a href="/" class="flex items-center gap-2 text-xl sm:text-2xl font-bold text-gray-900 dark:text-white">

        <span>Free AI Tools</span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        {navLinks.map(link => (
          <a href={link.href} class="text-lg font-medium text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
            {link.text}
          </a>
        ))}
      </nav>

      <!-- Mobile Navigation (can be implemented with a menu button) -->
      <div class="md:hidden">
        <!-- Mobile menu button placeholder -->
        <button class="text-gray-600 dark:text-gray-300 focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
        </button>
      </div>
    </div>
  </div>
</header>