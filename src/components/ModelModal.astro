---
// src/components/ModelModal.astro
import AdSlot from './AdSlot.astro';
---

<div id="model-modal" class="fixed inset-0 bg-black bg-opacity-70 z-50 hidden items-center justify-center p-4" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div id="modal-backdrop" class="absolute inset-0"></div>
  
  <div id="modal-content" class="relative bg-white dark:bg-gray-900 rounded-2xl shadow-2xl w-full max-w-2xl max-h-[90vh] overflow-y-auto transform transition-all duration-300 scale-95 opacity-0">
    <div class="p-6 sm:p-8">
      <!-- Modal Header -->
      <div class="flex justify-between items-start mb-4">
        <h2 id="modal-title" class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">
          <!-- Model Name -->
        </h2>
        <button id="modal-close-btn" type="button" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Modal Body -->
      <div class="space-y-6">
        <div class="flex items-center space-x-4 text-sm text-gray-500 dark:text-gray-400">
          <span id="modal-author">
            <!-- Author -->
          </span>
          <span class="text-gray-300 dark:text-gray-600">•</span>
          <span id="modal-task">
            <!-- Task -->
          </span>
          <span class="text-gray-300 dark:text-gray-600">•</span>
          <span id="modal-source-platform">
            <!-- Source Platform -->
          </span>
        </div>

        <p id="modal-description" class="text-base text-gray-700 dark:text-gray-300 leading-relaxed">
          <!-- Full Description -->
        </p>

        <!-- Ad Slot inside Modal -->
        <AdSlot width={300} height={250} label="Adsense In-Modal" />

        <!-- Action Button -->
        <a id="modal-source-link" href="#" target="_blank" rel="noopener noreferrer" class="w-full block text-center bg-blue-600 text-white text-lg font-semibold py-3 px-6 rounded-lg hover:bg-blue-700 transition-colors shadow-lg">
          Go to Model Source
        </a>
      </div>
    </div>
  </div>
</div>