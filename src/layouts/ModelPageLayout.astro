---
import type { Model } from '@/types';
import BaseLayout from '@/layouts/BaseLayout.astro';
import AdSlot from '@/components/AdSlot.astro';

export interface Props {
  model: Model;
}

const { model } = Astro.props;
---
<BaseLayout title={model.name} description={model.description.substring(0, 160)}>
  <main class="container mx-auto px-4 py-12">
    <article class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
      <header class="border-b pb-4 mb-4">
        <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white">{model.name}</h1>
        {model.author && <p class="text-lg text-gray-500 dark:text-gray-400 mt-1">by {model.author}</p>}
      </header>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="md:col-span-2">
          <h2 class="text-2xl font-semibold mb-2 text-gray-800 dark:text-gray-200">Description</h2>
          <p class="text-gray-700 dark:text-gray-300 prose prose-lg max-w-none">{model.description}</p>

          <h2 class="text-2xl font-semibold mt-6 mb-2 text-gray-800 dark:text-gray-200">Sources</h2>
          <ul class="list-disc list-inside">
            {model.sources.map(source => (
              <li><a href={source.url} target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:underline">{source.platform}</a></li>
            ))}
          </ul>
        </div>

        <aside>
          <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
            <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">Details</h3>
            <p><strong>Task:</strong> {model.task}</p>
            <p><strong>Likes:</strong> {model.likes.toLocaleString()}</p>
            <p><strong>Downloads:</strong> {model.downloads.toLocaleString()}</p>
            <p><strong>Last Updated:</strong> {new Date(model.lastModified).toLocaleDateString()}</p>
          </div>
          
          <!-- Amazon Ad Slot -->
          <AdSlot type="amazon" adId="YOUR_AMAZON_DETAIL_PAGE_AD_ID" width="100%" height="250px" className="mt-6" />
        </aside>
      </div>
    </article>
  </main>
</BaseLayout>