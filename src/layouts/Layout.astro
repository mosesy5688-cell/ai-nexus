---
// src/layouts/Layout.astro
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import OnboardingTour from '@/components/common/OnboardingTour.astro';

// V9.70: Ensure global Tailwind CSS is ALWAYS included
// This import MUST be at layout level to ensure all pages get Tailwind
import '../styles/base.css';

interface Props {
	title: string;
	description?: string;
    image?: string;
    jsonld?: object;
}

// V3.1 Phase 7: Enhanced SEO defaults
const { 
    title, 
    description = 'The Definitive Open-Source AI Index. VRAM calculator, precision tech specs, neural discovery, and actionable toolchains powered by Free2AI.', 
    image = '/og-image.jpg', 
    jsonld 
} = Astro.props;
const resolvedImage = new URL(image, Astro.site || Astro.url.origin);
const canonicalURL = new URL(Astro.url.pathname, Astro.site || Astro.url.origin);

// V3.1 Phase 7: Schema.org Organization + WebSite with SearchAction
const defaultSchema = {
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": "Organization",
            "name": "Free2AI",
            "url": "https://free2aitools.com",
            "logo": "https://cdn.free2aitools.com/assets/logo.png",
            "description": "The Definitive Open-Source AI Index."
        },
        {
            "@type": "WebSite",
            "name": "Free2AI",
            "url": "https://free2aitools.com",
            "potentialAction": {
                "@type": "SearchAction",
                "target": "https://free2aitools.com/search?q={search_term_string}",
                "query-input": "required name=search_term_string"
            }
        }
    ]
};
const schemaToUse = jsonld || defaultSchema;
---

<!doctype html>
<html lang="en">
<head>
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-58C2CQ8G');</script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    
    <!-- V16.8.1 RSS Feeds: Standardized Daily Feed -->
    <link rel="alternate" type="application/rss+xml" title="AI Knowledge Base Feed" href="https://cdn.free2aitools.com/rss/knowledge.xml">
    <link rel="alternate" type="application/rss+xml" title="AI Industry Daily Updates Feed" href="https://cdn.free2aitools.com/rss/reports.xml">

    <!-- V4.5 Performance: Preconnect to external origins for faster FCP -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
    <link rel="preconnect" href="https://www.googletagmanager.com" crossorigin>
    <link rel="preconnect" href="https://pagead2.googlesyndication.com" crossorigin>
    <link rel="dns-prefetch" href="https://huggingface.co">
    <link rel="dns-prefetch" href="https://github.com">
    
    <!-- V4.6 Performance: Preload critical Alpine.js (LCP blocker) -->
    <link rel="modulepreload" href="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" as="script">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={Astro.url.href}>
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={resolvedImage}>

    <!-- Twitter Card Meta Tags -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content={Astro.url.href}>
    <meta property="twitter:title" content={title}>
    <meta property="twitter:description" content={description}>
    <meta property="twitter:image" content={resolvedImage}>

    <meta name="description" content={description}>
    <title>{title}</title>

    <link rel="canonical" href={Astro.url.href} />

    <meta property="article:published_time" content={new Date().toISOString()} />
    <meta property="article:modified_time" content={new Date().toISOString()} />

    <!-- Google AdSense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2292826803755214"
     crossorigin="anonymous"></script>

    <!-- Global Alpine.js loaded for TabbedContent & ModelCarousel -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <!-- V3.1 JSON-LD Schema (Phase 7 SEO Enhancement) -->
    <script type="application/ld+json" set:html={JSON.stringify(schemaToUse)} />
</head>
<body class="bg-gray-50 dark:bg-gray-900 text-gray-800 dark:text-gray-100 font-sans antialiased flex flex-col min-h-screen">
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-58C2CQ8G"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    
    <Header />
    <OnboardingTour />
    <slot />
    <Footer />
</body>
</html>
