---
// src/layouts/Layout.astro
interface Props {
  title: string;
  description?: string;
}

const { title, description = "An authoritative index of open-source AI models, tools, and resources, curated for developers and researchers." } = Astro.props;

import '../styles/base.css';
---

<!doctype html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content={description} />
    <title>{title} | AI-Nexus</title>

    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-50 dark:bg-gray-950 text-gray-800 dark:text-gray-200 font-sans antialiased">

    <!-- Header -->
    <header class="border-b border-gray-200 dark:border-gray-800 sticky top-0 bg-gray-50/80 dark:bg-gray-950/80 backdrop-blur-sm z-50">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center">
                    <a href="/" class="text-2xl font-bold text-gray-900 dark:text-white">
                        AI<span class="text-blue-600">-</span>Nexus
                    </a>
                </div>
                <div class="hidden sm:flex sm:items-center sm:space-x-6">
                    <a href="/#keywords" class="font-medium text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition">Keywords</a>
                    <a href="/about" class="font-medium text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition">About</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main>
        <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-100 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">AI-Nexus</h3>
                    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                        The open-source guide to the AI universe.
                    </p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Quick Links</h3>
                    <ul class="mt-4 space-y-2">
                        <li><a href="/" class="text-sm text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">Home</a></li>
                        <li><a href="/#keywords" class="text-sm text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">Keywords</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Legal</h3>
                    <ul class="mt-4 space-y-2">
                        <li><a href="/privacy" class="text-sm text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">Privacy Policy</a></li>
                        <li><a href="/terms" class="text-sm text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">Terms of Service</a></li>
                    </ul>
                </div>
            </div>
            <div class="mt-8 border-t border-gray-200 dark:border-gray-700 pt-8 text-center">
                <p class="text-sm text-gray-500 dark:text-gray-400">&copy; {new Date().getFullYear()} AI-Nexus. All rights reserved.</p>
            </div>
        </div>
    </footer>

</body>
</html>
