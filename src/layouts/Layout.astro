---
// This is the main layout component that wraps all pages.
// It includes the necessary HTML structure, metadata, and global styles.

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Discover open-source AI models and tools." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>

		<!-- Link the Tailwind base stylesheet to ensure global CSS is applied -->
		<link rel="stylesheet" href="../styles/base.css" />
	</head>
	<body class="min-h-screen bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 font-sans antialiased">
		<slot />
	</body>
</html>

<style is:global>
	/* Ensure all links have basic styling */
	a {
		@apply text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 transition duration-150;
	}

	/* Override default styles for Markdown links, if used */
	.prose a {
		@apply font-medium underline;
	}
</style>
