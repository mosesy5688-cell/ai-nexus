---
/**
 * AI Research Papers Catalog (V4.1)
 * Optimized SSR + UniversalCatalog Engine
 */
import Layout from '../layouts/Layout.astro';
import ListingControls from '../components/common/ListingControls.astro';
import CatalogCard from '../components/common/CatalogCard.astro';

// SSR Data Fetching
const { items: allPapers, error } = await fetchCatalogData('paper', Astro.locals.runtime?.env);
const papers = allPapers.slice(0, 48).map(truncateListingItem);

const pageTitle = "AI Research Papers Catalog | Neural Archive";
const pageDescription = "Explore the latest in AI research. 50,000+ sharded papers from ArXiv and beyond.";
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="container mx-auto px-4 py-12 min-h-screen">
        <header class="mb-10">
            <h1 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-2 tracking-tight">
                Research <span class="text-amber-600">Papers</span>
            </h1>
            <p class="text-lg text-gray-600 dark:text-zinc-400 max-w-2xl">
                The cutting edge of artificial intelligence research. Sharded from the global knowledge mesh.
            </p>
        </header>

        <ListingControls type="paper" searchId="papers-search" />

        <div id="papers-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {papers.map((paper: any) => (
                <div class="animate-in fade-in slide-in-from-bottom-4 duration-500">
                    <div class="h-full" data-ssr-item>
                         <CatalogCard item={paper} type="paper" />
                    </div>
                </div>
            ))}
        </div>

        <div id="pagination" class="mt-16 flex justify-center items-center gap-4"></div>
    </main>

    <script define:vars={{ initialData: papers }}>
        window.__CATALOG_DATA__ = initialData;
    </script>

    <script>
        import { UniversalCatalog } from '../scripts/lib/UniversalCatalog.js';
        
        const init = () => {
            new UniversalCatalog({
                initialData: window.__CATALOG_DATA__ || [],
                type: 'paper',
                gridId: 'papers-grid',
                searchId: 'papers-search',
                dataUrl: 'https://cdn.free2aitools.com/cache/rankings/paper/p1.json'
            });
        };

        document.addEventListener('DOMContentLoaded', init);
    </script>
</Layout>
