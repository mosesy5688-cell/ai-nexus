---
/**
 * AI Research Papers (V16.5)
 * Using UniversalCatalog engine
 */
import Layout from '../layouts/Layout.astro';

const pageTitle = "AI Research Papers - Free2AI";
---

<Layout title={pageTitle}>
    <main class="container mx-auto px-4 py-8">
        <header class="mb-12 text-center">
            <h1 class="text-4xl font-black text-white mb-4 tracking-tighter uppercase">AI Research Papers</h1>
        </header>

        <div class="mb-8 flex flex-col md:flex-row gap-4 items-center">
            <input type="text" id="models-search" placeholder="Search papers..." class="w-full md:w-1/2 p-3 bg-zinc-900 border border-zinc-800 rounded-lg text-white" />
            <div id="results-count" class="text-xs text-zinc-500 font-bold uppercase tracking-widest">--</div>
        </div>

        <div id="models-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"></div>
        <div id="pagination" class="mt-12 flex justify-center items-center gap-4"></div>
    </main>

    <script>
        import { UniversalCatalog } from '../scripts/lib/UniversalCatalog.js';
        
        document.addEventListener('DOMContentLoaded', () => {
             new UniversalCatalog({
                type: 'paper',
                dataUrl: 'https://cdn.free2aitools.com/cache/trending.json'
            });
        });
    </script>
</Layout>
