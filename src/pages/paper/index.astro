---
/**
 * Paper Index Page - V15.0
 * Lists AI research papers with dynamic R2 data loading
 * R2 Path: /cache/entities/paper/
 */

export const prerender = false;

import Layout from '../../layouts/Layout.astro';

const pageTitle = 'AI Research Papers - arXiv & Beyond';
const pageDescription = 'Explore the latest AI and machine learning research papers. Stay updated with cutting-edge research.';
const canonicalUrl = 'https://free2aitools.com/paper';

const categories = [
  { name: 'Large Language Models', query: 'LLM', icon: 'üí¨', color: 'from-blue-50 to-indigo-50' },
  { name: 'Computer Vision', query: 'vision', icon: 'üëÅÔ∏è', color: 'from-green-50 to-emerald-50' },
  { name: 'Reinforcement Learning', query: 'reinforcement', icon: 'üéÆ', color: 'from-purple-50 to-violet-50' },
  { name: 'Diffusion Models', query: 'diffusion', icon: 'üé®', color: 'from-orange-50 to-amber-50' },
];
---

<Layout title={pageTitle} description={pageDescription}>
  <link slot="head" rel="canonical" href={canonicalUrl} />
  
  <main class="container mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-amber-100 dark:bg-amber-900/30 rounded-full mb-4">
        <span class="text-2xl">üìÑ</span>
        <span class="text-sm font-semibold text-amber-800 dark:text-amber-200">RESEARCH</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-white mb-4">AI Research Papers</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Explore cutting-edge AI research from arXiv and academic publications.
      </p>
    </header>

    <section class="mb-12">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {categories.map((cat) => (
          <a href={`/?q=${cat.query}&type=paper`}
             class={`group p-6 bg-gradient-to-br ${cat.color} dark:from-gray-800 dark:to-gray-900 rounded-xl hover:shadow-lg transition-all border border-gray-100 dark:border-gray-700`}>
            <div class="text-3xl mb-2">{cat.icon}</div>
            <h3 class="font-bold text-gray-900 dark:text-white group-hover:text-amber-600">{cat.name}</h3>
          </a>
        ))}
      </div>
    </section>

    <section>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Recent Papers</h2>
        <span id="papers-count" class="text-sm text-gray-500"></span>
      </div>
      <div id="papers-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="col-span-full text-center py-12 text-gray-500">Loading papers...</div>
      </div>
    </section>
  </main>
</Layout>

<script>
  async function loadPapers() {
    const grid = document.getElementById('papers-grid');
    const countEl = document.getElementById('papers-count');
    if (!grid) return;

    try {
      // V15.0: Use entity-specific R2 path
      const res = await fetch('/api/cache/entities/paper/index.json');
      if (!res.ok) {
        // Fallback to trending.json
        const fallback = await fetch('/api/cache/trending.json');
        if (!fallback.ok) throw new Error('No data');
        const data = await fallback.json();
        renderPapers(data.papers || [], grid, countEl);
        return;
      }
      
      const papers = await res.json();
      renderPapers(Array.isArray(papers) ? papers : papers.data || [], grid, countEl);
    } catch (err) {
      grid.innerHTML = '<div class="col-span-full text-center py-12 text-gray-500">Papers will be available after the next pipeline run.</div>';
    }
  }

  function renderPapers(papers: any[], grid: HTMLElement, countEl: HTMLElement | null) {
    if (countEl) countEl.textContent = `${papers.length} papers`;
    
    if (papers.length === 0) {
      grid.innerHTML = '<div class="col-span-full text-center py-12 text-gray-500">No papers found.</div>';
      return;
    }

    grid.innerHTML = papers.slice(0, 24).map((p: any) => `
      <a href="/paper/${p.slug || 'arxiv--' + p.arxivId || p.id}" 
         class="block bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm hover:shadow-lg transition-all border border-gray-100 dark:border-gray-700">
        <span class="px-2 py-1 bg-amber-100 dark:bg-amber-900/50 text-amber-700 dark:text-amber-300 rounded text-xs">
          ${p.arxivId || 'Paper'}
        </span>
        <h3 class="font-bold text-gray-900 dark:text-white mt-3 mb-2 line-clamp-2">${p.title || p.name}</h3>
        <p class="text-sm text-gray-500 dark:text-gray-400 line-clamp-1">${p.authors || p.author || ''}</p>
      </a>
    `).join('');
  }

  document.readyState === 'loading' 
    ? document.addEventListener('DOMContentLoaded', loadPapers) 
    : loadPapers();
</script>
