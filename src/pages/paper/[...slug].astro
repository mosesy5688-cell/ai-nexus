---
export const prerender = false;

/**
 * Paper Detail Page V16.8.14
 * High-Fidelity Emergency Reconstruction
 * Architecture: Unified 5-Zone High-Density Layout
 */

import Layout from '../../layouts/Layout.astro';
import EntityLayout from '../../layouts/EntityLayout.astro';
import EntityHeader from '../../components/entity/EntityHeader.astro';
import ZoneUseCases from '../../components/entity/ZoneUseCases.astro';
import UniversalCore from '../../components/entity/UniversalCore.astro';
import CiteEntity from '../../components/common/CiteEntity.astro';
import ModelInfoTable from '../../components/ModelInfoTable.astro';
import PaperDeepDive from '../../components/paper-detail/PaperDeepDive.astro';
import FNITrustPanel from '../../components/FNITrustPanel.astro';
import { hydrateEntity } from '../../utils/entity-cache-reader-core.js';
import { getUseCases } from '../../utils/inference.js';
import { loadEntityStreams } from '../../utils/packet-loader.js';
import { getRouteFromId } from '../../utils/mesh-routing-core.js';
import { normalizeEntitySlug } from '../../utils/entity-cache-reader-core.js';

const { slug } = Astro.params;
const slugStr = Array.isArray(slug) ? slug.join('/') : (slug || '');

let paper = null;
let error = null;
let tagsArray = [];
let pageTitle = "AI Research Paper - Free AI Tools";
let pageDescription = "Explore the latest breakthroughs in AI research and architectures.";
let meshRelations = [];

try {
  if (!slug) throw new Error("No slug/ID provided");
  // V16.5: Static Assembly Architecture
  const type = 'paper';
  const { entity, html, mesh, _meta } = await loadEntityStreams(type, slugStr, Astro.locals);
  
  if (!entity || !_meta.available) {
    Astro.response.status = 404;
    return Astro.redirect('/404?reason=paper-not-found&id=' + encodeURIComponent(slugStr));
  }

  paper = hydrateEntity(entity, type);
  tagsArray = paper?.tags || [];
  meshRelations = mesh || [];

  const displayPaperName = paper?.name || paper?.title || 'Unknown Research Paper';
  pageTitle = `${displayPaperName} - AI Research Insight`;
  pageDescription = paper?.seo_summary?.description || paper?.abstract || `Deep dive into ${displayPaperName} research and architecture.`;
  
  paper.html_readme = html || paper.html_readme || null;

} catch (e) {
  console.error("[PaperPage] Error loading paper:", e);
  error = e;
}

if (!paper && !error) {
  Astro.response.status = 404;
  return Astro.redirect('/404?source=paper-not-found');
}

const paperTitle = paper?.name || paper?.title || 'Unknown Research Paper';
const entityId = paper?.id || slugStr;
const modelId = entityId;
const paperId = entityId;
const arxivId = entityId;
const slugString = slugStr;
const displayAuthor = paper?.author || (Array.isArray(paper?.authors) && paper.authors[0]) || 'Research Community';

const placeholderImage = '/images/models/default-model.jpg';
const coverImage = paper?.image_url || placeholderImage;

const jsonld = paper ? {
  "@context": "https://schema.org",
  "@type": "ScholarlyArticle",
  "headline": paperTitle,
  "description": pageDescription,
  "author": Array.isArray(paper.authors) ? paper.authors.map(a => ({ "@type": "Person", "name": a })) : [{ "@type": "Person", "name": displayAuthor }]
} : null;

const canonicalPath = paper ? getRouteFromId(paper.id || paperId, 'paper') : undefined;
---

<EntityLayout 
  entity={paper} 
  type="paper" 
  title={pageTitle} 
  description={pageDescription}
  image={coverImage}
  jsonld={jsonld}
  canonical={canonicalPath}
>
    {/* Zone 1: Hero */}
    {paper && (
      <EntityHeader 
        slot="hero"
        name={paperTitle}
        entityType="paper"
        entityIcon="ðŸ“„"
        entityLabel="Paper"
        verified={false} 
        author={displayAuthor}
        lastUpdated={paper.last_updated}
        description={paper.seo_summary?.description || paper.abstract}
        sourceUrl={paper.source_url}
        entityId={paperId}
        hasImage={Boolean(paper.image_url)}
      />
    )}

    {/* Zone 2: Insights Extra */}
    {paper && (
      <div slot="insights-extra" class="mt-4 space-y-8">
         <div class="passport-block animate-slide-up" style="animation-delay: 0.2s;">
            <ModelInfoTable 
              type="paper"
              model={{
                ...paper,
                displayName: paperTitle
              }} 
            />
         </div>
      </div>
    )}
    
    {/* Zone 1.5: Use Cases */}
    {paper && (
      <ZoneUseCases 
        slot="use-cases" 
        usecases={getUseCases(paper)} 
      />
    )}

    {/* Zone 3: CORE (Knowledge Mesh & Relations) */}
    {paper && (
      <div slot="core-desktop" class="space-y-16">
         <div class="cite-block animate-slide-up" style="animation-delay: 0.4s;">
            <CiteEntity 
              id={paperId} 
              name={paperTitle} 
              author={displayAuthor} 
              url={paper.source_url} 
              type="paper" 
            />
         </div>
      </div>
    )}
  
    {paper && (
      <div slot="core-knowledge" class="pt-16 border-t border-zinc-100 dark:border-zinc-800">
         <UniversalCore entity={paper} type="paper" meshRelations={meshRelations} />
      </div>
    )}

    {paper && (
      <div slot="deep-dive" class="space-y-12">
         {/* Zone 4.1: Developer Trust & Verification */}
         <div class="space-y-8">
            {paper.fni_score !== undefined && (
              <FNITrustPanel 
                fniScore={paper.fni_score}
                fniPercentile={paper.fni_percentile}
                fniP={paper.fni_p}
                fniV={paper.fni_v}
                fniC={paper.fni_c}
                fniU={paper.fni_u}
                fniCommentary={paper.fni_commentary}
                modelName={paperTitle}
                modelId={paperId}
              />
            )}
         </div>

         {/* Zone 4.2: Primary Documentation / Technical Content */}
         <div class="pt-8 border-t border-gray-100 dark:border-gray-800">
            <PaperDeepDive paper={paper} />
         </div>
      </div>
    )}

    {/* Zone 5: Community */}
    {paper && (
      <div slot="community">
          <AiDisclaimer source={paper.source} lastUpdated={paper.last_updated} />
      </div>
    )}
</EntityLayout>
