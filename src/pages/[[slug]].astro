---
import Layout from '../layouts/Layout.astro';
// FIX: Explicitly add the .ts extension to resolve build error
import { CORE_KEYWORDS } from '../content/config.ts';
// FIX: Explicitly add the .ts extension to resolve build error
import { getToolsForKeyword } from '../lib/data.ts';

// Define the paths for all available keyword slugs
export async function getStaticPaths() {
  return CORE_KEYWORDS.map(keyword => ({
    params: { slug: keyword.slug },
  }));
}

// Get the current slug from the URL params
const { slug } = Astro.params;

// Get the specific keyword object (for title and description)
const currentKeyword = CORE_KEYWORDS.find(k => k.slug === slug);

// Fetch the tools matching the slug using the new static data function
const tools = await getToolsForKeyword(slug);

// Determine the title to display
const pageTitle = currentKeyword?.title || slug || 'AI Tools';
const pageDescription = currentKeyword?.description || `Explore tools related to ${pageTitle}.`;

// Use Lucide icons for aesthetics (assuming Tailwind is set up)
// We will use a simple card layout with responsive grid.
---

<Layout title={pageTitle}>
  <main class="container max-w-7xl mx-auto px-4 py-8">
    <!-- Header Section -->
    <header class="text-center mb-12">
      <h1 class="text-4xl sm:text-5xl font-extrabold text-gray-900 dark:text-gray-100 mb-4">
        {pageTitle}
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        {pageDescription}
      </p>
      <a 
        href="/keywords" 
        class="inline-flex items-center mt-4 text-blue-600 hover:text-blue-500 font-medium transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1"><path d="m15 18-6-6 6-6"/></svg>
        Back to Keywords
      </a>
    </header>

    <!-- Tool Listing Section -->
    {tools.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {tools.map((tool) => (
          <article class="bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 border border-gray-200 dark:border-gray-700 p-6 flex flex-col justify-between">
            <div>
              <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-2 line-clamp-2">
                {tool.name}
              </h2>
              <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                Task: <span class="font-medium text-gray-700 dark:text-gray-300">{tool.task || 'General'}</span>
              </p>
              
              <div class="flex flex-wrap gap-2 mb-4">
                {tool.tags.slice(0, 3).map(tag => (
                  <span class="text-xs font-semibold px-3 py-1 bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            </div>

            <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-700 flex justify-between items-center">
              <span class="text-sm text-gray-500 dark:text-gray-400">
                By {tool.author}
              </span>
              <a 
                href={tool.source} 
                target="_blank" 
                rel="noopener noreferrer"
                class="bg-blue-600 text-white text-sm font-medium py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors shadow-md"
              >
                Go to Model
              </a>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center p-12 bg-gray-50 dark:bg-gray-800 rounded-lg shadow-inner">
        <p class="text-xl text-gray-500 dark:text-gray-400">
          No tools found for "{pageTitle}".
        </p>
        <p class="text-md text-gray-400 dark:text-gray-500 mt-2">
          Try a different keyword or check back later after the data pipeline runs.
        </p>
      </div>
    )}
  </main>
</Layout>
