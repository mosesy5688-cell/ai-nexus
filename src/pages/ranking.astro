---
import Layout from '@/layouts/Layout.astro';
import ModelCard from '@/components/ModelCard.astro';
import allRankings from '@/data/rankings.json';
import allKeywords from '@/data/keywords.json';

const { hot, trending, newest, rising, categories, generatedAt } = allRankings;

const pageTitle = "AI Model Leaderboards";
const pageDescription = "Explore the top AI models ranked by popularity, recent activity, and rising stars in the open-source community.";

// Helper to get keyword title from slug
const keywordMap = new Map(allKeywords.map(k => [k.slug, k.title]));

const mainRankings = [
    { title: "ðŸ”¥ Hot Models", description: "Ranked by community likes.", models: hot },
    { title: "ðŸš€ Trending Models", description: "Ranked by community downloads.", models: trending },
    { title: "âœ¨ Newest Models", description: "The most recently updated or added models.", models: newest },
    { title: "ðŸŒŸ Rising Stars", description: "Models showing high velocity and recent traction.", models: rising }
];
---

<Layout title={pageTitle} description={pageDescription}>
    <div class="container mx-auto px-4 py-12">
        <header class="text-center mb-12">
            <h1 class="text-5xl font-extrabold text-gray-900 dark:text-white">AI Model Leaderboards</h1>
            <p class="mt-4 text-xl text-gray-500 dark:text-gray-400 max-w-3xl mx-auto">
                Discover top-performing and trending open-source AI models across various categories.
            </p>
            <p class="text-sm text-gray-400 dark:text-gray-500 mt-2">
                Last updated: {new Date(generatedAt).toLocaleString()}
            </p>
        </header>

        <!-- Main Rankings -->
        {mainRankings.map(ranking => (
            <section class="mb-16">
                <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{ranking.title}</h2>
                <p class="text-gray-500 dark:text-gray-400 mb-6">{ranking.description}</p>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    {ranking.models.slice(0, 8).map(model => (
                        <ModelCard model={model} isRisingStar={model.is_rising_star} />
                    ))}
                </div>
            </section>
        ))}

        <!-- Category Rankings -->
        {categories && Object.keys(categories).length > 0 && (
            <section class="mb-16">
                 <h2 class="text-4xl font-bold text-center text-gray-900 dark:text-white mb-12">Top Models by Category</h2>
                {Object.entries(categories).map(([slug, models]) => (
                    <div class="mb-12">
                        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4 border-l-4 border-blue-500 pl-4">
                            {keywordMap.get(slug) || slug}
                        </h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                            {models.slice(0, 4).map(model => (
                                <ModelCard model={model} isRisingStar={model.is_rising_star} />
                            ))}
                        </div>
                    </div>
                ))}
            </section>
        )}
    </div>
</Layout>