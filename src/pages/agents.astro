---
/**
 * Agents Listing Page (V16.5)
 */
import Layout from '../layouts/Layout.astro';
import HomeEntitySection from '../components/home/HomeEntitySection.astro';

const pageTitle = "AI Agents Index - Free2AI";
const pageDescription = "Explore open-source AI agents and autonomous assistants.";
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="container mx-auto px-4 py-16">
        <header class="mb-12 text-center">
            <h1 class="text-4xl font-black text-gray-900 dark:text-white mb-4 tracking-tighter uppercase">
                AI Agents Index
            </h1>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
                Discover next-generation autonomous agents and specialized AI assistants.
            </p>
        </header>

        <section class="max-w-5xl mx-auto">
            <HomeEntitySection />
        </section>

        <div class="mt-16 p-8 border border-dashed border-gray-200 dark:border-gray-800 rounded-2xl text-center">
            <h2 class="text-xl font-bold mb-4">Neural Mesh Integration</h2>
            <p class="text-gray-500 mb-6">Our index tracks agent capabilities, tools, and cross-platform compatibility.</p>
            <a href="/search?type=agent" class="inline-block px-8 py-3 bg-indigo-600 text-white rounded-xl font-bold hover:bg-indigo-700 transition">
                Search Agents
            </a>
        </div>
    </main>
</Layout>
