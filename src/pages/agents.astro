---
/**
 * Agents Index (V16.5)
 * Using existing agents-catalog engine
 */
import Layout from '../layouts/Layout.astro';

const pageTitle = "AI Agents Index - Free2AI";
---

<Layout title={pageTitle}>
    <main class="container mx-auto px-4 py-8">
        <header class="mb-12 text-center">
            <h1 class="text-4xl font-black text-white mb-4 tracking-tighter uppercase">AI Agents Index</h1>
            <p class="text-lg text-zinc-400 max-w-2xl mx-auto">Discover next-generation autonomous agents and specialized AI assistants.</p>
        </header>

        <div class="mb-8 flex flex-col md:flex-row gap-4 items-center">
            <input type="text" id="entity-search" placeholder="Search agents..." class="w-full md:w-1/2 p-3 bg-zinc-900 border border-zinc-800 rounded-lg text-white" />
            <select id="sort-by" class="p-3 bg-zinc-900 border border-zinc-800 rounded-lg text-white">
                <option value="fni">FNI Score</option>
                <option value="downloads">Downloads</option>
                <option value="likes">Likes</option>
                <option value="recent">Recent</option>
            </select>
            <div id="results-count" class="text-xs text-zinc-500 font-bold uppercase tracking-widest">--</div>
        </div>

        <div id="entity-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"></div>
        <div id="pagination" class="mt-12 flex justify-center items-center gap-4"></div>
    </main>

    <script>
        import { initAgentsCatalog } from '../scripts/agents-catalog.js';
        
        async function load() {
            const res = await fetch('https://cdn.free2aitools.com/cache/trending.json');
            const data = await res.json();
            const agents = (data.models || []).filter(m => m.tags?.includes('agent') || m.primary_category === 'agent');
            initAgentsCatalog(agents);
        }
        
        document.addEventListener('DOMContentLoaded', load);
    </script>
</Layout>
