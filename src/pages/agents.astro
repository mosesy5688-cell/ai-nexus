---
/**
 * AI Agents Catalog (V4.1)
 * Optimized SSR + UniversalCatalog Engine
 */
import Layout from '../layouts/Layout.astro';
import ListingControls from '../components/common/ListingControls.astro';
import { fetchCatalogData, truncateListingItem } from '../utils/catalog-fetcher.js';

// SSR Data Fetching
const { items: allAgents, error } = await fetchCatalogData('agent', Astro.locals.runtime?.env);
const agents = allAgents.slice(0, 48).map(truncateListingItem);

const pageTitle = "AI Agents Catalog | Autonomous AI Index";
const pageDescription = "Discover and rank next-generation AI agents, autonomous assistants, and swarms.";
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="container mx-auto px-4 py-12 min-h-screen">
        <header class="mb-12">
            <h1 class="text-4xl md:text-5xl font-black text-gray-900 dark:text-white mb-4 tracking-tighter uppercase">
                AI Agents <span class="text-purple-600">Index</span>
            </h1>
            <p class="text-lg text-gray-600 dark:text-zinc-400 max-w-2xl">
                The world's first comprehensive directory of autonomous agents, assistants, and neural workers.
            </p>
        </header>

        <ListingControls type="agent" searchId="agents-search" />

        <div id="agents-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {agents.map((agent: any) => (
                <div class="animate-in fade-in slide-in-from-bottom-4 duration-500">
                    <div class="h-full" data-ssr-item>
                         <div class="p-6 bg-white dark:bg-zinc-900 rounded-2xl border border-gray-100 dark:border-zinc-800 animate-pulse h-64"></div>
                    </div>
                </div>
            ))}
        </div>

        <div id="pagination" class="mt-16 flex justify-center items-center gap-4"></div>
    </main>

    <script define:vars={{ initialData: agents }}>
        window.__CATALOG_DATA__ = initialData;
    </script>

    <script>
        import { UniversalCatalog } from '../scripts/lib/UniversalCatalog.js';
        
        const init = () => {
            new UniversalCatalog({
                initialData: window.__CATALOG_DATA__ || [],
                type: 'agent',
                gridId: 'agents-grid',
                searchId: 'agents-search',
                dataUrl: 'https://cdn.free2aitools.com/cache/rankings/agent/p1.json'
            });
        };

        document.addEventListener('DOMContentLoaded', init);
    </script>
</Layout>

