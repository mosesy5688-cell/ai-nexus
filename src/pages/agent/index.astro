---
/**
 * Agent Index Page - V15.0
 * Lists AI agents with dynamic R2 data loading
 * R2 Path: /cache/entities/agent/
 */

export const prerender = false;

import Layout from '../../layouts/Layout.astro';

const pageTitle = 'AI Agents - Autonomous AI Systems';
const pageDescription = 'Explore autonomous AI agents like AutoGPT, BabyAGI, and more. Discover agents for coding, research, and automation.';
const canonicalUrl = 'https://free2aitools.com/agent';

const categories = [
  { name: 'Coding Agents', query: 'code', icon: 'üíª' },
  { name: 'Research Agents', query: 'research', icon: 'üî¨' },
  { name: 'Automation', query: 'automation', icon: 'ü§ñ' },
  { name: 'Multi-Agent', query: 'multi-agent', icon: 'üë•' },
];
---

<Layout title={pageTitle} description={pageDescription}>
  <link slot="head" rel="canonical" href={canonicalUrl} />
  
  <main class="container mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-purple-100 dark:bg-purple-900/30 rounded-full mb-4">
        <span class="text-2xl">ü§ñ</span>
        <span class="text-sm font-semibold text-purple-800 dark:text-purple-200">AI AGENTS</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-white mb-4">Autonomous AI Agents</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Discover AI agents that can autonomously complete complex tasks.
      </p>
    </header>

    <section class="mb-12">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {categories.map((cat) => (
          <a href={`/?q=${cat.query}&type=agent`}
             class="group p-6 bg-gradient-to-br from-purple-50 to-indigo-50 dark:from-gray-800 dark:to-gray-900 rounded-xl hover:shadow-lg transition-all border border-purple-100 dark:border-gray-700">
            <div class="text-3xl mb-2">{cat.icon}</div>
            <h3 class="font-bold text-gray-900 dark:text-white group-hover:text-purple-600">{cat.name}</h3>
          </a>
        ))}
      </div>
    </section>

    <section>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">All Agents</h2>
        <span id="agents-count" class="text-sm text-gray-500"></span>
      </div>
      <div id="agents-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="col-span-full text-center py-12 text-gray-500">Loading agents...</div>
      </div>
    </section>
  </main>
</Layout>

<script>
  async function loadAgents() {
    const grid = document.getElementById('agents-grid');
    const countEl = document.getElementById('agents-count');
    if (!grid) return;

    try {
      // V15.0: Use entity-specific R2 path
      const res = await fetch('/api/cache/entities/agent/index.json');
      if (!res.ok) {
        // Fallback to trending.json
        const fallback = await fetch('/api/cache/trending.json');
        if (!fallback.ok) throw new Error('No data');
        const data = await fallback.json();
        const agents = (data.models || []).filter((e: any) => e.id?.includes('agent') || e.type === 'agent');
        renderAgents(agents, grid, countEl);
        return;
      }
      
      const agents = await res.json();
      renderAgents(Array.isArray(agents) ? agents : agents.data || [], grid, countEl);
    } catch (err) {
      grid.innerHTML = '<div class="col-span-full text-center py-12 text-gray-500">Agents will be available after the next pipeline run.</div>';
    }
  }

  function renderAgents(agents: any[], grid: HTMLElement, countEl: HTMLElement | null) {
    if (countEl) countEl.textContent = `${agents.length} agents`;
    
    if (agents.length === 0) {
      grid.innerHTML = '<div class="col-span-full text-center py-12 text-gray-500">No agents found.</div>';
      return;
    }

    grid.innerHTML = agents.slice(0, 24).map((a: any) => `
      <a href="/agent/${a.slug || a.id}" 
         class="block bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm hover:shadow-lg transition-all border border-gray-100 dark:border-gray-700">
        <div class="flex items-center gap-3 mb-3">
          <span class="text-3xl">${a.icon || 'ü§ñ'}</span>
          <div>
            <h3 class="font-bold text-gray-900 dark:text-white">${a.name || a.title}</h3>
            <span class="text-sm text-gray-500">${a.author || ''}</span>
          </div>
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">${a.description || ''}</p>
        <div class="mt-3 flex items-center gap-3 text-xs text-gray-500">
          <span>‚≠ê ${a.stars?.toLocaleString() || a.likes || 0}</span>
        </div>
      </a>
    `).join('');
  }

  document.readyState === 'loading' 
    ? document.addEventListener('DOMContentLoaded', loadAgents) 
    : loadAgents();
</script>
