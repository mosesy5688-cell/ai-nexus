---
import { getCollection } from 'astro:content';
import KeywordPageLayout from '@/layouts/KeywordPageLayout.astro';

export async function getStaticPaths() {
  const keywordEntries = await getCollection('keywords');
  return keywordEntries.map(entry => ({
    params: { keyword: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---
<KeywordPageLayout frontmatter={entry.data}>
  <Content />
</KeywordPageLayout>