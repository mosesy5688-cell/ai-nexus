---
import Layout from '@/layouts/Layout.astro';
import rankings from '@/data/rankings.json';
import allModels from '@/data/models.json';
import allKeywords from '@/data/keywords.json';
import ModelCard from '@/components/ModelCard.astro';
import { getEntryBySlug } from 'astro:content';

export async function getStaticPaths() {
    return allKeywords.map(keyword => ({
        params: { slug: keyword.slug },
    }));
}

const { slug: keywordSlug } = Astro.params;
const keyword = allKeywords.find(k => k.slug === keywordSlug);

if (!keyword) {
    return new Response(null, { status: 404, statusText: 'Not Found' });
}

const modelsInKeyword = allModels.filter(model => !model.is_archived && model.tags?.includes(keywordSlug));

// Get top models for this category from pre-calculated rankings
const topModels = rankings.categories[keywordSlug] || [];

const pageTitle = `AI Models for ${keyword.title}`;
const pageDescription = `Discover open-source AI models and tools for ${keyword.title}. Explore projects related to ${keyword.tags.join(', ')}.`;
---
<Layout title={pageTitle} description={pageDescription}>
    <div class="container mx-auto px-4 py-12">
        <header class="text-center mb-12">
            <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-white">
                AI Models for '{keyword.title}'
            </h1>
            <p class="mt-4 text-lg text-gray-500 dark:text-gray-400 max-w-3xl mx-auto">
                {pageDescription}
            </p>
        </header>

        <!-- Top Models in this Category Section -->
        {topModels.length > 0 && (
            <section class="mb-12">
                <h2 class="text-2xl font-bold text-center mb-6 text-gray-800 dark:text-gray-100">
                    üèÜ Top Models for '{keyword.title}'
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    {topModels.map(model => (
                        <ModelCard model={model} isRisingStar={model.is_rising_star} />
                    ))}
                </div>
                <hr class="my-12 border-gray-200 dark:border-gray-700" />
            </section>
        )}

        <!-- All Models Grid -->
        <h2 class="text-2xl font-bold text-center mb-8 text-gray-800 dark:text-gray-100">
            All Models for '{keyword.title}' ({modelsInKeyword.length})
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {modelsInKeyword.map(model => (
                <ModelCard model={model} isRisingStar={model.is_rising_star} />
            ))}
        </div>
    </div>
</Layout>
