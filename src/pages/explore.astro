---
import Layout from '../layouts/Layout.astro';
import allKeywords from '../data/keywords.json';
import allModels from '../data/models.json';
import ModelCard from '../components/ModelCard.astro';
import { algoliaConfig } from '../config';

const url = Astro.url;
const activeTag = url.searchParams.get('tag');
const initialQuery = url.searchParams.get('q') || '';

let pageTitle = "Explore AI Models & Tools";
let pageDescription = "Search and filter through a comprehensive list of open-source AI models and tools.";

// ‰∏∫ÊúçÂä°Âô®Á´ØÊ∏≤ÊüìÔºàSSRÔºâÂáÜÂ§áÂàùÂßãÊ®°ÂûãÂàóË°®
const ITEMS_PER_PAGE = 24;
let initialModels = [];
if (!activeTag && !initialQuery) {
    initialModels = allModels.slice(0, ITEMS_PER_PAGE);
}

if (activeTag) {
    const keyword = allKeywords.find(k => k.slug === activeTag);
    pageTitle = `Models tagged with '${keyword ? keyword.title : activeTag}'`;
    pageDescription = `Find AI models and tools related to ${keyword ? keyword.title : activeTag}.`;
}
if (initialQuery) {
    pageTitle = `Search results for '${initialQuery}'`;
}

---

<Layout title={pageTitle} description={pageDescription}>
    <div class="container mx-auto px-4 py-8">
        <div class="mb-8 text-center">
            <h1 class="text-4xl font-bold mb-2" id="page-title">{pageTitle}</h1>
            <p class="text-lg text-gray-600 dark:text-gray-400" id="page-description">{pageDescription}</p>
        </div>

        <!-- Search and Filter Section -->
        <div class="mb-8 flex flex-col md:flex-row gap-4 items-center sticky top-[65px] md:top-16 bg-gray-50/80 dark:bg-gray-900/80 backdrop-blur-sm py-4 z-30 max-w-4xl mx-auto w-full">
            <div id="search-container" class="w-full">
                <!-- Statically rendered search box for SEO -->
                <form id="search-form" class="w-full" onsubmit="return false;">
                    <div class="relative">
                        <input
                            type="search"
                            id="search-box"
                            name="q"
                            placeholder="Search for AI models, tools, or keywords..."
                            class="w-full p-4 pl-12 text-lg border border-gray-300 dark:border-gray-600 rounded-full bg-white dark:bg-gray-800 focus:ring-blue-500 focus:border-blue-500 shadow-lg"
                            aria-label="Search AI Models"
                            value={initialQuery}
                        />
                        <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                            <svg class="w-6 h-6 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                        </div>
                        <button type="submit" class="absolute inset-y-0 right-0 flex items-center px-6 bg-blue-600 text-white font-semibold rounded-r-full hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            Search
                        </button>
                    </div>
                </form>
            </div>

            <div class="flex-shrink-0">
                <select id="sort-by" class="p-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-gray-50 dark:bg-gray-700 focus:ring-blue-500 focus:border-blue-500">
                    <option value="likes">Sort by Likes</option>
                    <option value="downloads">Sort by Downloads</option>
                    <option value="recent">Sort by Recent</option>
                </select>
            </div>
        </div>

        <!-- Keywords/Tags Cloud -->
        <div class="mb-10 text-center" id="tags-container">
            <h3 class="text-xl font-semibold mb-4">Popular Tags</h3>
            <div class="flex flex-wrap justify-center gap-2">
                {allKeywords.slice(0, 24).map(keyword => (
                    <a href={activeTag === keyword.slug ? "/explore" : `/explore?tag=${keyword.slug}`} data-tag={keyword.slug} class:list={[
                        "tag-link px-4 py-2 text-sm font-medium rounded-full transition-colors cursor-pointer",
                        activeTag === keyword.slug
                            ? "bg-blue-600 text-white"
                            : "bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 hover:bg-blue-500 hover:text-white"
                    ]}>
                        {keyword.title}
                    </a>
                ))}
            </div>
        </div>

        <!-- Models Grid -->
        <div id="models-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {initialModels.map(model => (
                <ModelCard model={model} isRisingStar={model.is_rising_star} />
            ))}
        </div>
        <div id="no-results" class="text-center py-16 hidden">
            <p class="text-2xl font-semibold text-gray-700 dark:text-gray-300">No models found.</p>
            <p class="text-gray-500 dark:text-gray-400 mt-2">Try adjusting your search or filter criteria.</p>
        </div>
    </div>

    <!-- Algolia Search Client -->
    <script src="https://cdn.jsdelivr.net/npm/algoliasearch@4/dist/algoliasearch-lite.umd.js"></script>
    <script define:vars={{ 
        initialQuery, 
        activeTag, 
        allKeywords,
        // Use the imported config object directly
        algoliaAppId: algoliaConfig.appId,
        algoliaSearchKey: algoliaConfig.searchKey,
        algoliaIndexName: algoliaConfig.indexName,
    }}>
        document.addEventListener('DOMContentLoaded', () => {
            // --- 1. INITIALIZATION ---
            if (!algoliaAppId || !algoliaSearchKey) {
                console.error("Algolia credentials are not configured. Please check your environment variables.");
                document.getElementById('models-grid').innerHTML = `<p class="col-span-full text-center text-red-500">Search is not configured.</p>`;
                return;
            }

            const searchClient = algoliasearch(algoliaAppId, algoliaSearchKey);

            const searchContainer = document.getElementById('search-container');
            const modelsGrid = document.getElementById('models-grid');
            const noResults = document.getElementById('no-results');
            const tagsContainer = document.getElementById('tags-container');
            const sortBySelect = document.getElementById('sort-by');
            const pageTitleEl = document.getElementById('page-title');
            const pageDescriptionEl = document.getElementById('page-description');
            const loadingMoreEl = document.getElementById('loading-more');
            const backToTopButton = document.getElementById('back-to-top');

            let currentQuery = initialQuery;
            let currentTag = activeTag;
            let debounceTimer;

            let currentPage = 0;
            let isLoading = false;
            let hasMore = true;

            // --- 2. GET STATICALLY RENDERED UI ELEMENTS ---
            const searchBox = document.getElementById('search-box');

            function formatNumber(num) {
                if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
                if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
                return num || 0;
            }

            // --- 3. CORE RENDERING & SEARCH LOGIC ---

            function createModelCardHTML(model) {
                const modelUrl = `/model/${model.id.replace(/\//g, '--')}`;
                const description = (model.description?.replace(/<[^>]*>?/gm, '') || 'No description available.').substring(0, 120);
                const isRisingStarHTML = model.is_rising_star 
                    ? `<div class="absolute top-2 right-2 bg-yellow-400 text-yellow-900 text-xs font-bold px-2 py-1 rounded-full animate-pulse" title="Rising Star">üî•</div>`
                    : '';

                return `
                    <a href="${modelUrl}" class="group relative block bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden h-full">
                        ${isRisingStarHTML}
                        <div class="p-5 flex flex-col h-full justify-between">
                            <div>
                                <h3 class="text-lg font-bold text-gray-900 dark:text-white truncate group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors" title="${model.name}">
                                    ${model.name}
                                </h3>
                                <p class="text-gray-500 dark:text-gray-400 text-xs mb-3">by ${model.author}</p>
                                <p class="text-gray-600 dark:text-gray-300 text-sm h-20 overflow-hidden text-ellipsis leading-relaxed">
                                    ${description}...
                                </p>
                            </div>
                            <div class="mt-4 flex items-center justify-end gap-4 text-xs text-gray-500 dark:text-gray-400">
                                <div class="flex items-center gap-1" title="${(model.likes || 0).toLocaleString()} likes">‚ù§Ô∏è
                                    <span>${formatNumber(model.likes)}</span>
                                </div>
                                <div class="flex items-center gap-1" title="${(model.downloads || 0).toLocaleString()} downloads">üì•
                                    <span>${formatNumber(model.downloads)}</span>
                                </div>
                            </div>
                        </div>
                    </a>
                `;
            }

            function renderModels(models, isNewSearch = true) {
                if (isNewSearch) {
                    modelsGrid.innerHTML = '';
                }
                if (models.length === 0) {
                    if (isNewSearch) noResults.classList.remove('hidden');
                } else {
                    noResults.classList.add('hidden');
                    const fragment = document.createDocumentFragment();
                    models.forEach(model => {
                        const cardContainer = document.createElement('div');
                        cardContainer.innerHTML = createModelCardHTML(model);
                        fragment.appendChild(cardContainer.firstElementChild);
                    });
                    modelsGrid.appendChild(fragment);
                }
            }

            async function performSearch(page = 0) {
                if (isLoading) return;
                isLoading = true;

                const isNewSearch = page === 0;

                if (isNewSearch) {
                    const gridHasContent = modelsGrid.children.length > 0;
                    if (!gridHasContent) {
                        modelsGrid.innerHTML = `<p class="col-span-full text-center py-16 text-gray-500">Loading...</p>`;
                    }
                    currentPage = 0;
                    hasMore = true;
                } else {
                    loadingMoreEl.classList.remove('hidden');
                }

                noResults.classList.add('hidden');

                // Determine which Algolia index to use based on sorting
                const sortBy = sortBySelect.value;
                let activeIndexName = algoliaIndexName;
                if (sortBy === 'likes') activeIndexName = `${algoliaIndexName}_likes_desc`;
                if (sortBy === 'downloads') activeIndexName = `${algoliaIndexName}_downloads_desc`;
                if (sortBy === 'recent') activeIndexName = `${algoliaIndexName}_recent_desc`;
                
                const index = searchClient.initIndex(activeIndexName);

                const searchOptions = { 
                    hitsPerPage: 24,
                    page: page
                };
                if (currentTag) {
                    searchOptions.filters = `tags:"${currentTag}"`;
                }

                try {
                    const { hits, nbPages } = await index.search(currentQuery, searchOptions);
                    renderModels(hits, isNewSearch);
                    currentPage = page;
                    if (currentPage + 1 >= nbPages) {
                        hasMore = false;
                    }
                } catch (error) {
                    console.error("Algolia search error:", error);
                    modelsGrid.innerHTML = `<p class="col-span-full text-center text-red-500">Error fetching search results. Please try again later.</p>`;
                } finally {
                    isLoading = false;
                    loadingMoreEl.classList.add('hidden');
                }
            }

            // --- 4. UI & URL MANAGEMENT ---

            function updatePageHeadings() {
                let title = "Explore AI Models & Tools";
                let description = "Search and filter through a comprehensive list of open-source AI models and tools.";

                if (currentTag) {
                    const keyword = allKeywords.find(k => k.slug === currentTag);
                    title = `Models tagged with '${keyword ? keyword.title : currentTag}'`;
                    description = `Find AI models and tools related to ${keyword ? keyword.title : currentTag}.`;
                }

                if (currentQuery) {
                    title = `Search results for '${currentQuery}'`;
                }

                pageTitleEl.textContent = title;
                pageDescriptionEl.textContent = description;
                document.title = title;
            }

            function updateURL() {
                const url = new URL(window.location);
                if (currentQuery) url.searchParams.set('q', currentQuery);
                else url.searchParams.delete('q');
                if (currentTag) url.searchParams.set('tag', currentTag);
                else url.searchParams.delete('tag');
                window.history.pushState({}, '', url);
            }

            // --- 5. EVENT LISTENERS ---

            document.getElementById('search-form').addEventListener('submit', (e) => {
                e.preventDefault();
                currentQuery = searchBox.value;
                currentTag = null;
                updateActiveTagUI();
                updateURL();
                updatePageHeadings();
                performSearch(0);
            });

            searchBox.addEventListener('input', (e) => {
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(() => {
                    currentQuery = e.target.value;
                    if (currentQuery === '') {
                        updateURL();
                    }
                    updatePageHeadings();
                    performSearch(0);
                }, 300); // Debounce for 300ms
            });

            sortBySelect.addEventListener('change', () => {
                performSearch(0);
            });

            tagsContainer.addEventListener('click', (e) => {
                const target = e.target.closest('.tag-link');
                if (!target) return;
                e.preventDefault();

                const clickedTag = target.dataset.tag;
                currentTag = (currentTag === clickedTag) ? null : clickedTag;
                
                currentQuery = '';
                searchBox.value = '';

                updateActiveTagUI();
                updateURL();
                updatePageHeadings();
                performSearch(0);
            });

            function updateActiveTagUI() {
                document.querySelectorAll('.tag-link').forEach(link => {
                    if (link.dataset.tag === currentTag) {
                        link.classList.add('bg-blue-600', 'text-white');
                        link.classList.remove('bg-gray-200', 'dark:bg-gray-700', 'text-gray-800', 'dark:text-gray-200');
                    } else {
                        link.classList.remove('bg-blue-600', 'text-white');
                        link.classList.add('bg-gray-200', 'dark:bg-gray-700', 'text-gray-800', 'dark:text-gray-200');
                    }
                });
            }

            // --- 6. INFINITE SCROLL & BACK-TO-TOP ---
            window.addEventListener('scroll', () => {
                // Infinite scroll
                if (window.innerHeight + window.scrollY >= document.documentElement.scrollHeight - 500 && !isLoading && hasMore) {
                    performSearch(currentPage + 1);
                }

                // Back to top button visibility
                if (window.scrollY > 300) {
                    backToTopButton.classList.remove('opacity-0', 'pointer-events-none');
                } else {
                    backToTopButton.classList.add('opacity-0', 'pointer-events-none');
                }
            });

            backToTopButton.addEventListener('click', () => {
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });


            // --- 6. INITIAL LOAD ---
            if (initialQuery || activeTag) {
                performSearch(0);
            }
        });
    </script>
</Layout>