---
/**
 * Explore Page V4.9
 * Constitution V4.9 Entity-First Architecture
 * Art.X-Entity-List: Lists segregated or polymorphic
 */
import Layout from '../layouts/Layout.astro';
import SearchFilters from '../components/SearchFilters.astro';
import EntityTabs from '../components/entity/EntityTabs.astro';
import allCategories from '../data/categories.json';

// V4.9: Get entity type from URL params
const url = new URL(Astro.request.url);
const entityType = url.searchParams.get('type') || 'model';

// Entity-specific page metadata
const ENTITY_META: Record<string, { title: string; description: string }> = {
    model: {
        title: 'Explore AI Models - AI Nexus',
        description: 'Browse and filter our extensive collection of open-source AI models. Sort by popularity, downloads, or freshness.'
    },
    dataset: {
        title: 'Explore Datasets - AI Nexus',
        description: 'Discover high-quality datasets for AI/ML training and evaluation.'
    },
    benchmark: {
        title: 'Explore Benchmarks - AI Nexus',
        description: 'Compare AI evaluation benchmarks and leaderboards.'
    },
    paper: {
        title: 'Explore Papers - AI Nexus',
        description: 'Browse cutting-edge AI research papers and publications.'
    },
    agent: {
        title: 'Explore AI Agents - AI Nexus',
        description: 'Discover AI agents and autonomous systems.'
    }
};

const meta = ENTITY_META[entityType] || ENTITY_META.model;
let pageTitle = meta.title;
let pageDescription = meta.description;

// Entity display labels
const entityLabels: Record<string, string> = {
    model: 'Models',
    dataset: 'Datasets',
    benchmark: 'Benchmarks',
    paper: 'Papers',
    agent: 'Agents'
};
const entityLabel = entityLabels[entityType] || 'Models';
---

<Layout title={pageTitle} description={pageDescription}>
    <div class="container mx-auto px-4 py-8 min-h-screen">
        <header class="mb-4">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Explore {entityLabel}</h1>
            <p class="text-gray-600 dark:text-gray-400 mt-2">{pageDescription}</p>
        </header>
        
        <!-- V4.9: Entity Type Tabs (Art.X-Entity-List) -->
        <EntityTabs activeType={entityType} basePath="/explore" />

        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Sidebar / Filters -->
            <aside class="w-full lg:w-64 flex-shrink-0 space-y-6">
                <!-- Search -->
                <div>
                    <label for="explore-search" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Search</label>
                    <div class="relative">
                        <input type="text" id="explore-search" placeholder="Keywords (e.g. 'llama', 'vision')..." class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 focus:ring-2 focus:ring-blue-500 outline-none transition-shadow" />
                        <svg class="w-5 h-5 text-gray-400 absolute right-3 top-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                    </div>
                </div>

                <!-- Sort -->
                <div>
                    <label for="explore-sort" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Sort By</label>
                    <select id="explore-sort" class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 focus:ring-2 focus:ring-blue-500 outline-none">
                        <option value="likes">Most Popular (Likes)</option>
                        <option value="downloads">Most Downloaded</option>
                        <option value="last_updated">Recently Updated</option>
                        <option value="relevance">Relevance</option>
                    </select>
                </div>

                <hr class="border-gray-200 dark:border-gray-700 my-4" />

                <!-- Advanced Filters Component -->
                <SearchFilters />

                <!-- Legacy Category Filter (kept for backward compat if needed, or remove?) -->
                <!-- Ideally categories become valid 'tags' search under the hood, but for now keeping UI simple -->
            </aside>

            <!-- Main Content -->
            <main class="flex-1">
                <!-- Active Filters Display -->
                <div id="active-filters" class="hidden flex flex-wrap gap-2 mb-4">
                    <!-- Populated by JS -->
                </div>

                <!-- Loading State with Skeletons -->
                <div id="explore-loading" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                    <!-- Skeleton placeholders (9 cards for explore page) -->
                    {Array.from({length: 9}).map(() => (
                        <div class="skeleton-card animate-pulse bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden border border-gray-100 dark:border-gray-700">
                            <div class="p-5 space-y-4">
                                <div class="h-6 bg-gray-200 dark:bg-gray-700 rounded w-3/4"></div>
                                <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-1/2"></div>
                                <div class="space-y-2">
                                    <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-full"></div>
                                    <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-5/6"></div>
                                </div>
                                <!-- V4.3.2 Constitution: FNI + Deploy Score badge slots -->
                                <div class="flex gap-2 pt-2 border-t border-gray-100 dark:border-gray-700">
                                    <div class="h-5 w-16 bg-blue-100 dark:bg-blue-900/30 rounded"></div>
                                    <div class="h-5 w-14 bg-green-100 dark:bg-green-900/30 rounded"></div>
                                </div>
                                <div class="flex justify-between pt-2">
                                    <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-16"></div>
                                    <div class="flex gap-3">
                                        <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-12"></div>
                                        <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-12"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>

                <!-- Error State -->
                <div id="explore-error" class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6">
                    <strong class="font-bold">Error:</strong>
                    <span class="block sm:inline" id="explore-error-msg"></span>
                </div>

                <!-- Results Grid -->
                <div id="explore-grid" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                    <!-- Populated by JS -->
                </div>

                <!-- No Results -->
                <div id="explore-no-results" class="hidden text-center py-12">
                    <p class="text-xl text-gray-600 dark:text-gray-400">No models found matching your criteria.</p>
                    <button id="reset-filters-btn" class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        Reset Filters
                    </button>
                </div>
            </main>
        </div>
    </div>

    <script>
        // Client-side logic for Explore page
        import { renderModelCard } from '../scripts/render-model-card.js';
        
        let currentController = null;
        let debounceTimer = null;

        const elements = {
            search: document.getElementById('explore-search'),
            sort: document.getElementById('explore-sort'),
            activeFilters: document.getElementById('active-filters'),
            grid: document.getElementById('explore-grid'),
            loading: document.getElementById('explore-loading'),
            error: document.getElementById('explore-error'),
            errorMsg: document.getElementById('explore-error-msg'),
            noResults: document.getElementById('explore-no-results'),
            resetBtn: document.getElementById('reset-filters-btn'), 
            // New Filter Inputs
            minLikes: document.getElementById('min-likes'),
            hasBenchmarks: document.getElementById('has-benchmarks'),
            sourceInputs: document.querySelectorAll('input[name="source"]'),
            daysAgoInputs: document.querySelectorAll('input[name="days_ago"]'),
            // Advanced Filters
            licenseFilter: document.getElementById('license-filter'),
            tagsInputs: document.querySelectorAll('input[name="tags"]')
        };

        function getFilters() {
            const q = elements.search.value.trim();
            const sort = elements.sort.value;
            
            // New Filters
            const min_likes = elements.minLikes ? elements.minLikes.value : 0;
            const has_benchmarks = elements.hasBenchmarks ? elements.hasBenchmarks.checked : false;
            
            const sources = Array.from(document.querySelectorAll('input[name="source"]:checked')).map(i => i.value);
            
            const daysAgoEl = document.querySelector('input[name="days_ago"]:checked');
            const days_ago = daysAgoEl ? daysAgoEl.value : 0;

            // Advanced Filters
            const license = elements.licenseFilter ? elements.licenseFilter.value : '';
            const tags = Array.from(document.querySelectorAll('input[name="tags"]:checked')).map(i => i.value);

            return { q, sort, min_likes, has_benchmarks, sources, days_ago, license, tags };
        }

        function updateActiveFiltersDisplay(filters) {
            if (!elements.activeFilters) return;
            
            const chips = [];
            
            if (filters.min_likes > 0) chips.push(`Stars > ${filters.min_likes}`);
            if (filters.has_benchmarks) chips.push('SOTA Only');
            if (filters.days_ago > 0) {
                const map = { '7': 'Past Week', '30': 'Past Month', '365': 'Past Year' };
                chips.push(map[filters.days_ago] || 'Fresh');
            }
            filters.sources.forEach(s => chips.push(s));
            if (filters.license) chips.push(`License: ${filters.license.toUpperCase()}`);
            filters.tags.forEach(t => chips.push(t.replace(/-/g, ' ')));

            if (chips.length > 0) {
                elements.activeFilters.classList.remove('hidden');
                elements.activeFilters.innerHTML = chips.map(text => `
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                        ${text}
                    </span>
                `).join('');
            } else {
                elements.activeFilters.classList.add('hidden');
                elements.activeFilters.innerHTML = '';
            }
        }

        async function fetchModels() {
            const filters = getFilters();
            updateActiveFiltersDisplay(filters);

            // Abort previous request
            if (currentController) currentController.abort();
            currentController = new AbortController();

            // UI State: Loading
            elements.grid.classList.add('opacity-50');
            elements.loading.classList.remove('hidden');
            elements.error.classList.add('hidden');
            elements.noResults.classList.add('hidden');

            try {
                const params = new URLSearchParams();
                if (filters.q) params.set('q', filters.q);
                params.set('sort', filters.sort);
                params.set('limit', '50');

                // V4.9: Get entity_type from URL for filtering (Art.X-Entity-List)
                const urlParams = new URLSearchParams(window.location.search);
                const entityType = urlParams.get('type') || 'model';
                params.set('entity_type', entityType);

                // Add new params
                if (filters.min_likes > 0) params.set('min_likes', filters.min_likes);
                if (filters.days_ago > 0) params.set('days_ago', filters.days_ago);
                if (filters.has_benchmarks) params.set('has_benchmarks', 'true');
                
                filters.sources.forEach(s => params.append('source', s));

                // Advanced Filters
                if (filters.license) params.set('license', filters.license);
                filters.tags.forEach(t => params.append('tags', t));

                const response = await fetch(`/api/search?${params.toString()}`, {
                    signal: currentController.signal
                });

                if (!response.ok) throw new Error(`API Error: ${response.status}`);
                
                const data = await response.json();
                const results = data.results || [];
                
                renderModels(results);

            } catch (e) {
                if (e.name === 'AbortError') return;
                console.error("Fetch error:", e);
                elements.error.classList.remove('hidden');
                elements.errorMsg.textContent = e.message;
                elements.grid.innerHTML = '';
            } finally {
                elements.loading.classList.add('hidden');
                elements.grid.classList.remove('opacity-50');
            }
        }

        function renderModels(models) {
            if (models.length === 0) {
                elements.grid.innerHTML = '';
                elements.noResults.classList.remove('hidden');
                return;
            }

            const html = models.map(model => renderModelCard(model)).join('');
            elements.grid.innerHTML = html;
        }

        // Event Listeners
        elements.search.addEventListener('input', () => {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(fetchModels, 300);
        });

        elements.sort.addEventListener('change', fetchModels);
        
        // New Filter Listeners
        if (elements.minLikes) elements.minLikes.addEventListener('change', fetchModels); // 'change' for slider only when released, 'input' for realtime
        if (elements.hasBenchmarks) elements.hasBenchmarks.addEventListener('change', fetchModels);
        
        document.querySelectorAll('input[name="source"]').forEach(el => el.addEventListener('change', fetchModels));
        document.querySelectorAll('input[name="days_ago"]').forEach(el => el.addEventListener('change', fetchModels));
        
        // Advanced Filter Listeners
        if (elements.licenseFilter) elements.licenseFilter.addEventListener('change', fetchModels);
        document.querySelectorAll('input[name="tags"]').forEach(el => el.addEventListener('change', fetchModels));

        if (elements.resetBtn) {
            elements.resetBtn.addEventListener('click', () => {
                elements.search.value = '';
                elements.sort.value = 'likes';
                
                // Reset new filters
                if(elements.minLikes) { elements.minLikes.value = 0; elements.minLikes.dispatchEvent(new Event('input')) }; 
                if(elements.hasBenchmarks) elements.hasBenchmarks.checked = false;
                document.querySelectorAll('input[name="source"]').forEach(el => el.checked = false);
                const anyTime = document.querySelector('input[name="days_ago"][value="0"]');
                if (anyTime) anyTime.checked = true;
                
                // Reset advanced filters
                if(elements.licenseFilter) elements.licenseFilter.value = '';
                document.querySelectorAll('input[name="tags"]').forEach(el => el.checked = false);

                fetchModels();
            });
        }

        // Initial fetch
        fetchModels();

    </script>
</Layout>
