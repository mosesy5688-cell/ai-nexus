---
/**
 * Dataset Index Page - V10.5
 * Lists popular datasets when no specific dataset is requested
 * 
 * Constitution Compliance:
 * - Frontend D1 = 0: Uses CDN/R2 cache only
 */

export const prerender = false;

import Layout from '../../layouts/Layout.astro';

// Page metadata
const pageTitle = 'AI Datasets - Browse Open-Source Datasets';
const pageDescription = 'Explore thousands of AI and machine learning datasets. Find training data for NLP, computer vision, and more.';
const canonicalUrl = 'https://free2aitools.com/dataset';

// Fetch popular datasets from CDN
let datasets: any[] = [];
let totalCount = 0;

try {
  const response = await fetch('https://cdn.free2aitools.com/cache/trending.json');
  if (response.ok) {
    const data = await response.json();
    // Filter for datasets if available
    datasets = (data.datasets || []).slice(0, 24);
    totalCount = datasets.length;
  }
} catch (e) {
  console.error('[Dataset Index] Failed to fetch datasets:', e);
}
