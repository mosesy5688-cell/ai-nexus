---
/**
 * Annual Reports Index - V14.4 Art 5.5
 * 
 * Year-end summary reports showing AI ecosystem trends
 * Generated by Factory: December 31, 23:00 UTC
 */
import Layout from '@/layouts/Layout.astro';

const currentYear = new Date().getFullYear();

// Available annual reports (static for now, later from R2)
const annualReports = [
  // Will be populated when first annual report is generated
];

const pageTitle = "AI Annual Reports";
const pageDescription = "Year-end summaries of the AI ecosystem: top models, breakthrough papers, and emerging trends.";
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="container mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white">
        üìä AI Annual Reports
      </h1>
      <p class="mt-4 text-lg text-gray-500 dark:text-gray-400">
        Year-end summaries of the open-source AI ecosystem
      </p>
      <a href="/reports" class="mt-4 inline-block text-blue-600 dark:text-blue-400 hover:underline">
        ‚Üê Back to Daily Reports
      </a>
    </header>

    {annualReports.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {annualReports.map(report => (
          <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
            <div class="p-6">
              <div class="text-4xl font-bold text-blue-600 dark:text-blue-400 mb-2">
                {report.year}
              </div>
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
                {report.title}
              </h2>
              <p class="text-gray-600 dark:text-gray-300 mb-4">
                {report.subtitle}
              </p>
              <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
                <span>{report.entityCount} entities analyzed</span>
                <a 
                  href={`/reports/${report.year}-annual`}
                  class="text-blue-600 dark:text-blue-400 hover:underline font-medium"
                >
                  Read Report ‚Üí
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center py-16 bg-gray-50 dark:bg-gray-800 rounded-lg">
        <div class="text-6xl mb-4">üìÖ</div>
        <h2 class="text-2xl font-semibold text-gray-700 dark:text-gray-300 mb-2">
          Coming Soon!
        </h2>
        <p class="text-gray-500 dark:text-gray-400 max-w-md mx-auto">
          The first annual report will be generated on December 31, {currentYear}.
          <br />
          <span class="text-sm">Per V14.4 Art 5.5: Annual reports aggregate all daily reports.</span>
        </p>
        <div class="mt-8">
          <a 
            href="/reports" 
            class="inline-block bg-blue-600 text-white font-semibold px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors"
          >
            View Daily Reports
          </a>
        </div>
      </div>
    )}

    <!-- Schema.org markup -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": pageTitle,
      "description": pageDescription,
      "publisher": {
        "@type": "Organization",
        "name": "Free2AITools"
      }
    })} />
  </div>
</Layout>
