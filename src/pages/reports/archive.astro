---
import Layout from '@/layouts/Layout.astro';
import ReportCard from '@/components/ReportCard.astro';

const CDN_BASE = 'https://cdn.free2aitools.com';
let allReports = [];

// V16.7.2: Hybrid Archive Loading - CDN (Index) + Local Glob
try {
    const paths = [`${CDN_BASE}/cache/reports/index.json.gz`, `${CDN_BASE}/cache/reports/index.json` || []];
    for (const p of paths) {
        const res = await fetch(p);
        if (res.ok) {
            let indexData;
            if (p.endsWith('.gz')) {
                const ds = new DecompressionStream('gzip');
                const decompressedStream = res.body.pipeThrough(ds);
                const response = new Response(decompressedStream);
                indexData = await response.json();
            } else {
                indexData = await res.json();
            }
            
            allReports = (indexData.reports || []).map(r => ({
                reportId: r.id,
                title: r.title,
                date: r.date,
                summary: `Daily AI analysis with ${r.highlights || 0} ecosystem highlights.`
            }));
            if (allReports.length > 0) break;
        }
    }
} catch (e) {
    console.warn('[Report Archive] CDN index fetch failed, falling back to build-time files.');
}

// Fallback/Merge: Load local bundled reports (Legacy/Initial)
const mainReports = (await import('../../data/reports.json')).default;
const archivedReportModules = await import.meta.glob('../../data/report-archives/*.json');

const localReports = await Promise.all(
    Object.values(archivedReportModules).map(async (importer) => {
        const module = await importer();
        const r = module.default;
        return {
            reportId: r.reportId || r.id,
            title: r.title,
            date: r.date || r.datePublished,
            summary: r.summary || r.subtitle
        };
    })
);

// Combine and Deduplicate
const combined = [...allReports, ...mainReports, ...localReports];
const uniqueReports = Array.from(new Map(combined.map(report => [report.reportId, report])).values())
    .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());

const pageTitle = "Full Report Archive";
const pageDescription = "Browse the complete archive of all AI Industry Analysis reports.";
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="container mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white">Report Archive</h1>
      <p class="mt-4 text-lg text-gray-500 dark:text-gray-400">
        Browse the complete archive of all AI Industry Analysis reports.
      </p>
    </header>

    {uniqueReports.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {uniqueReports.map(report => (
          <ReportCard report={report} />
        ))}
      </div>
    ) : (
      <div class="text-center py-16">
        <p class="text-xl text-gray-500 dark:text-gray-400">The report archive is currently empty.</p>
        <p class="mt-4">
          <a href="/reports" class="text-blue-600 dark:text-blue-400 hover:underline">&larr; Back to Main Reports</a>
        </p>
      </div>
    )}
  </div>
</Layout>
