---
import Layout from '@/layouts/Layout.astro';
import ReportCard from '@/components/ReportCard.astro';

// Load all reports from the main file and archives using import.meta.glob for resilience
const mainReports = (await import('../../../data/reports.json')).default;
const archivedReportModules = await import.meta.glob('../../../data/report-archives/*.json');

const archivedReports = await Promise.all(
    Object.values(archivedReportModules).map(async (importer) => {
        const module = await importer();
        return module.default;
    })
);

const allReports = [...mainReports, ...archivedReports];

// Deduplicate reports based on reportId and sort by date
const uniqueReports = Array.from(new Map(allReports.map(report => [report.reportId, report])).values())
    .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());

const pageTitle = "Full Report Archive";
const pageDescription = "Browse the complete archive of all AI Industry Analysis reports.";
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="container mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white">Report Archive</h1>
      <p class="mt-4 text-lg text-gray-500 dark:text-gray-400">
        Browse the complete archive of all AI Industry Analysis reports.
      </p>
    </header>

    {uniqueReports.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {uniqueReports.map(report => (
          <ReportCard report={report} />
        ))}
      </div>
    ) : (
      <div class="text-center py-16">
        <p class="text-xl text-gray-500 dark:text-gray-400">The report archive is currently empty.</p>
        <p class="mt-4">
          <a href="/reports" class="text-blue-600 dark:text-blue-400 hover:underline">&larr; Back to Main Reports</a>
        </p>
      </div>
    )}
  </div>
</Layout>
