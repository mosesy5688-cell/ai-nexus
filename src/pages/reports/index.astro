---
// src/pages/reports/index.astro
import Layout from '@/layouts/Layout.astro';
import reportsData from '@/data/reports.json';

const pageTitle = "AI Industry Weekly Reports";
const pageDescription = "Stay updated with the latest trends, insights, and analyses on the open-source AI model landscape, generated weekly.";
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="container mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-extrabold text-foreground">AI Industry Weekly Reports</h1>
      <p class="mt-4 text-lg text-muted-foreground">
        Generated insights on the evolving world of open-source AI.
      </p>
    </header>

    <div class="max-w-4xl mx-auto space-y-12">
      {reportsData.length > 0 ? (
        reportsData.map((report, index) => (
          <article class="bg-card-background p-8 rounded-2xl shadow-lg border border-card-border">
            <h2 class="text-2xl font-bold text-primary mb-2">{report.title}</h2>
            <p class="text-sm text-muted-foreground mb-6">
              Published on: {new Date(report.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </p>
            <div class="prose dark:prose-invert max-w-none leading-relaxed" set:html={report.content.replace(/\n/g, '<br />')}></div>
          </article>
        ))
      ) : (
        <p class="text-center text-muted-foreground">No reports have been generated yet. Please run the data fetching script.</p>
      )}
    </div>
  </div>
</Layout>