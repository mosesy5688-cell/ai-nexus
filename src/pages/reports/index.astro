---
// src/pages/reports/index.astro
import Layout from '@/layouts/Layout.astro';
import allReports from '../../data/reports.json';
import { marked } from 'marked'; // Using a robust markdown parser

const pageTitle = "AI Industry Weekly Reports";
const pageDescription = "Stay updated with the latest trends, insights, and analyses on the open-source AI model landscape, generated weekly.";

// Safety check in case the JSON file is empty or malformed.
const reports = Array.isArray(allReports) ? allReports : [];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="container mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white">AI Industry Weekly Reports</h1>
      <p class="mt-4 text-lg text-gray-500 dark:text-gray-400">
        Generated insights on the evolving world of open-source AI.
      </p>
    </header>

    <div class="max-w-4xl mx-auto space-y-12">
      {reports.length > 0 ? (
        reports.map((report) => (
          <article class="report-article bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700">
            <h2 class="text-2xl font-bold text-blue-600 dark:text-blue-400 mb-2">{report.title}</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">
              Published on: {new Date(report.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </p>
            <div class="prose dark:prose-invert max-w-none space-y-6">
              <p class="lead text-lg italic text-gray-600 dark:text-gray-300">{report.summary}</p>
              {report.sections.map(section => (
                <section>
                  <h3 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mt-8 mb-4">{section.heading}</h3>
                  <div class="prose-p:my-4 prose-a:text-blue-500 hover:prose-a:underline" set:html={marked.parse(section.content)} />
                  <div class="mt-4 flex flex-wrap gap-2">
                    {section.keywords.map(keyword => <span class="bg-gray-100 dark:bg-gray-700 text-xs font-medium px-2.5 py-1 rounded-full">{keyword}</span>)}
                  </div>
                </section>
              ))}
            </div>
          </article>
        ))
      ) : (
        <p class="text-center text-gray-500 dark:text-gray-400">No reports have been generated yet. Please run the data fetching script.</p>
      )}
    </div>
  </div>
</Layout>