---
// src/pages/reports/index.astro
import Layout from '@/layouts/Layout.astro';
import reportsData from '@/data/reports.json';
import { marked } from 'marked'; // Using a robust markdown parser

const pageTitle = "AI Industry Weekly Reports";
const pageDescription = "Stay updated with the latest trends, insights, and analyses on the open-source AI model landscape, generated weekly.";

// Safety check in case the JSON file is empty or malformed.
const safeReportsData = Array.isArray(reportsData) ? reportsData : [];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="container mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-extrabold text-foreground">AI Industry Weekly Reports</h1>
      <p class="mt-4 text-lg text-muted-foreground">
        Generated insights on the evolving world of open-source AI.
      </p>
    </header>

    <!-- Search Bar -->
    <div class="max-w-2xl mx-auto mb-16">
      <input 
        type="search" 
        id="reports-search-input"
        placeholder="Search reports by title or content..."
        class="w-full px-5 py-3 text-lg bg-card-background border-2 border-card-border rounded-full focus:ring-4 focus:ring-primary/50 focus:border-primary outline-none transition-all"
      />
    </div>

    <div id="reports-list" class="max-w-4xl mx-auto space-y-12">
      {safeReportsData.length > 0 ? (
        safeReportsData.map((report) => (
          <article class="report-article bg-card-background p-8 rounded-2xl shadow-lg border border-card-border" data-title={report.title.toLowerCase()} data-content={report.content.toLowerCase()}>
            <h2 class="text-2xl font-bold text-primary mb-2">{report.title}</h2>
            <p class="text-sm text-muted-foreground mb-6">
              Published on: {new Date(report.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </p>
            <div class="prose dark:prose-invert max-w-none leading-relaxed" set:html={marked.parse(report.content)} />
          </article>
        ))
      ) : (
        <p id="no-reports-message" class="text-center text-muted-foreground">No reports have been generated yet. Please run the data fetching script.</p>
      )}
      <p id="no-search-results" class="text-center text-muted-foreground hidden">No reports match your search.</p>    
    </div>
  </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.getElementById('reports-search-input');
    const reportArticles = document.querySelectorAll('.report-article');
    const noSearchResults = document.getElementById('no-search-results');

    searchInput.addEventListener('input', (e) => {
      const query = e.target.value.toLowerCase().trim();
      let visibleCount = 0;
      reportArticles.forEach(article => {
        const title = article.dataset.title || '';
        const content = article.dataset.content || '';
        const isVisible = title.includes(query) || content.includes(query);
        article.style.display = isVisible ? 'block' : 'none';
        if (isVisible) visibleCount++;
      });
      noSearchResults.classList.toggle('hidden', visibleCount > 0);
    });
  });
</script>

