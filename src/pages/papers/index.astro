---
/**
 * Papers Index Page - V14.5.8 Universal Architecture
 * Lists AI Research Papers with filtering and sorting
 * Uses Shared UniversalCatalog Logic + Centralized Fetcher
 * Canonical URL: /papers (redirects from /paper)
 */

export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import { fetchCatalogData, truncateListingItem } from '../../utils/catalog-fetcher.js';

// SSR Data Fetching (Unified)
const { items: allPapers, error, source } = await fetchCatalogData('paper', Astro.locals.runtime?.env);

// V15.8: Payload Optimization
const papers = allPapers.slice(0, 100).map(truncateListingItem);

const pageTitle = 'AI Papers Catalog - Latest Research';
const pageDescription = 'Explore the latest AI and machine learning research papers from arXiv. Read technical reports and academic publications.';
const canonicalUrl = 'https://free2aitools.com/papers';

// Category mapping for Papers
const categories = [
  { id: 'llm', label: 'LLMs', icon: 'üí¨' },
  { id: 'vision', label: 'Computer Vision', icon: 'üëÅÔ∏è' },
  { id: 'rl', label: 'Reinforcement Learning', icon: 'üéÆ' },
  { id: 'diffusion', label: 'Diffusion', icon: 'üé®' },
];
---

<Layout title={pageTitle} description={pageDescription}>
  <link slot="head" rel="canonical" href={canonicalUrl} />
  
  <main class="container mx-auto px-4 py-8 min-h-screen flex flex-col">
    <!-- Page Header (Catalog Style) -->
    <div class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-2">
        AI Papers Catalog
      </h1>
      <p class="text-gray-600 dark:text-gray-400">
        Browse and discover the latest AI research papers
      </p>
    </div>

    <!-- Filters & Sort Bar -->
    <div class="flex flex-wrap items-center gap-4 mb-6 p-4 bg-white dark:bg-gray-800 rounded-xl shadow-sm z-10 relative">
      <!-- Search -->
      <div class="flex-1 min-w-[200px]">
        <input 
          type="text" 
          id="entity-search" 
          placeholder="Search papers..." 
          class="w-full px-4 py-2 border border-gray-200 dark:border-gray-700 rounded-lg bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-yellow-500 focus:border-transparent"
        />
      </div>
      
      <!-- Sort -->
      <select id="sort-by" class="px-4 py-2 border border-gray-200 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white">
        <option value="recent">üïê Recent</option>
        <option value="cited">üìö Citations</option>
         <option value="name">Aa Title</option>
      </select>
    </div>

    <!-- Stats Bar -->
    <div class="flex items-center gap-4 mb-6 text-sm text-gray-500 dark:text-gray-400">
       <span id="results-count" class="font-medium">
         {allPapers.length > 0 ? `${allPapers.length} papers loaded from ${source.toUpperCase()}` : 'Loading papers...'}
      </span>
      <span>‚Ä¢</span>
      <span>Updated Mon/Thu</span>
    </div>

    <!-- Debug Block -->
    {error && (
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 p-4 rounded-lg mb-6 text-sm text-red-600 dark:text-red-400">
            <strong>System Status:</strong> Failed to pre-load papers. 
            <br/>Source: {source}
            <br/>Error: {error}
        </div>
    )}

    {!error && papers.length === 0 && (
        <div class="bg-gray-50 dark:bg-gray-800/50 border border-gray-100 dark:border-gray-700 p-8 rounded-xl text-center mb-6">
            <h3 class="text-xl font-medium text-gray-900 dark:text-gray-100 mb-2">No papers currently available</h3>
             <p class="text-gray-500 dark:text-gray-400">
               Our catalog is updating. Please check back later.
            </p>
        </div>
    )}

    <!-- Grid -->
    <div id="entity-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 flex-grow min-h-[500px]">
       {papers.length > 0 ? (
           papers.slice(0, 24).map((item: any) => (
            <a href={`/paper/${item.slug || item.id}`} 
               class="entity-card p-4 bg-white dark:bg-gray-800 rounded-xl hover:shadow-lg transition-all border border-gray-100 dark:border-gray-700 block">
              <div class="flex items-center justify-between mb-2">
                 <span class="text-xs px-2 py-0.5 rounded-full bg-yellow-100 dark:bg-yellow-900 text-yellow-700 dark:text-yellow-300">Paper</span>
              </div>
              <h3 class="font-bold text-gray-900 dark:text-white truncate">{item.title || item.name || item.id}</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1 line-clamp-1">{item.authors || 'Unknown'}</p>
              {/* Sanitized SSR Description */}
              <p class="text-sm text-gray-400 mt-2 line-clamp-2">
                 {item.description ? item.description.replace(/<[^>]*>?/gm, '') : ''}
              </p>
            </a>
           ))
       ) : (
          /* Skeleton Fallback */
          Array(8).fill(0).map(() => (
            <div class="animate-pulse bg-white dark:bg-gray-800 rounded-xl p-5 h-48">
              <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-3/4 mb-3"></div>
              <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-full mb-2"></div>
            </div>
          ))
       )}
    </div>

    <!-- Pagination -->
    <div class="flex justify-center mt-8 mb-12">
      <nav id="pagination" class="flex items-center gap-2"></nav>
    </div>
  </main>
</Layout>

<script define:vars={{ initialPapers: papers }}>
  window.initialPapers = initialPapers;
</script>

<script>
  import { UniversalCatalog } from '../../scripts/lib/UniversalCatalog.js';

  console.log('[Papers Page] Hydrating...', { count: window.initialPapers?.length });

  const init = () => {
      if (!window.initialPapers) return;

      new UniversalCatalog({ 
        initialData: window.initialPapers, 
        type: 'paper',
        gridId: 'entity-grid',
        dataUrl: 'https://cdn.free2aitools.com/cache/rankings/paper/p1.json'
      });
  };

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>
