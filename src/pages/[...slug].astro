---
import Layout from '@/layouts/Layout.astro';
import ModelCard from '@/components/ModelCard.astro';
import { Icon } from 'astro-icon/components';
import { marked } from 'marked';

export async function getStaticPaths() {
    const allModels = await Astro.glob('../../data/models.json').then(res => res[0].default);
    return allModels.map((model) => ({
        params: { slug: model.id.replace(/\//g, '--') },
        props: { model, allModels }, // Pass all models to each page
    }));
}

const { model, allModels } = Astro.props;

const getRelatedModels = () => {
    const modelTags = new Set(model.tags.filter(t => t.length > 2 && !['model', 'text'].includes(t)));
    if (modelTags.size === 0) return [];

    return allModels
        .filter(m => m.id !== model.id)
        .map(m => {
            const relatedTags = m.tags.filter(t => modelTags.has(t));
            return { ...m, matchCount: relatedTags.length };
        })
        .filter(m => m.matchCount > 0)
        .sort((a, b) => b.matchCount - a.matchCount || b.likes - a.likes)
        .slice(0, 3);
};
const relatedModels = getRelatedModels();
---

<Layout title={model.name} description={model.description}>
    <main class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2">
                <header class="mb-8">
                    <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white mb-2">{model.name}</h1>
                    <p class="text-lg text-gray-500 dark:text-gray-400">{model.description}</p>
                    <p class="text-sm text-gray-400 dark:text-gray-500 mt-2">
                        By: <span class="font-medium">{model.author}</span>
                    </p>
                </header>

                <!-- README Content -->
                <article class="prose prose-lg dark:prose-invert max-w-none bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm">
                    {model.readme ? (
                        <div set:html={marked.parse(model.readme)} />
                    ) : (
                        <p>No detailed documentation (README) is available for this model.</p>
                    )}
                </article>
            </div>

            <!-- Sidebar -->
            <aside>
                <div class="sticky top-24 space-y-6">
                    <!-- Action Buttons -->
                    <div class="space-y-3">
                        {model.downloadUrl && (
                            <a href={model.downloadUrl} target="_blank" rel="noopener noreferrer" class="w-full flex items-center justify-center px-4 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                                <Icon name="mdi:download" class="w-5 h-5 mr-2" />
                                Download Model
                            </a>
                        )}
                        {model.sources[0]?.url && (
                            <a href={model.sources[0].url} target="_blank" rel="noopener noreferrer" class="w-full flex items-center justify-center px-4 py-3 border border-gray-300 dark:border-gray-600 text-base font-medium rounded-md text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                <Icon name="mdi:github" class="w-5 h-5 mr-2" />
                                View Source
                            </a>
                        )}
                    </div>

                    <!-- Metadata -->
                    <div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-sm">
                        <h3 class="text-lg font-semibold mb-3">Details</h3>
                        <ul class="space-y-2 text-sm">
                            <li class="flex justify-between">
                                <span class="text-gray-500 dark:text-gray-400">Likes</span>
                                <span class="font-medium">{model.likes.toLocaleString()}</span>
                            </li>
                            <li class="flex justify-between">
                                <span class="text-gray-500 dark:text-gray-400">Downloads</span>
                                <span class="font-medium">{model.downloads.toLocaleString()}</span>
                            </li>
                            <li class="flex justify-between">
                                <span class="text-gray-500 dark:text-gray-400">Task</span>
                                <span class="font-medium capitalize">{model.task}</span>
                            </li>
                            <li class="flex justify-between">
                                <span class="text-gray-500 dark:text-gray-400">Last Updated</span>
                                <span class="font-medium">{new Date(model.lastModified).toLocaleDateString()}</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Tags -->
                    {model.tags && model.tags.length > 0 && (
                        <div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-sm">
                            <h3 class="text-lg font-semibold mb-3">Tags</h3>
                            <div class="flex flex-wrap gap-2">
                                {model.tags.map(tag => (
                                    <a href={`/keyword/${encodeURIComponent(tag)}`} class="text-xs bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 py-1 px-2 rounded-full hover:bg-blue-200 dark:hover:bg-blue-800">
                                        {tag}
                                    </a>
                                ))}
                            </div>
                        </div>
                    )}

                    <!-- Related Models -->
                    {relatedModels.length > 0 && (
                        <div>
                            <h3 class="text-xl font-bold mb-4">Related Models</h3>
                            <div class="space-y-4">
                                {relatedModels.map(related => (
                                    <ModelCard model={related} />
                                ))}
                            </div>
                        </div>
                    )}
                </div>
            </aside>
        </div>
    </main>
</Layout>
