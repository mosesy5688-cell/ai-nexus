---
/**
 * Knowledge Base Index Page
 * V5.2 Refactored - Educational content for SEO and user engagement
 */

export const prerender = true;

import Layout from '../layouts/Layout.astro';
import KnowledgeCategoryCard from '../components/knowledge/KnowledgeCategoryCard.astro';
import { KNOWLEDGE_CATEGORIES, getTotalArticleCount } from '../data/knowledge-base-config';

const pageTitle = "AI Knowledge Base - Free2AITools";
const pageDescription = "Learn about AI benchmarks, model architectures, and deployment. Comprehensive guides for MMLU, HumanEval, context length, and more.";
const totalArticles = getTotalArticleCount();
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="kb-container">
    <!-- Hero -->
    <header class="kb-hero">
      <h1 class="kb-title">
        <span class="emoji">ðŸ“š</span>
        AI Knowledge Base
      </h1>
      <p class="kb-subtitle">
        Comprehensive guides to understand AI models, benchmarks, and deployment
      </p>
      <div class="kb-stats">
        <span>{KNOWLEDGE_CATEGORIES.length} categories</span>
        <span class="separator">â€¢</span>
        <span>{totalArticles} articles</span>
      </div>
    </header>

    <!-- Search (placeholder) -->
    <div class="kb-search">
      <input type="text" placeholder="Search knowledge base..." class="search-input" />
    </div>

    <!-- Categories Grid -->
    <div class="categories-grid">
      {KNOWLEDGE_CATEGORIES.map(category => (
        <KnowledgeCategoryCard category={category} />
      ))}
    </div>

    <!-- CTA -->
    <div class="kb-cta">
      <h3>Ready to explore models?</h3>
      <p>Apply your knowledge to find the perfect AI model for your use case</p>
      <div class="cta-buttons">
        <a href="/ranking" class="btn-primary">View Rankings</a>
        <a href="/models" class="btn-secondary">Browse Models</a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .kb-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .kb-hero {
    text-align: center;
    padding: 3rem 1rem;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(168, 85, 247, 0.1));
    border-radius: 24px;
    margin-bottom: 2rem;
  }

  .kb-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: #f1f5f9;
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5); /* V6.2: Improve contrast */
  }

  .emoji { font-size: 2.5rem; }

  .kb-subtitle {
    color: #cbd5e1; /* V6.3: Improved from #94a3b8 for WCAG AA */
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .kb-stats {
    margin-top: 1.5rem;
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    color: #818cf8;
    font-weight: 600;
  }

  .separator { color: #475569; }

  .kb-search {
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .search-input {
    width: 100%;
    padding: 1rem 1.5rem;
    border: 1px solid #334155;
    background: rgba(30, 41, 59, 0.8);
    border-radius: 12px;
    color: #e2e8f0;
    font-size: 1rem;
  }

  .search-input:focus {
    outline: none;
    border-color: #818cf8;
  }

  .search-input::placeholder { color: #94a3b8; /* V6.3: Improved from #64748b */ }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .kb-cta {
    text-align: center;
    padding: 2.5rem;
    background: rgba(99, 102, 241, 0.1);
    border-radius: 16px;
    border: 1px solid #334155;
  }

  .kb-cta h3 {
    font-size: 1.5rem;
    color: #f1f5f9;
    margin-bottom: 0.5rem;
  }

  .kb-cta p {
    color: #cbd5e1; /* V6.3: Improved from #94a3b8 for WCAG AA */
    margin-bottom: 1.5rem;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .btn-primary {
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    color: white;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.2s;
  }

  .btn-primary:hover { transform: scale(1.05); }

  .btn-secondary {
    padding: 0.75rem 1.5rem;
    background: rgba(99, 102, 241, 0.2);
    color: #818cf8;
    border: 1px solid #818cf8;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.2s;
  }

  .btn-secondary:hover { background: rgba(99, 102, 241, 0.3); }

  @media (max-width: 768px) {
    .kb-title {
      font-size: 1.75rem;
      flex-direction: column;
    }
    .categories-grid { grid-template-columns: 1fr; }
    .cta-buttons { flex-direction: column; }
  }
</style>
