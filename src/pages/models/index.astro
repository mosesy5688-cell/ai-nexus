// SSR Data Fetching (Zero-Runtime R2 Access)
let models: any[] = [];
let error = null;

try {
  // 1. Try env.R2_ASSETS (SSOT: trending.json)
  const runtime = Astro.locals.runtime;
  if (runtime?.env?.R2_ASSETS) {
      const r2 = runtime.env.R2_ASSETS;
      const trendingFile = await r2.get('cache/trending.json');
      if (trendingFile) {
          const data = await trendingFile.json();
          // Extract models from SSOT
          const allData = Array.isArray(data) ? data : (data.models || []);
          // Standardized Filter (Spec Art 7)
          models = allData.filter((i:any) => i.type === 'model' || (i.id && !i.type && !i.id.startsWith('space/')));
      }
  }

  // 2. Fallback to CDN
  if (models.length === 0) {
      const res = await fetch('https://cdn.free2aitools.com/cache/trending.json');
      if (res.ok) {
          const data = await res.json();
          const allData = Array.isArray(data) ? data : (data.models || []);
          models = allData.filter((i:any) => i.id && !i.id.startsWith('space/'));
      }
  }
} catch (e) {
  console.error("Models SSR Load Error:", e);
  error = 'Failed to load models';
}

