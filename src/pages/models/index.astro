---
/**
 * Model Index Page - V16.8.7 Unified SSR (Restored Catalog Design)
 * Lists AI models with filtering and sorting
 * Restores original "Catalog" layout while keeping Zero-Runtime SSR
 * Canonical URL: /models (redirects from /model)
 */

export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import { fetchCatalogData, truncateListingItem } from '../../utils/catalog-fetcher.js';
import { generateEntityUrl } from '../../utils/url-utils.js';

// SSR Data Fetching (Unified)
const { items: allModels, error, source } = await fetchCatalogData('model', Astro.locals.runtime?.env);

// V15.8: Payload Optimization (Limit SSR to top 100 truncated items)
const models = allModels.slice(0, 100).map(truncateListingItem);

// SEO (Preserve original catalog metadata)
const pageTitle = "AI Models Catalog | Browse 70K+ Open-Source Models";
const pageDescription = "Browse our complete catalog of open-source AI models. Filter by category, sort by FNI score, downloads, or recency.";
const canonicalUrl = 'https://free2aitools.com/models';
---

<Layout title={pageTitle} description={pageDescription}>
  <link slot="head" rel="canonical" href={canonicalUrl} />

  <!-- Added min-h-screen to prevent footer overlap when content is sparse -->
  <div class="container mx-auto px-4 py-8 min-h-screen flex flex-col">
    <!-- Page Header (Catalog Style) -->
    <div class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-2">
        AI Models Catalog
      </h1>
      <p class="text-gray-600 dark:text-gray-400">
        Browse and discover 70,000+ open-source AI models
      </p>
    </div>

    <!-- Filters & Sort Bar -->
    <div class="flex flex-wrap items-center gap-4 mb-6 p-4 bg-white dark:bg-gray-800 rounded-xl shadow-sm z-10 relative">
      <!-- Search -->
      <div class="flex-1 min-w-[200px]">
        <input 
          type="text" 
          id="models-search" 
          placeholder="Search models..." 
          class="w-full px-4 py-2 border border-gray-200 dark:border-gray-700 rounded-lg bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
        />
      </div>
      
      <!-- Category Filter -->
      <select id="category-filter" class="px-4 py-2 border border-gray-200 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white">
        <option value="">All Categories</option>
        <option value="text-generation">ğŸ’¬ Text Generation</option>
        <option value="text-to-image">ğŸ¨ Image Generation</option>
        <option value="text-classification">ğŸ“‹ Classification</option>
        <option value="question-answering">â“ Question Answering</option>
        <option value="summarization">ğŸ“ Summarization</option>
        <option value="translation">ğŸŒ Translation</option>
        <option value="feature-extraction">ğŸ” Embeddings</option>
      </select>
      
      <!-- Sort -->
      <select id="sort-by" class="px-4 py-2 border border-gray-200 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white">
        <option value="fni">ğŸ›¡ï¸ FNI Score</option>
        <option value="downloads">ğŸ“¥ Downloads</option>
        <option value="likes">â¤ï¸ Likes</option>
        <option value="recent">ğŸ• Recently Updated</option>
      </select>
    </div>

    <!-- Stats Bar -->
    <div class="flex items-center gap-4 mb-6 text-sm text-gray-500 dark:text-gray-400">
      <span id="results-count" class="font-medium">
         {allModels.length > 0 ? `${allModels.length} models loaded from ${source.toUpperCase()}` : 'Loading models...'}
      </span>
      <span>â€¢</span>
      <span>Updated Mon/Thu at 03:00 UTC</span>
    </div>

    <!-- Debug Block (Only visible if 0 models and in dev/debug mode or just visible as fallback) -->
    {error && (
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 p-4 rounded-lg mb-6 text-sm text-red-600 dark:text-red-400">
            <strong>System Status:</strong> Failed to pre-load models. 
            <br/>Source: {source}
            <br/>Error: {error}
        </div>
    )}

    {!error && models.length === 0 && (
        <div class="bg-gray-50 dark:bg-gray-800/50 border border-gray-100 dark:border-gray-700 p-8 rounded-xl text-center mb-6">
            <h3 class="text-xl font-medium text-gray-900 dark:text-gray-100 mb-2">No models currently available</h3>
             <p class="text-gray-500 dark:text-gray-400">
               Our catalog is updating. Please check back later.
            </p>
        </div>
    )}

    <!-- Models Grid -->
    <div id="models-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 flex-grow min-h-[500px]">
       {/* 
         Server-Side Rendering Output 
         We render the initial state here for SEO and immediate paint.
         The client script will then Hydrate this grid (for filtering/sorting).
       */}
       {models.length > 0 ? (
           models.slice(0, 24).map((model: any) => (
            <a href={generateEntityUrl(model)} 
               class="model-card p-4 bg-white dark:bg-gray-800 rounded-xl hover:shadow-lg transition-all border border-gray-100 dark:border-gray-700 block">
              <div class="flex items-center justify-between mb-2">
                 <span class="text-xs px-2 py-0.5 rounded-full bg-indigo-100 dark:bg-indigo-900 text-indigo-700 dark:text-indigo-300">Model</span>
                  {model.fni_score > 0 && (
                    <span class="text-xs font-bold text-gray-500 dark:text-gray-400">
                       ğŸ›¡ï¸ {Math.round(model.fni_score)}
                    </span>
                  )}
              </div>
              <h3 class="font-bold text-gray-900 dark:text-white truncate">{model.name || model.id}</h3>
              {/* Strip HTML simply for SSR preview */}
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1 line-clamp-2">
                  {model.description ? model.description.replace(/<[^>]*>?/gm, '') : ''}
              </p>
            </a>
           ))
       ) : (
          /* Original Skeleton Fallback */
          Array(12).fill(0).map(() => (
            <div class="animate-pulse bg-white dark:bg-gray-800 rounded-xl p-5 h-48">
              <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-3/4 mb-3"></div>
              <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-1/2 mb-2"></div>
              <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-full mb-2"></div>
              <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-5/6"></div>
            </div>
          ))
       )}
    </div>

    <!-- Pagination -->
    <div class="flex justify-center mt-8 mb-12">
      <nav id="pagination" class="flex items-center gap-2">
        <!-- Populated by JS -->
      </nav>
    </div>

    <!-- Quick Links -->
    <div class="mt-auto p-6 bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-gray-800 dark:to-gray-900 rounded-xl">
      <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Quick Navigation</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <a href="/ranking" class="flex items-center gap-2 text-indigo-600 dark:text-indigo-400 hover:underline">
          <span>ğŸ†</span> FNI Leaderboard
        </a>
        <a href="/tools" class="flex items-center gap-2 text-indigo-600 dark:text-indigo-400 hover:underline">
          <span>ğŸ› ï¸</span> Dev Tools
        </a>
        <a href="/papers" class="flex items-center gap-2 text-indigo-600 dark:text-indigo-400 hover:underline">
          <span>ğŸ“„</span> Research Papers
        </a>
        <a href="/spaces" class="flex items-center gap-2 text-indigo-600 dark:text-indigo-400 hover:underline">
          <span>ğŸš€</span> AI Spaces
        </a>
      </div>
    </div>
  </div>
</Layout>

<script define:vars={{ initialModels: models }}>
  window.initialModels = initialModels;
</script>

<script>
  import { UniversalCatalog } from '../../scripts/lib/UniversalCatalog.js';

  console.log('[Models Page] Hydrating...', { count: window.initialModels?.length });

  const init = () => {
      if (!window.initialModels) return;

      new UniversalCatalog({ 
        initialData: window.initialModels, 
        type: 'model',
        gridId: 'models-grid',
        dataUrl: 'https://cdn.free2aitools.com/entities.json'
      });
  };

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>
