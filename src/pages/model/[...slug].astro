---
import BaseLayout from '@/layouts/BaseLayout.astro';
import models from '@/data/models.json';
import RatingsDisplay from '@/components/RatingsDisplay.jsx';
import ModelCard from '@/components/ModelCard.astro';
import type { Model } from '@/types';

export async function getStaticPaths() {
  // Astro's new URL encoding requires replacing '/' with '--'
  // to avoid being interpreted as a directory.
  // We need to ensure the slug matches this format.
  // However, the current implementation uses model.id directly which might contain '/'.
  // Let's assume the build process handles this correctly for now,
  // as changing it would require updating all links.
  // The correct way would be: `slug: model.id.replace(/\//g, '--')`
  return models.map(model => ({
    params: { slug: model.id },
    props: { model },
  }));
}

const { model } = Astro.props;
const pageTitle = model.name;
const pageDescription = model.summary_ai || model.description;

const hasMoreTags = model.tags.length > 15;
const visibleTags = model.tags.slice(0, 15);

// Find related models based on shared tags
const relatedModels = models.filter(m => {
    if (m.id === model.id) return false; // Exclude the current model
    const sharedTags = m.tags.filter(tag => model.tags.includes(tag));
    return sharedTags.length > 1; // Require at least 2 shared tags
}).slice(0, 3); // Limit to 3 related models
---
<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="container mx-auto px-4 py-12">
    <a href="javascript:history.back()" class="text-primary hover:underline mb-8 block font-medium transition-colors">&larr; Back</a>

    <article class="bg-card-background p-6 sm:p-8 rounded-2xl shadow-xl border border-card-border">
      <header class="border-b border-card-border pb-6 mb-8">
        <h1 class="text-4xl sm:text-5xl font-extrabold text-foreground leading-tight">{model.name}</h1>
        <p class="mt-3 text-lg text-muted-foreground">{model.summary_ai || model.description}</p>
      </header>

      <div class="grid grid-cols-1 lg:grid-cols-4 gap-12 relative">

        <!-- Main Content Area -->
        <div class="lg:col-span-3">
          <!-- Tags Section -->
          <section class="mb-8">
            <h3 class="text-xl font-semibold mb-3 text-foreground">Tags</h3>
            <div id="tags-container" class="flex flex-wrap gap-2">
              {visibleTags.map(tag => (
                <span class="bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full dark:bg-blue-900 dark:text-blue-300 transition-colors">{tag}</span>
              ))}
              {hasMoreTags && (
                <button id="show-all-tags" class="text-blue-500 hover:underline text-sm font-medium">Show all</button>
              )}
            </div>
          </section>

          <!-- Tabbed Section for Details and Community -->
          <div class="mt-12" x-data="{ activeTab: 'details' }">
            <div class="border-b border-card-border">
              <nav class="-mb-px flex space-x-8" aria-label="Tabs">
                <button @click="activeTab = 'details'" :class="{ 'border-primary text-primary': activeTab === 'details', 'border-transparent text-muted-foreground hover:text-foreground hover:border-gray-300': activeTab !== 'details' }" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-lg transition-colors">
                  Details & Usage
                </button>
                <button @click="activeTab = 'community'" :class="{ 'border-primary text-primary': activeTab === 'community', 'border-transparent text-muted-foreground hover:text-foreground hover:border-gray-300': activeTab !== 'community' }" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-lg transition-colors">
                  Community Ratings
                </button>
              </nav>
            </div>

            <!-- Details Tab Panel -->
            <div x-show="activeTab === 'details'" class="pt-8">
              <div class="prose dark:prose-invert prose-lg max-w-none bg-background p-4 sm:p-6 rounded-lg border border-card-border shadow-inner">
                {model.readme ? (
                  <div set:html={model.readme} />
                ) : (
                  <p>{model.description}</p>
                )}
              </div>
            </div>

            <!-- Community Tab Panel -->
            <div x-show="activeTab === 'community'" class="pt-8">
              <RatingsDisplay client:load modelId={model.id} />
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="lg:col-span-1 lg:sticky top-28 self-start">
          <div class="bg-input-background/50 p-6 rounded-xl shadow-md border border-card-border">
            <h3 class="text-2xl font-bold mb-4 text-foreground border-b border-card-border pb-3">Model Details</h3>
            <div class="space-y-4 text-foreground">
              <div class="flex items-center gap-3">
                <span class="text-xl">üë§</span>
                <div><span class="font-semibold">Author:</span> {model.author}</div>
              </div>
              <div class="flex items-center gap-3">
                <span class="text-xl">‚öôÔ∏è</span>
                <div><span class="font-semibold">Task:</span> <span class="break-all">{model.task}</span></div>
              </div>
              <div class="flex items-center gap-3">
                <span class="text-xl">‚ù§Ô∏è</span>
                <div><span class="font-semibold">Likes:</span> {model.likes.toLocaleString()}</div>
              </div>
              <div class="flex items-center gap-3">
                <span class="text-xl">‚¨áÔ∏è</span>
                <div><span class="font-semibold">Downloads:</span> {model.downloads.toLocaleString()}</div>
              </div>
              <div class="flex items-center gap-3">
                <span class="text-xl">üìÖ</span>
                <div><span class="font-semibold">Updated:</span> {new Date(model.lastModified).toLocaleDateString()}</div>
              </div>
            </div>
            
            <div class="mt-6 border-t border-card-border pt-6">
              <h4 class="font-bold text-lg mb-3 text-foreground">Sources</h4>
              <ul class="space-y-2">
                {model.sources.map(source => (
                  <li>
                    <a href={source.url} target="_blank" rel="noopener noreferrer" class="text-primary hover:underline transition-colors break-all flex items-center gap-1">
                      <span>{source.platform}</span>
                      <span class="ml-1 text-sm">&rarr;</span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </aside>
      </div>
    </article>

    <!-- Related Models Section -->
    {relatedModels.length > 0 && (
      <section class="mt-24">
        <h2 class="text-3xl font-bold text-center mb-12 text-foreground">You might also like</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {relatedModels.map(related => <ModelCard model={related as Model} />)}
        </div>
      </section>
    )}
  </div>

  <!-- Alpine.js for Tabs -->
  <script is:inline src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const allTags = JSON.parse(document.getElementById('all-tags-data')?.textContent || '[]');
      const hasMoreTags = allTags.length > 15;

      if (hasMoreTags) {
        const showAllBtn = document.getElementById('show-all-tags');
        const tagsContainer = document.getElementById('tags-container');

        if (showAllBtn && tagsContainer) {
          showAllBtn.addEventListener('click', () => {
            const remainingTags = allTags.slice(15);
            const tagsHtml = remainingTags.map(tag => 
              `<span class="bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full dark:bg-blue-900 dark:text-blue-300 transition-colors">${tag}</span>`
            ).join('');
            
            const tempDiv = document.createElement('div');
            tempDiv.innerHTML = tagsHtml;
            
            // Use a document fragment to append all new nodes at once
            const fragment = document.createDocumentFragment();
            while (tempDiv.firstChild) {
              fragment.appendChild(tempDiv.firstChild);
            }
            tagsContainer.insertBefore(fragment, showAllBtn);
            showAllBtn.remove();
          });
        }
      }
    });
  </script>
  <script id="all-tags-data" type="application/json" set:html={JSON.stringify(model.tags)}></script>
</BaseLayout>