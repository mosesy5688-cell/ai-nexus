---
// Fetch all models at build time and generate static pages
export async function getStaticPaths() {
    // This runs at build time, we need to fetch from D1
    // But we can't access runtime.env at build time!
    // So we'll generate a fallback page and use client-side rendering
    return [
        { params: { slug: 'loading' } }
    ];
}

import Layout from '../../layouts/Layout.astro';

const pageTitle = "AI Model Details";
const pageDescription = "View details about this AI model";
---

<Layout title={pageTitle} description={pageDescription}>
    <div class="container mx-auto px-4 py-12">
        <div class="max-w-4xl mx-auto">
            <!-- Loading State -->
            <div id="loading-state" class="text-center py-16">
                <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500"></div>
                <p class="mt-4 text-gray-500">Loading model details...</p>
            </div>

            <!-- Error State -->
            <div id="error-state" class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
                <strong class="font-bold">Error:</strong>
                <span class="block sm:inline" id="error-message"></span>
                <div class="mt-4">
                    <a href="/" class="text-blue-600 hover:underline">‚Üê Back to Home</a>
                </div>
            </div>

            <!-- Model Content -->
            <div id="model-content" class="hidden">
                <!-- Header Section -->
                <header class="mb-8">
                    <div class="flex flex-col md:flex-row md:items-start md:items-between gap-4">
                        <div class="flex-grow">
                            <h1 id="model-name" class="text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-white mb-2 break-words"></h1>
                            <p id="model-author" class="text-lg text-gray-500 dark:text-gray-400"></p>
                        </div>
                        <a id="hf-link" href="#" target="_blank" rel="noopener noreferrer" class="flex-shrink-0 inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-transform hover:scale-105">
                            View on Hugging Face
                        </a>
                    </div>
                </header>

                <!-- Metadata Section -->
                <div class="mb-8 p-4 bg-gray-100 dark:bg-gray-800 rounded-lg">
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Likes</p>
                            <p id="model-likes" class="text-xl font-bold">0</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Downloads</p>
                            <p id="model-downloads" class="text-xl font-bold">0</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Task</p>
                            <p id="model-task" class="text-xl font-bold capitalize">N/A</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Last Updated</p>
                            <p id="model-updated" class="text-xl font-bold">N/A</p>
                        </div>
                    </div>
                </div>

                <!-- Description Section -->
                <article class="model-readme-content py-8 border-t border-gray-200 dark:border-gray-700">
                    <h2 class="text-2xl font-bold mb-4">Model Description</h2>
                    <div class="prose prose-lg dark:prose-invert max-w-none">
                        <p id="model-description" class="text-gray-700 dark:text-gray-300 whitespace-pre-wrap"></p>
                    </div>
                </article>
            </div>
        </div>
    </div>

    <script>
        async function loadModelDetails() {
            const loadingEl = document.getElementById('loading-state');
            const errorEl = document.getElementById('error-state');
            const errorMsgEl = document.getElementById('error-message');
            const contentEl = document.getElementById('model-content');

            try {
                // Get model ID from URL path
                const pathParts = window.location.pathname.split('/').filter(p => p);
                const slug = pathParts[pathParts.length - 1];
                
                if (!slug || slug === 'model' || slug === 'loading') {
                    throw new Error('No model specified');
                }

                // Convert slug back to ID format
                const modelId = slug.replace(/--/g, '/');

                // Fetch model data from API
                const response = await fetch(`/api/model-detail?id=${encodeURIComponent(modelId)}`);
                if (!response.ok) {
                    const errorData = await response.json().catch(() => ({}));
                    throw new Error(errorData.error || `Failed to load model (${response.status})`);
                }

                const model = await response.json();

                // Update page content
                document.title = `${model.name} - AI Model Details`;
                document.getElementById('model-name').textContent = model.name || 'Unknown Model';
                document.getElementById('model-author').textContent = `by ${model.author || 'Unknown'}`;
                document.getElementById('hf-link').href = `https://huggingface.co/${model.id}`;
                document.getElementById('model-likes').textContent = (model.likes || 0).toLocaleString();
                document.getElementById('model-downloads').textContent = (model.downloads || 0).toLocaleString();
                document.getElementById('model-task').textContent = model.pipeline_tag || 'N/A';
                document.getElementById('model-updated').textContent = model.last_updated 
                    ? new Date(model.last_updated).toLocaleDateString() 
                    : 'N/A';
                document.getElementById('model-description').textContent = model.description || 'No description available.';

                // Show content, hide loading
                loadingEl.classList.add('hidden');
                contentEl.classList.remove('hidden');

            } catch (e) {
                console.error('Failed to load model:', e);
                loadingEl.classList.add('hidden');
                errorEl.classList.remove('hidden');
                errorMsgEl.textContent = e.message || 'Failed to load model details';
            }
        }

        document.addEventListener('DOMContentLoaded', loadModelDetails);
    </script>
</Layout>
