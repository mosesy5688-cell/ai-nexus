---
// src/pages/model/[...slug].astro
import Layout from '@/layouts/Layout.astro';
import allModels from '@/data/models.json';
import { Image } from 'astro:assets';
import RatingsDisplay from '@/components/RatingsDisplay';
import ModelCard from '@/components/ModelCard.astro';

export async function getStaticPaths() {
  return allModels.map(model => ({
    params: { slug: model.id },
    props: { model },
  }));
}

const { model } = Astro.props;

// Find related models (simple logic: same task, different model)
const relatedModels = allModels
  .filter(m => m.task === model.task && m.id !== model.id)
  .sort((a, b) => b.likes - a.likes)
  .slice(0, 4);

const pageTitle = `${model.name} - AI Model Details`;
const pageDescription = model.summary_ai || model.description || `Explore details, usage, and community ratings for the ${model.name} AI model.`;
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <a href="javascript:history.back()" class="text-primary hover:underline mb-8 block font-medium transition-colors">&larr; Back to list</a>

    <article class="bg-card-background p-6 sm:p-8 rounded-2xl shadow-xl border border-card-border">
      <!-- Header -->
      <header class="border-b border-card-border pb-6 mb-8">
        <div class="flex flex-col sm:flex-row sm:items-start sm:gap-6">
          {model.thumbnail && (
            <div class="flex-shrink-0 w-24 h-24 mb-4 sm:mb-0">
              <Image
                src={model.thumbnail}
                alt={`${model.name} thumbnail`}
                width={96}
                height={96}
                class="rounded-lg object-cover w-full h-full border-2 border-card-border"
              />
            </div>
          )}
          <div class="flex-grow">
            <h1 class="text-3xl lg:text-4xl font-extrabold text-foreground leading-tight">{model.name}</h1>
            <p class="mt-2 text-lg text-muted-foreground">{model.author}</p>
          </div>
        </div>
      </header>

      <div class="grid grid-cols-1 lg:grid-cols-4 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-3">
          <!-- AI Summary -->
          {model.summary_ai && (
            <section class="mb-10 p-6 bg-primary/5 border border-primary/20 rounded-xl">
              <h2 class="text-2xl font-bold text-foreground mb-3">AI Summary</h2>
              <p class="text-foreground/90 leading-relaxed">{model.summary_ai}</p>
            </section>
          )}

          <!-- Tabs -->
          <div id="tabs-container" class="mb-10">
            <div class="border-b border-card-border mb-6">
              <nav class="-mb-px flex space-x-6" aria-label="Tabs">
                <button id="tab-btn-details" class="tab-button whitespace-nowrap py-3 px-1 border-b-2 font-semibold text-lg focus:outline-none active-tab">Details</button>
                <button id="tab-btn-readme" class="tab-button whitespace-nowrap py-3 px-1 border-b-2 font-semibold text-lg focus:outline-none inactive-tab">Readme</button>
                <button id="tab-btn-ratings" class="tab-button whitespace-nowrap py-3 px-1 border-b-2 font-semibold text-lg focus:outline-none inactive-tab">Ratings & Comments</button>
              </nav>
            </div>

            <div id="tab-content" class="mt-6">
              <!-- Details Panel -->
              <div id="tab-panel-details" class="tab-panel space-y-6">
                <p class="text-lg text-foreground/90">{model.description}</p>
                <div>
                  <h3 class="text-lg font-semibold mb-3 text-foreground">Tags</h3>
                  <div class="flex flex-wrap gap-2">
                    {model.tags.map(tag => <span class="tag">{tag}</span>)}
                  </div>
                </div>
              </div>

              <!-- Readme Panel -->
              <div id="tab-panel-readme" class="tab-panel hidden">
                {model.readme ? (
                  <div class="prose prose-lg dark:prose-invert max-w-none bg-input-background/50 p-6 rounded-lg border border-input-border shadow-inner" set:html={model.readme} />
                ) : (
                  <p class="text-muted-foreground">No README available for this model.</p>
                )}
              </div>

              <!-- Ratings Panel -->
              <div id="tab-panel-ratings" class="tab-panel hidden">
                <RatingsDisplay client:load modelId={model.id} />
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="lg:col-span-1">
          <div class="bg-input-background/50 p-6 rounded-2xl sticky top-24 shadow-md border border-card-border">
            <h3 class="text-xl font-bold mb-4 text-foreground border-b border-card-border pb-3">Model Info</h3>
            <div class="space-y-4 text-foreground/90">
              <div class="flex items-center gap-3"><span class="text-xl">‚öôÔ∏è</span><div><span class="font-semibold">Task:</span> <span class="break-all">{model.task}</span></div></div>
              <div class="flex items-center gap-3"><span class="text-xl">‚ù§Ô∏è</span><div><span class="font-semibold">Likes:</span> <span>{model.likes.toLocaleString()}</span></div></div>
              <div class="flex items-center gap-3"><span class="text-xl">‚¨áÔ∏è</span><div><span class="font-semibold">Downloads:</span> <span>{model.downloads.toLocaleString()}</span></div></div>
              <div class="flex items-center gap-3"><span class="text-xl">üìÖ</span><div><span class="font-semibold">Updated:</span> <span>{new Date(model.lastModified).toLocaleDateString()}</span></div></div>
            </div>
            <div class="mt-6 border-t border-card-border pt-6">
              <h4 class="font-bold text-lg mb-3 text-foreground">Sources</h4>
              <ul class="space-y-2">
                {model.sources.map(source => (
                  <li>
                    <a href={source.url} target="_blank" rel="noopener noreferrer" class="text-primary hover:underline transition-colors break-all flex items-center gap-1.5">
                      <span>{source.platform}</span>
                      <span class="text-sm">&rarr;</span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </aside>
      </div>
    </article>

    <!-- Related Models Section -->
    {relatedModels.length > 0 && (
      <section class="mt-20">
        <h2 class="text-3xl font-bold text-foreground mb-8">Related Models</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {relatedModels.map(related => <ModelCard model={related} />)}
        </div>
      </section>
    )}
  </div>

  <script>
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabPanels = document.querySelectorAll('.tab-panel');

    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Deactivate all buttons and hide all panels
        tabButtons.forEach(btn => btn.classList.replace('active-tab', 'inactive-tab'));
        tabPanels.forEach(panel => panel.classList.add('hidden'));

        // Activate the clicked button
        button.classList.replace('inactive-tab', 'active-tab');

        // Show the corresponding panel
        const panelId = button.id.replace('btn', 'panel');
        document.getElementById(panelId)?.classList.remove('hidden');
      });
    });
  </script>
</Layout>