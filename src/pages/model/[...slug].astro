---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import ModelHero from '../../components/ModelHero.astro';
import ModelCarousel from '../../components/ModelCarousel.astro';
import Comments from '../../components/Comments.astro';
import { getModelBySlug } from '../../utils/db';
import { prepareDetailData, getBestDescription, logDataActivity } from '../../utils/frontend-data';

const { slug } = Astro.params;

// Initialize variables
let model = null;
let enrichedData = null;
let relatedModels = [];
let error = null;
let pageTitle = "AI Model Details";
let pageDescription = "View details for this AI model.";

// ---------------------------------------------------
// Stage 1: Fetch and enrich model data
// ---------------------------------------------------
try {
  if (!slug) {
    throw new Error("No slug provided");
  }

  const rawModel = await getModelBySlug(slug, Astro.locals);
  
  if (rawModel) {
    // Use Frontend Data Coordination System for normalization
    enrichedData = prepareDetailData(rawModel);
    model = enrichedData;
    
    // Log data fetch for debugging
    logDataActivity('model_fetch', {
      slug,
      modelId: model.id,
      hasIssues: model.hasIssues,
      validation: model.validation
    });

    // Fetch related models
    const relatedIds = model.related_ids || [];
    if (relatedIds.length > 0) {
      try {
        const db = Astro.locals?.runtime?.env?.DB;
        if (db) {
          const placeholders = relatedIds.map(() => "?").join(",");
          const stmt = db.prepare(`
            SELECT id, name, author, likes, downloads, cover_image_url, description, tags
            FROM models
            WHERE id IN (${placeholders})
            LIMIT 6
          `);
          const { results } = await stmt.bind(...relatedIds).all();
          relatedModels = results || [];
        }
      } catch (queryErr) {
        console.warn("Failed to query related models:", queryErr);
      }
    }

    // Fallback: query by pipeline_tag if no related models
    if (relatedModels.length === 0 && model.pipeline_tag) {
      try {
        const db = Astro.locals?.runtime?.env?.DB;
        if (db) {
          const stmt = db.prepare(`
            SELECT id, name, author, likes, downloads, cover_image_url, description, tags
            FROM models
            WHERE pipeline_tag = ? AND id != ?
            ORDER BY downloads DESC
            LIMIT 6
          `);
          const { results } = await stmt.bind(model.pipeline_tag, model.id).all();
          relatedModels = results || [];
        }
      } catch (fallbackErr) {
        console.warn("Fallback search failed:", fallbackErr);
      }
    }
  }
} catch (e) {
  console.error("SSR Error fetching model:", e);
  error = e.message;
  logDataActivity('model_fetch_error', { slug, error: e.message }, e);
}

// ---------------------------------------------------
// Stage 2: Handle missing/invalid model
// ---------------------------------------------------
if (!model || model._isPlaceholder) {
  Astro.response.status = 404;
  error = "Model not found or data unavailable.";
}

// ---------------------------------------------------
// Stage 3: Generate SEO metadata
// ---------------------------------------------------
if (model && !model._isPlaceholder) {
  pageTitle = `${model.displayName} by ${model.author} - Free AI Tools`;
  pageDescription = getBestDescription(model).substring(0, 160) + "...";
}

// ---------------------------------------------------
// Stage 4: Prepare links and tags data
// ---------------------------------------------------
const linksData = model ? JSON.stringify({
  source_url: model.links_data?.source_url || model.source_url || "",
  docs_url: model.links_data?.docs_url || model.docs_url || "",
  demo_url: model.links_data?.demo_url || model.demo_url || "",
}) : "{}";

const tagsArray = Array.isArray(model?.tags) ? model.tags : [];
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="container mx-auto px-4 py-8">
    {error ? (
      <!-- Error State -->
      <div class="max-w-4xl mx-auto text-center py-12">
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-300 px-6 py-8 rounded-lg shadow-sm">
          <h1 class="text-3xl font-bold mb-4">Model Not Found</h1>
          <p class="mb-6 text-lg">{error}</p>
          <a href="/" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-md shadow-sm transition-colors">
            ← Return Home
          </a>
        </div>
      </div>
    ) : (
      <!-- Content -->
      <article itemscope itemtype="https://schema.org/SoftwareApplication">
        
        <!-- Hero Section with comprehensive data -->
        <ModelHero
          name={model.displayName}
          description={model.displayDescription}
          author={model.author}
          likes={model.likes}
          downloads={model.downloads}
          pipelineTag={model.pipeline_tag}
          linksData={linksData}
          lastUpdated={model.last_updated}
          license={model.license}
        />

        <!-- Main Content Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mt-8">
          
          <!-- Left Column: Main Content -->
          <div class="lg:col-span-2 space-y-8">
            
            <!-- Description Section -->
            <section class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                About this Model
              </h2>
              <div class="prose lg:prose-lg max-w-none dark:prose-invert">
                <div class="whitespace-pre-wrap text-gray-700 dark:text-gray-300 leading-relaxed">
                  {model.displayDescription}
                </div>
              </div>
              
              <!-- SEO Status Indicator -->
              {model.seo_status === 'done' && model.seo_summary && (
                <div class="mt-4 p-3 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg">
                  <p class="text-sm text-green-700 dark:text-green-300">
                    ✨ Enhanced with AI-generated summary
                  </p>
                </div>
              )}
            </section>

            <!-- Tags Section -->
            {tagsArray.length > 0 && (
              <section class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Tags & Categories</h3>
                <div class="flex flex-wrap gap-2">
                  {tags Array.map((tag) => (
                    <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 rounded-full text-sm font-medium">
                      #{tag}
                    </span>
                  ))}
                </div>
              </section>
            )}

            <!-- Quick Start Guide -->
            {model.source_url && (
              <section class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-gray-800 dark:to-gray-900 rounded-xl p-6 border border-blue-100 dark:border-gray-700">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                  Quick Start
                </h3>
                <pre class="bg-gray-900 dark:bg-black text-gray-100 p-4 rounded-lg overflow-x-auto"><code># Quick Start
Visit the model repository for usage instructions:
{model.source_url}</code></pre>
              </section>
            )}

            <!-- Resources Section -->
            {model.links_data && Object.keys(model.links_data).length > 0 && (
              <section class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                  </svg>
                  Original source data and files:
                </h3>
                <ul class="space-y-2">
                  {model.links_data.source_url && (
                    <li>
                      <a 
                        href={model.links_data.source_url} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        class="flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:underline"
                      >
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                          <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                        </svg>
                        GitHub Link
                      </a>
                    </li>
                  )}
                  {model.links_data.docs_url && (
                    <li>
                      <a 
                        href={model.links_data.docs_url} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        class="flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:underline"
                      >
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                        </svg>
                        Documentation
                      </a>
                    </li>
                  )}
                  {model.links_data.demo_url && (
                    <li>
                      <a 
                        href={model.links_data.demo_url} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        class="flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:underline"
                      >
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                        </svg>
                        Live Demo
                      </a>
                    </li>
                  )}
                </ul>
              </section>
            )}

            <!-- Comments -->
            <Comments modelId={model.id} />

          </div>

          <!-- Right Column: Sidebar -->
          <div class="space-y-6">
            
            <!-- Quick Stats -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 sticky top-20">
              <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Quick Stats</h3>
              <dl class="space-y-4">
                <div>
                  <dt class="text-sm text-gray-500 dark:text-gray-400 mb-1">Downloads</dt>
                  <dd class="text-2xl font-bold text-gray-900 dark:text-white">{model.formattedDownloads}</dd>
                </div>
                <div>
                  <dt class="text-sm text-gray-500 dark:text-gray-400 mb-1">Likes</dt>
                  <dd class="text-2xl font-bold text-gray-900 dark:text-white">{model.formattedLikes}</dd>
                </div>
                <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
                  <dt class="text-sm text-gray-500 dark:text-gray-400 mb-1">License</dt>
                  <dd class="text-sm font-medium text-gray-900 dark:text-white">{model.license || "Unknown"}</dd>
                </div>
                <div>
                  <dt class="text-sm text-gray-500 dark:text-gray-400 mb-1">Last Updated</dt>
                  <dd class="text-sm font-medium text-gray-900 dark:text-white">{model.relativeTime}</dd>
                </div>
                {model.pipeline_tag && (
                  <div>
                    <dt class="text-sm text-gray-500 dark:text-gray-400 mb-1">Type</dt>
                    <dd class="text-sm font-medium text-gray-900 dark:text-white capitalize">{model.pipeline_tag.replace(/-/g, ' ')}</dd>
                  </div>
                )}
                <div>
                  <dt class="text-sm text-gray-500 dark:text-gray-400 mb-1">Link Status</dt>
                  <dd class="text-sm">
                    <span class={`px-2 py-1 rounded-full text-xs font-medium ${
                      model.link_status === 'active' ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300' :
                      model.link_status === 'dead' ? 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300' :
                      'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'
                    }`}>
                      {model.link_status || 'unknown'}
                    </span>
                  </dd>
                </div>
              </dl>
            </div>

          </div>

        </div>

        <!-- Related Models Section -->
        {relatedModels.length > 0 && (
          <section class="mt-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Related Models</h2>
            <ModelCarousel models={relatedModels} />
          </section>
        )}

      </article>
    )}
  </main>
</Layout>
