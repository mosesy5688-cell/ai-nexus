---
import Layout from '@/layouts/Layout.astro';
import allModels from '../../data/models.json';
import ModelCard from '../../components/ModelCard.astro';
import { marked } from 'marked';

export async function getStaticPaths() {
  return allModels.map((model) => {
    // CRITICAL: Slug generation must be consistent across the app.
    // We replace '/' with '--' to create a valid URL segment.
    const slug = model.id.replace(/\//g, '--');
    return {
      params: { slug },
      props: { model },
    };
  });
}

const { model } = Astro.props;

// Find related models based on tags (excluding the current model)
const relatedModels = allModels.filter(m => 
  m.id !== model.id && 
  m.tags.some(tag => model.tags.includes(tag))
).slice(0, 3); // Show up to 3 related models

const pageTitle = `${model.name} | AI-Nexus Model Details`;
const pageDescription = model.description || `Technical details, documentation, and resources for the ${model.name} AI model.`;
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="container mx-auto max-w-6xl px-4 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <!-- Main Content: README -->
      <main class="lg:col-span-2">
        <header class="mb-8 border-b border-gray-200 dark:border-gray-700 pb-6">
          <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white">{model.name}</h1>
          <p class="mt-3 text-lg text-gray-500 dark:text-gray-400">{model.description}</p>
        </header>

        {model.readme ? (
          <article class="prose prose-lg dark:prose-invert max-w-none">
            <Fragment set:html={marked.parse(model.readme)} />
          </article>
        ) : (
          <div class="text-center py-16 bg-gray-100 dark:bg-gray-800 rounded-lg">
            <p class="text-gray-500 dark:text-gray-400">No detailed documentation (README) available for this model.</p>
          </div>
        )}
      </main>

      <!-- Sidebar: Info & Links -->
      <aside class="lg:col-span-1 space-y-8">
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-bold mb-4">Model Details</h3>
          <ul class="space-y-3 text-gray-600 dark:text-gray-300">
            <li class="flex justify-between"><strong>Author:</strong> <span>{model.author || 'N/A'}</span></li>
            <li class="flex justify-between"><strong>Task:</strong> <span class="bg-blue-100 dark:bg-blue-900/50 text-blue-800 dark:text-blue-300 text-xs font-medium px-2.5 py-1 rounded-full">{model.task || 'N/A'}</span></li>
            <li class="flex justify-between"><strong>Likes:</strong> <span>{model.likes.toLocaleString()}</span></li>
            <li class="flex justify-between"><strong>Downloads:</strong> <span>{model.downloads.toLocaleString()}</span></li>
            <li class="flex justify-between"><strong>Last Updated:</strong> <span>{new Date(model.lastModified).toLocaleDateString()}</span></li>
          </ul>
        </div>

        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-bold mb-4">Links & Sources</h3>
          <div class="space-y-3">
            {model.sources.map(source => (
              <a href={source.url} target="_blank" rel="noopener noreferrer" class="flex items-center justify-between w-full text-left p-3 bg-gray-50 dark:bg-gray-700/50 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                <span>View on {source.platform}</span>
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
              </a>
            ))}
            {model.downloadUrl && (
              <a href={model.downloadUrl} target="_blank" rel="noopener noreferrer" class="flex items-center justify-between w-full text-left p-3 bg-green-50 dark:bg-green-900/50 rounded-md hover:bg-green-100 dark:hover:bg-green-800 transition-colors font-semibold text-green-700 dark:text-green-300">
                <span>Download Model</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
              </a>
            )}
          </div>
        </div>

        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-bold mb-4">Tags</h3>
          <div class="flex flex-wrap gap-2">
            {model.tags.map(tag => (
              <a href={`/explore?tag=${encodeURIComponent(tag)}`} class="bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300 text-sm font-medium px-3 py-1 rounded-full hover:bg-blue-100 dark:hover:bg-blue-900/50 transition-colors">
                {tag}
              </a>
            ))}
          </div>
        </div>
      </aside>
    </div>

    {relatedModels.length > 0 && (
      <section class="mt-20 pt-10 border-t border-gray-200 dark:border-gray-700">
        <h2 class="text-3xl font-bold text-center mb-8">Related Models</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {relatedModels.map(related => <ModelCard model={related} />)}
        </div>
      </section>
    )}
  </div>
</Layout>