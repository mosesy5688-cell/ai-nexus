---
import Layout from '@/layouts/Layout.astro';
import allModels from '@/data/models.json';
import ModelCard from '@/components/ModelCard.astro';
import { marked } from 'marked';

export async function getStaticPaths() {
    return allModels
        .filter(model => !model.is_archived)
        .map(model => ({
            params: { slug: model.id.replace(/\//g, '--') },
        }));
}

const { slug } = Astro.params;
const modelId = slug.replace(/--/g, '/');
const model = allModels.find(m => m.id === modelId && !m.is_archived);

if (!model) {
    return new Response(null, { status: 404, statusText: 'Not Found' });
}

const pageTitle = `${model.name} - AI Model Details`;
const pageDescription = model.description?.substring(0, 160) || `Details for the AI model ${model.name}.`;

let readmeContent = model.readme || '';

// Remove YAML front matter from Hugging Face READMEs, which is often enclosed in '---'
if (readmeContent.trim().startsWith('---')) {
    const endOfFrontMatter = readmeContent.indexOf('---', 3);
    if (endOfFrontMatter !== -1) {
        readmeContent = readmeContent.substring(endOfFrontMatter + 3).trim();
    }
}

const readmeHtml = readmeContent ? marked.parse(readmeContent) : '<p>No README content available.</p>';

// Find related models based on tag similarity
const relatedModels = allModels
    .filter(m => m.id !== model.id && !m.is_archived)
    .map(m => {
        const commonTags = (m.tags || []).filter(tag => (model.tags || []).includes(tag));
        return { ...m, score: commonTags.length };
    })
    .filter(m => m.score > 0)
    .sort((a, b) => b.score - a.score)
    .slice(0, 3);

const getSourcePlatformIcon = (platform) => {
    if (platform.toLowerCase().includes('hugging face')) return 'ðŸ¤—';
    if (platform.toLowerCase().includes('github')) return 'ðŸ“¦';
    if (platform.toLowerCase().includes('replicate')) return 'âš™ï¸';
    return 'ðŸ”—';
};

const formatBytes = (bytes, decimals = 2) => {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const dm = decimals < 0 ? 0 : decimals;
    const sizes = ['Bytes', 'KB', 'MB', 'GB', 'TB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return parseFloat((bytes / Math.pow(k, i)).toFixed(dm)) + ' ' + sizes[i];
};
---

<Layout title={pageTitle} description={pageDescription}>
    <div class="container mx-auto px-4 py-12">
        <div class="max-w-4xl mx-auto">
            <!-- Header Section -->
            <header class="mb-8">
                <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
                    <div>
                        <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-white mb-2">{model.name}</h1>
                        <p class="text-lg text-gray-500 dark:text-gray-400">by {model.author}</p>
                    </div>
                    {model.downloadUrl && (
                        <a href={model.downloadUrl} target="_blank" rel="noopener noreferrer" class="flex-shrink-0 inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-transform hover:scale-105">
                            Download Resource
                        </a>
                    )}
                </div>
            </header>

            <!-- Metadata Section -->
            <div class="mb-8 p-4 bg-gray-100 dark:bg-gray-800 rounded-lg">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Likes</p>
                        <p class="text-xl font-bold">{model.likes.toLocaleString()}</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Downloads</p>
                        <p class="text-xl font-bold">{model.downloads.toLocaleString()}</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Task</p>
                        <p class="text-xl font-bold capitalize">{model.task || 'N/A'}</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Last Updated</p>
                        <p class="text-xl font-bold">{new Date(model.lastModified).toLocaleDateString()}</p>
                    </div>
                </div>
            </div>

            <!-- Tags and Sources -->
            <div class="mb-8 flex flex-wrap items-start gap-4">
                <div class="flex-1">
                    <h3 class="text-lg font-semibold mb-2">Tags</h3>
                    <div class="flex flex-wrap gap-2">
                        {(model.tags || []).slice(0, 10).map(tag => (
                            <a href={`/explore?tag=${tag}`} class="px-3 py-1 text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 rounded-full hover:bg-blue-200 dark:hover:bg-blue-800">
                                {tag}
                            </a>
                        ))}
                    </div>
                </div>
                <div class="flex-shrink-0">
                    <h3 class="text-lg font-semibold mb-2">Sources</h3>
                    <div class="flex flex-col gap-2">
                        {model.sources.map(source => (
                            <a href={source.url} target="_blank" rel="noopener noreferrer" class="text-blue-600 dark:text-blue-400 hover:underline flex items-center gap-2">
                                {getSourcePlatformIcon(source.platform)} {source.platform}
                            </a>
                        ))}
                    </div>
                </div>
            </div>

            <!-- Source Specific Details -->
            {model.sources.map(source => (
                <div class="mb-8 p-4 border border-gray-200 dark:border-gray-700 rounded-lg">
                    <h3 class="text-2xl font-bold mb-4 flex items-center gap-2">
                        {getSourcePlatformIcon(source.platform)} {source.platform} Details
                    </h3>
                    {source.platform === 'GitHub' && (
                        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 text-sm">
                            <div><strong>Language:</strong> {source.language || 'N/A'}</div>
                            <div><strong>Stars:</strong> {model.likes.toLocaleString()}</div>
                            <div><strong>Forks:</strong> {(source.forks || 0).toLocaleString()}</div>
                            <div><strong>Open Issues:</strong> {(source.open_issues || 0).toLocaleString()}</div>
                            <div><strong>License:</strong> {source.license || 'N/A'}</div>
                            {source.homepage && <div><a href={source.homepage} target="_blank" class="text-blue-600 dark:text-blue-400 hover:underline"><strong>Project Homepage â†—</strong></a></div>}
                        </div>
                    )}
                    {source.platform === 'Hugging Face' && source.files && source.files.length > 0 && (
                        <div>
                            <h4 class="font-semibold mb-2">Files:</h4>
                            <ul class="text-sm space-y-1 max-h-60 overflow-y-auto">
                                {source.files.map(file => <li class="flex justify-between"><span>{file.name}</span> <span class="text-gray-500">{formatBytes(file.size)}</span></li>)}
                            </ul>
                        </div>
                    )}
                </div>
            ))}

            <!-- README Content -->
            <article class="model-readme-content py-8 border-t border-gray-200 dark:border-gray-700">
                <div class="prose prose-lg dark:prose-invert max-w-none">
                    <Fragment set:html={readmeHtml} />
                </div>
            </article>

            <!-- Related Models Section -->
            {relatedModels.length > 0 && (
                <section class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-700">
                    <h2 class="text-3xl font-bold text-center mb-8">Related Models</h2>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                        {relatedModels.map(related => (
                            <ModelCard 
                                model={related}
                                isRisingStar={related.is_rising_star}
                            />
                        ))}
                    </div>
                </section>
            )}
        </div>
    </div>
</Layout>