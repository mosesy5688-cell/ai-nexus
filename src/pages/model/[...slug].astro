---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import ModelCard from '../../components/ModelCard.astro';
import { marked } from 'marked';

const { slug } = Astro.params;
const db = Astro.locals.runtime?.env?.DB;

let model = null;
let relatedModels = [];
let error = null;

if (!slug) {
    return Astro.redirect('/404');
}

// Handle both /model/slug and /model/author/slug formats if necessary
// But usually slug is unique. Let's assume slug is the ID or slug field.
const modelId = slug; 

if (db) {
    try {
        // Try to find by slug first, then ID
        // Assuming 'slug' column exists and is unique
        let result = await db.prepare("SELECT * FROM models WHERE slug = ?").bind(modelId).first();
        
        if (!result) {
             // Fallback to ID if slug lookup fails
             result = await db.prepare("SELECT * FROM models WHERE id = ?").bind(modelId).first();
        }
        
        model = result;

        if (model) {
            // Parse JSON fields safely
            try {
                if (typeof model.tags === 'string') model.tags = JSON.parse(model.tags);
                if (typeof model.use_cases === 'string') model.use_cases = JSON.parse(model.use_cases);
            } catch (e) {
                console.warn("Failed to parse JSON fields", e);
                // Keep as is or empty array
                if (!Array.isArray(model.tags)) model.tags = [];
            }

            // Fetch related models
            if (model.tags && model.tags.length > 0) {
                const firstTag = model.tags[0];
                const { results } = await db.prepare("SELECT * FROM models WHERE tags LIKE ? AND id != ? LIMIT 3")
                    .bind(`%${firstTag}%`, model.id)
                    .all();
                relatedModels = results || [];
            }
        }
    } catch (e) {
        console.error("D1 Fetch Error:", e);
        error = e.message;
    }
}

if (!model) {
    // If D1 fails or model not found, show 404 or error
    if (error) {
         return new Response(`Database Error: ${error}`, { status: 500 });
    }
    return new Response(null, { status: 404, statusText: 'Not Found' });
}

const pageTitle = `${model.name} - AI Model Details`;
const pageDescription = model.description?.substring(0, 160) || `Details for the AI model ${model.name}.`;
const readmeHtml = marked.parse(model.description || 'No description available.');

const formatNumber = (num) => num != null ? num.toLocaleString() : 0;
---

<Layout title={pageTitle} description={pageDescription}>
    <div class="container mx-auto px-4 py-12">
        <div class="max-w-4xl mx-auto">
            <!-- Header Section -->
            <header class="mb-8">
                <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
                    <div>
                        <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-white mb-2 break-words">{model.name}</h1>
                        <p class="text-lg text-gray-500 dark:text-gray-400">by {model.author}</p>
                    </div>
                    <a href={`https://huggingface.co/${model.id}`} target="_blank" rel="noopener noreferrer" class="flex-shrink-0 inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-transform hover:scale-105">
                        View on Hugging Face
                    </a>
                </div>
            </header>

            <!-- Metadata Section -->
            <div class="mb-8 p-4 bg-gray-100 dark:bg-gray-800 rounded-lg">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Likes</p>
                        <p class="text-xl font-bold">{formatNumber(model.likes)}</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Downloads</p>
                        <p class="text-xl font-bold">{formatNumber(model.downloads)}</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Task</p>
                        <p class="text-xl font-bold capitalize">{model.pipeline_tag || 'N/A'}</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Last Updated</p>
                        <p class="text-xl font-bold">{new Date(model.last_updated).toLocaleDateString()}</p>
                    </div>
                </div>
            </div>

            <!-- Description / README Content -->
            <article class="model-readme-content py-8 border-t border-gray-200 dark:border-gray-700">
                <h2 class="text-2xl font-bold mb-4">Model Description</h2>
                <div class="prose prose-lg dark:prose-invert max-w-none">
                    <Fragment set:html={readmeHtml} />
                </div>
            </article>

            <!-- Related Models Section -->
            {relatedModels.length > 0 && (
                <section class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-700">
                    <h2 class="text-3xl font-bold text-center mb-8">Related Models</h2>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                        {relatedModels.map(related => (
                            <ModelCard 
                                model={related}
                                isRisingStar={false} 
                            />
                        ))}
                    </div>
                </section>
            )}
        </div>
    </div>
</Layout>
