---
// src/pages/keyword/[...slug].astro
import Layout from '@/layouts/Layout.astro';
import ModelCard from '@/components/ModelCard.astro';
import allModels from '@/data/models.json';
import allKeywords from '@/data/keywords.json';

export async function getStaticPaths() {
  return allKeywords.map(keyword => {
    return {
      params: { slug: keyword.slug },
      props: { keyword },
    };
  });
}

const { keyword } = Astro.props;
const { slug, title } = keyword;

const models = allModels.filter(model => 
  model.tags && model.tags.includes(slug)
);

const pageTitle = `Explore ${title} Models | Free AI Tools`;
const pageDescription = `Browse and discover ${models.length} AI models and tools tagged with '${title}'.`;
---

<Layout title={pageTitle} description={pageDescription}>
  <section id="keyword-page" class="py-20">
    <div class="container max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white">Models tagged with "{title}"</h1>
        <p class="mt-4 text-lg text-gray-500 dark:text-gray-400">{pageDescription}</p>
      </div>

      <div id="models-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {models.map(model => <ModelCard model={model} />)}
      </div>
    </div>
  </section>
</Layout>