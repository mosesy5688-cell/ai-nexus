            {filteredModels.map((model) => <ModelCard {model} />)}
        </div>
        ) : (
        <div class="text-center p-12 bg-gray-50 dark:bg-gray-800 rounded-lg shadow-inner mt-8">
            <p class="text-xl text-gray-500 dark:text-gray-400">
            No models found for "{title}".
            </p>
        </div>
        )}
    </main>
    <AdSlot width={728} height={90} label="Adsense Footer Banner" class="container max-w-7xl mx-auto px-4" />
</Layout>
