---
/**
 * Space Index Page - V15.0
 * Lists HuggingFace Spaces with dynamic R2 data loading
 * R2 Path: /cache/entities/space/
 */

export const prerender = false;

import Layout from '../../layouts/Layout.astro';

const pageTitle = 'AI Spaces - Interactive Demos | Free2AITools';
const pageDescription = 'Explore interactive AI demos and applications powered by HuggingFace Spaces.';
const canonicalUrl = 'https://free2aitools.com/space';

const categories = [
  { name: 'Gradio Apps', query: 'gradio', icon: 'üé®' },
  { name: 'Streamlit', query: 'streamlit', icon: 'üìä' },
  { name: 'Chat Demos', query: 'chat', icon: 'üí¨' },
  { name: 'Image Gen', query: 'image', icon: 'üñºÔ∏è' },
];// SSR Data Fetching (Zero-Runtime R2 Access)
let spaces = [];
let error = null;

try {
  // 1. Try env.R2_ASSETS (Production)
  const runtime = Astro.locals.runtime;
  if (runtime?.env?.R2_ASSETS) {
    const obj = await runtime.env.R2_ASSETS.get('cache/trending.json');
    if (obj) {
      const data = await obj.json();
      spaces = Array.isArray(data) ? data : (data.spaces || []);
    }
  }

  // 2. Try public CDN (Fallback)
  if (spaces.length === 0) {
    const res = await fetch('https://cdn.free2aitools.com/cache/trending.json');
    if (res.ok) {
      const data = await res.json();
      spaces = Array.isArray(data) ? data : (data.spaces || []);
    }
  }
} catch (e) {
  console.error("Spaces SSR load error:", e);
  error = "Spaces currently unavailable.";
}
---

<Layout title={pageTitle} description={pageDescription}>
  <link slot="head" rel="canonical" href={canonicalUrl} />
  
  <main class="container mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-green-100 dark:bg-green-900/30 rounded-full mb-4">
        <span class="text-2xl">üöÄ</span>
        <span class="text-sm font-semibold text-green-800 dark:text-green-200">AI SPACES</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-white mb-4">AI Spaces</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Interactive demos and applications showcasing the latest AI models.
      </p>
    </header>

    <section class="mb-12">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {categories.map((cat) => (
          <a href={`/?q=${cat.query}&type=space`}
             class="group p-6 bg-gradient-to-br from-green-50 to-emerald-50 dark:from-gray-800 dark:to-gray-900 rounded-xl hover:shadow-lg transition-all border border-green-100 dark:border-gray-700">
            <div class="text-3xl mb-2">{cat.icon}</div>
            <h3 class="font-bold text-gray-900 dark:text-white group-hover:text-green-600">{cat.name}</h3>
          </a>
        ))}
      </div>
    </section>

    <section>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Popular Spaces</h2>
        <span class="text-sm text-gray-500">{spaces.length} spaces</span>
      </div>
      
      {error ? (
        <div class="text-center py-12 text-gray-500">{error}</div>
      ) : spaces.length === 0 ? (
         <div class="text-center py-12 text-gray-500">No spaces found.</div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {spaces.slice(0, 24).map((s) => (
            <a href={`/space/${s.slug || s.id?.replace(/\//g, '--')}`} 
               class="block bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm hover:shadow-lg transition-all border border-gray-100 dark:border-gray-700">
              <div class="flex items-center gap-2 mb-3">
                <span class="px-2 py-1 bg-green-100 text-green-700 rounded text-xs">{s.sdk || 'Demo'}</span>
                <span class="text-sm text-gray-500">{s.author}</span>
              </div>
              <h3 class="font-bold text-gray-900 dark:text-white mb-2">{s.title || s.name}</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">{s.description?.substring(0, 100) || 'Interactive AI demo'}</p>
              <div class="mt-3 flex items-center gap-3 text-xs text-gray-500">
                <span>‚ù§Ô∏è {s.likes || 0}</span>
              </div>
            </a>
          ))}
        </div>
      )}
    </section>
  </main>
</Layout>
