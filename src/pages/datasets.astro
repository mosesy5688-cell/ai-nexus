---
/**
 * Datasets Listing Page (V16.5)
 */
import Layout from '../layouts/Layout.astro';
import HomeEntitySection from '../components/home/HomeEntitySection.astro';

const pageTitle = "AI Datasets Index - Free2AI";
const pageDescription = "Technical dataset index for machine learning and fine-tuning.";
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="container mx-auto px-4 py-16">
        <header class="mb-12 text-center">
            <h1 class="text-4xl font-black text-gray-900 dark:text-white mb-4 tracking-tighter uppercase">
                AI Datasets Index
            </h1>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
                Discover high-quality training data, fine-tuning sets, and evaluation benchmarks.
            </p>
        </header>

        <section class="max-w-5xl mx-auto">
            <HomeEntitySection />
        </section>

        <div class="mt-16 p-8 border border-dashed border-gray-200 dark:border-gray-800 rounded-2xl text-center">
            <h2 class="text-xl font-bold mb-4">Data Transparency</h2>
            <p class="text-gray-500 mb-6">Explore licenses, formats, and citation data across 50K+ datasets.</p>
            <a href="/search?type=dataset" class="inline-block px-8 py-3 bg-indigo-600 text-white rounded-xl font-bold hover:bg-indigo-700 transition">
                Search Datasets
            </a>
        </div>
    </main>
</Layout>
