---
/**
 * Agent Index Page - V14.5.6 Unified SSR (Catalog Style)
 * Lists AI agents with filtering and sorting
 * Zero-Runtime SSR + Robust Client Hydration
 */

export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import { fetchCatalogData, truncateListingItem } from '../../utils/catalog-fetcher.js';
import { generateEntityUrl } from '../../utils/url-utils.js';

// SSR Data Fetching (Unified with Self-Healing)
const { items: allEntities, error, source } = await fetchCatalogData('agent', Astro.locals.runtime?.env);

// V15.8: Payload Optimization
const entities = allEntities.slice(0, 100).map(truncateListingItem);

const pageTitle = 'AI Agents Catalog - Autonomous AI Systems';
const pageDescription = 'Explore autonomous AI agents like AutoGPT, BabyAGI, and more. Discover agents for coding, research, and automation.';
const canonicalUrl = 'https://free2aitools.com/agents';

// Category mapping for Agents
const categories = [
  { id: 'coding-agent', label: 'Coding Agents', icon: 'ğŸ’»' },
  { id: 'research-agent', label: 'Research Agents', icon: 'ğŸ”¬' },
  { id: 'autonomous-task', label: 'Autonomous', icon: 'ğŸ¤–' },
  { id: 'assistant', label: 'Assistants', icon: 'ğŸ‘‹' },
  { id: 'framework', label: 'Frameworks', icon: 'ğŸ—ï¸' },
];
---

<Layout title={pageTitle} description={pageDescription}>
  <link slot="head" rel="canonical" href={canonicalUrl} />
  
  <main class="container mx-auto px-4 py-8 min-h-screen flex flex-col">
    <!-- Page Header (Catalog Style) -->
    <div class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-2">
        AI Agents Catalog
      </h1>
      <p class="text-gray-600 dark:text-gray-400">
        Browse and discover autonomous AI agents and frameworks
      </p>
    </div>

    <!-- Filters & Sort Bar -->
    <div class="flex flex-wrap items-center gap-4 mb-6 p-4 bg-white dark:bg-gray-800 rounded-xl shadow-sm z-10 relative">
      <!-- Search -->
      <div class="flex-1 min-w-[200px]">
        <input 
          type="text" 
          id="entity-search" 
          placeholder="Search agents..." 
          class="w-full px-4 py-2 border border-gray-200 dark:border-gray-700 rounded-lg bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent"
        />
      </div>
      
      <!-- Category Filter -->
      <select id="category-filter" class="px-4 py-2 border border-gray-200 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white">
        <option value="">All Categories</option>
        {categories.map(cat => <option value={cat.id}>{cat.icon} {cat.label}</option>)}
      </select>
      
      <!-- Sort -->
      <select id="sort-by" class="px-4 py-2 border border-gray-200 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white">
        <option value="fni">ğŸ›¡ï¸ FNI Score</option>
        <option value="downloads">ğŸ“¥ Downloads</option>
        <option value="likes">â¤ï¸ Likes</option>
        <option value="recent">ğŸ• Recently Updated</option>
      </select>
    </div>

    <!-- Stats Bar -->
    <div class="flex items-center gap-4 mb-6 text-sm text-gray-500 dark:text-gray-400">
      <span id="results-count" class="font-medium">
         {allEntities.length > 0 ? `${allEntities.length} agents loaded from ${source.toUpperCase()}` : 'Loading agents...'}
      </span>
      <span>â€¢</span>
      <span>Updated Mon/Thu</span>
    </div>

    <!-- Debug Block -->
    {error && (
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 p-4 rounded-lg mb-6 text-sm text-red-600 dark:text-red-400">
            <strong>System Status:</strong> Failed to pre-load agents. 
            <br/>Source: {source}
            <br/>Error: {error}
        </div>
    )}

    {!error && entities.length === 0 && (
        <div class="bg-gray-50 dark:bg-gray-800/50 border border-gray-100 dark:border-gray-700 p-8 rounded-xl text-center mb-6">
            <h3 class="text-xl font-medium text-gray-900 dark:text-gray-100 mb-2">No agents currently available</h3>
             <p class="text-gray-500 dark:text-gray-400">
               Our catalog is updating. Please check back later.
            </p>
        </div>
    )}

    <!-- Grid -->
    <div id="entity-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 flex-grow min-h-[500px]">
       {entities.length > 0 ? (
           entities.slice(0, 24).map((item: any) => (
            <a href={generateEntityUrl(item, 'agent')} 
               class="entity-card p-4 bg-white dark:bg-gray-800 rounded-xl hover:shadow-lg transition-all border border-gray-100 dark:border-gray-700 block">
              <div class="flex items-center justify-between mb-2">
                 <span class="text-xs px-2 py-0.5 rounded-full bg-purple-100 dark:bg-purple-900 text-purple-700 dark:text-purple-300">Agent</span>
                 {item.fni_score > 0 && (
                    <span class="text-xs font-bold text-gray-500 dark:text-gray-400">
                       ğŸ›¡ï¸ {Math.round(item.fni_score)}
                    </span>
                  )}
              </div>
              <h3 class="font-bold text-gray-900 dark:text-white truncate">{item.name || item.id}</h3>
              {/* Sanitized SSR Description */}
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1 line-clamp-2">
                {item.description ? item.description.replace(/<[^>]*>?/gm, '') : ''}
              </p>
               <div class="flex items-center gap-3 mt-3 text-xs text-gray-400">
                    {item.downloads ? <span>ğŸ“¥ {item.downloads}</span> : null}
                    {item.likes ? <span>â¤ï¸ {item.likes}</span> : null}
                </div>
            </a>
           ))
       ) : (
          /* Skeleton Fallback */
          Array(8).fill(0).map(() => (
            <div class="animate-pulse bg-white dark:bg-gray-800 rounded-xl p-5 h-48">
              <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-3/4 mb-3"></div>
              <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-full mb-2"></div>
            </div>
          ))
       )}
    </div>

    <!-- Pagination -->
    <div class="flex justify-center mt-8 mb-12">
      <nav id="pagination" class="flex items-center gap-2"></nav>
    </div>
  </main>
</Layout>

<script define:vars={{ initialEntities: entities }}>
  window.initialEntities = initialEntities;
</script>

<script>
  import { UniversalCatalog } from '../../scripts/lib/UniversalCatalog.js';

  console.log('[Agents Page] Hydrating...', { count: window.initialEntities?.length });

  const init = () => {
      if (!window.initialEntities) return;
      
      new UniversalCatalog({ 
        initialData: window.initialEntities, 
        type: 'agent',
        gridId: 'entity-grid',
        dataUrl: 'https://cdn.free2aitools.com/entities.json'
      });
  };

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>

