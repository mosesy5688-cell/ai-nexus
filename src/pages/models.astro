---
/**
 * Models Listing Page (V16.5)
 * Placeholder that aggregates categories for a clean navigation experience.
 */
import Layout from '../layouts/Layout.astro';
import HomeEntitySection from '../components/home/HomeEntitySection.astro';

const pageTitle = "AI Models Index - Free2AI";
const pageDescription = "Browse 150,000+ open-source AI models across vision, text, and automation.";
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="container mx-auto px-4 py-16">
        <header class="mb-12 text-center">
            <h1 class="text-4xl font-black text-gray-900 dark:text-white mb-4 tracking-tighter uppercase">
                AI Models Index
            </h1>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
                Explore the world's largest open AI registry through our curated technical categories.
            </p>
        </header>

        <section class="max-w-5xl mx-auto">
            <HomeEntitySection />
        </section>

        <div class="mt-16 p-8 border border-dashed border-gray-200 dark:border-gray-800 rounded-2xl text-center">
            <h2 class="text-xl font-bold mb-4">Looking for something specific?</h2>
            <p class="text-gray-500 mb-6">Use our neural search to find models by name, author, or task.</p>
            <a href="/search" class="inline-block px-8 py-3 bg-indigo-600 text-white rounded-xl font-bold hover:bg-indigo-700 transition">
                Go to Search
            </a>
        </div>
    </main>
</Layout>
