---
/**
 * Models Listing Page (V16.5)
 * Using existing UniversalCatalog engine
 */
import Layout from '../layouts/Layout.astro';

const pageTitle = "AI Models Index - Free2AI";
const pageDescription = "Browse 150,000+ open-source AI models across vision, text, and automation.";
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="container mx-auto px-4 py-8">
        <header class="mb-12 text-center">
            <h1 class="text-4xl font-black text-gray-900 dark:text-white mb-4 tracking-tighter uppercase">
                AI Models Index
            </h1>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
                Explore the world's largest open AI registry through our curated technical categories.
            </p>
        </header>

        <div class="mb-8 flex flex-col md:flex-row gap-4 items-center">
            <input type="text" id="models-search" placeholder="Search models..." class="w-full md:w-1/2 p-3 bg-zinc-900 border border-zinc-800 rounded-lg text-white" />
            <select id="sort-by" class="p-3 bg-zinc-900 border border-zinc-800 rounded-lg text-white">
                <option value="fni">FNI Score</option>
                <option value="downloads">Downloads</option>
                <option value="likes">Likes</option>
                <option value="recent">Recent</option>
            </select>
            <div id="results-count" class="text-xs text-zinc-500 font-bold uppercase tracking-widest">--</div>
        </div>

        <div id="models-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Loading Skeletons -->
            <div class="h-64 bg-zinc-900/50 border border-zinc-800 rounded-xl animate-pulse"></div>
            <div class="h-64 bg-zinc-900/50 border border-zinc-800 rounded-xl animate-pulse"></div>
            <div class="h-64 bg-zinc-900/50 border border-zinc-800 rounded-xl animate-pulse"></div>
        </div>

        <div id="pagination" class="mt-12 flex justify-center items-center gap-4"></div>
    </main>

    <script>
        import { initModelsCatalog } from '../scripts/models-catalog.js';
        document.addEventListener('DOMContentLoaded', () => initModelsCatalog([]));
    </script>
</Layout>
