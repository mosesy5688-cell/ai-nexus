---
export const prerender = false;

/**
 * Tool Detail Page V16.8.14
 * High-Fidelity Emergency Reconstruction
 * Architecture: Unified 5-Zone High-Density Layout
 */

import Layout from '../../layouts/Layout.astro';
import EntityLayout from '../../layouts/EntityLayout.astro';
import EntityHeader from '../../components/entity/EntityHeader.astro';
import ZoneUseCases from '../../components/entity/ZoneUseCases.astro';
import UniversalCore from '../../components/entity/UniversalCore.astro';
import ModelInfoTable from '../../components/ModelInfoTable.astro';
import CiteEntity from '../../components/common/CiteEntity.astro';
import ToolDeepDive from '../../components/tool-detail/ToolDeepDive.astro';
import QuickCommands from '../../components/common/QuickCommands.astro';
import AiDisclaimer from '../../components/model-detail/AiDisclaimer.astro';
import { loadEntityStreams } from '../../utils/packet-loader.js';
import { getRouteFromId } from '../../utils/mesh-routing-core.js';
import { hydrateEntity } from '../../utils/entity-cache-reader-core.js';
import { cleanDescription } from '../../utils/model-page-helpers.ts';
import { getUseCases } from '../../utils/inference.js';

const { slug } = Astro.params;
const slugStr = Array.isArray(slug) ? slug.join('/') : (slug || '');

let tool = null;
let error = null;
let tagsArray = [];
let pageTitle = "AI Developer Tool - Free AI Tools";
let pageDescription = "Explore development tools and utilities for AI engineering.";
let meshRelations = [];
let cleanedDesc = "";

try {
  if (!slug) throw new Error("No slug/ID provided");
  // V16.5: Static Assembly Architecture
  const type = 'tool';
  const { entity, html, mesh, _meta } = await loadEntityStreams(type, slugStr, Astro.locals);
  
  if (!entity || !_meta.available) {
    Astro.response.status = 404;
    return Astro.redirect('/404?reason=tool-not-found&id=' + encodeURIComponent(slugStr));
  }

  tool = hydrateEntity(entity, type);
  tagsArray = tool?.tags || [];
  meshRelations = mesh || [];
  
  const displayToolName = tool?.name || tool?.title || tool?.canonical_name || 'Unknown Tool';
  pageTitle = `${displayToolName} - AI Tool Insights`;
  cleanedDesc = cleanDescription(tool?.description || '');
  pageDescription = tool?.seo_summary?.description || cleanedDesc || `Deep dive into ${displayToolName}.`;
  
  tool.html_readme = html || tool.html_readme || null;

} catch (e) {
  console.error("[ToolPage] Error loading tool:", e);
  error = e;
}

if (!tool && !error) {
  Astro.response.status = 404;
  return Astro.redirect('/404?source=tool-not-found');
}

const toolName = tool?.name || 'Unknown Tool';
const entityId = tool?.id || slugStr;
const modelId = entityId;
const toolId = entityId;
const displayAuthor = tool?.author || 'Independent / Community';

const placeholderImage = '/images/models/default-model.jpg';
const coverImage = tool?.image_url || placeholderImage;

const jsonld = tool ? {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": toolName,
  "description": pageDescription,
  "applicationCategory": "AI Developer Tool",
  "author": {
    "@type": "Organization",
    "name": displayAuthor
  }
} : null;

const canonicalPath = tool ? getRouteFromId(tool.id || toolId, 'tool') : undefined;
---

<EntityLayout 
  entity={tool} 
  type="tool" 
  title={pageTitle} 
  description={pageDescription}
  image={coverImage}
  jsonld={jsonld}
  canonical={canonicalPath}
>
    {/* Zone 1: Hero */}
    {tool && (
      <EntityHeader 
        slot="hero"
        name={toolName}
        entityType="tool"
        entityIcon="ðŸ› ï¸"
        entityLabel="Tool"
        verified={false} 
        author={displayAuthor}
        lastUpdated={tool.last_updated}
        description={tool.seo_summary?.description || cleanedDesc}
        sourceUrl={tool.source_url}
        entityId={toolId}
        hasImage={Boolean(tool.image_url)}
      />
    )}

    {/* Zone 2: Insights Extra */}
    {tool && (
      <div slot="insights-extra" class="mt-4 space-y-8">
         <div class="passport-block animate-slide-up" style="animation-delay: 0.2s;">
            <ModelInfoTable 
              type="tool"
              model={{
                ...tool,
                displayName: toolName
              }} 
            />
         </div>
      </div>
    )}
    
    {/* Zone 1.5: Use Cases */}
    {tool && (
      <ZoneUseCases 
        slot="use-cases" 
        usecases={getUseCases(tool)} 
      />
    )}

    {/* Zone 3: CORE (Knowledge Mesh & Relations) */}
    {tool && (
      <div slot="core-desktop" class="space-y-16">
         <div class="cite-block animate-slide-up" style="animation-delay: 0.4s;">
            <CiteEntity 
              id={toolId} 
              name={toolName} 
              author={displayAuthor} 
              url={tool.source_url} 
              type="tool" 
            />
         </div>
      </div>
    )}
  
    {tool && (
      <div slot="core-knowledge" class="pt-16 border-t border-zinc-100 dark:border-zinc-800">
         <UniversalCore entity={tool} type="tool" meshRelations={meshRelations} />
      </div>
    )}

    {tool && (
      <div slot="deep-dive" class="space-y-12">
         {/* Zone 4.1: Developer Trust & Verification */}
         <div class="space-y-8">
            <QuickCommands entity={tool} type="tool" />
            {tool.fni_score !== undefined && (
              <FNITrustPanel 
                fniScore={tool.fni_score}
                fniPercentile={tool.fni_percentile}
                fniP={tool.fni_p}
                fniV={tool.fni_v}
                fniC={tool.fni_c}
                fniU={tool.fni_u}
                fniCommentary={tool.fni_commentary}
                modelName={toolName}
                modelId={toolId}
              />
            )}
         </div>

         {/* Zone 4.2: Primary Documentation / Technical Content */}
         <div class="pt-8 border-t border-gray-100 dark:border-gray-800">
            <ToolDeepDive tool={tool} />
         </div>
      </div>
    )}

    {/* Zone 5: Community */}
    {tool && (
      <div slot="community">
          <AiDisclaimer source={tool.source} lastUpdated={tool.last_updated} />
      </div>
    )}
</EntityLayout>
