---
/**
 * Knowledge Base Article Template
 * V16.2 - CDN Enhanced with mesh integration
 */

export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import KnowledgeHeader from '../../components/knowledge/KnowledgeHeader.astro';
import KnowledgeContent from '../../components/knowledge/KnowledgeContent.astro';
import KnowledgeSidebar from '../../components/knowledge/KnowledgeSidebar.astro';
import KnowledgeRelated from '../../components/knowledge/KnowledgeRelated.astro';
import { articles } from '../../data/knowledge-articles';
import { getArticleBySlug } from '../../data/knowledge-base-config';

// Load styles
import '../../styles/knowledge.css';

// Get article slug
const { slug } = Astro.params;

// V15.5: Unified Content & Metadata Merging
const configResult = getArticleBySlug(slug || '');
const contentData = articles[slug || ''];

let article = null;
let cdnStats = null;

if (configResult && contentData) {
  article = {
    ...configResult.article,
    category: configResult.category.id,
    content: contentData.content,
    difficulty: configResult.article.difficulty || contentData.difficulty,
    effort: configResult.article.effort || contentData.effort
  };
  
  // V16.2: Fetch CDN stats (refs count, last updated)
  const R2 = Astro.locals?.runtime?.env?.R2_ASSETS;
  if (R2) {
    try {
      const cdnFile = await R2.get(`cache/knowledge/articles/${slug}.json`);
      if (cdnFile) {
        cdnStats = await cdnFile.json();
      }
    } catch (e) {
      // CDN stats not available, continue with local data
    }
  }
}

const pageTitle = article ? `${article.title} - AI Knowledge Base` : 'Article Not Found';
const pageDescription = article?.description 
  ? `${article.description}${cdnStats?.refs ? ` (Referenced by ${cdnStats.refs} models/papers)` : ''}`
  : 'This article was not found.';

// Related articles (same category)
const relatedArticles = article ? Object.entries(articles)
  .filter(([key, a]) => {
     const conf = getArticleBySlug(key);
     return conf?.category.id === article?.category && key !== slug;
  })
  .slice(0, 3) : [];

// FETCH LINKED ENTITIES (Mesh Integration)
import { fetchMeshRelations } from '../../utils/knowledge-cache-reader';
// V16: Use CANONICAL slug from config to ensure match in pre-computed relations.json
const meshId = article ? `knowledge--${article.slug}` : `knowledge--${slug}`;
const meshRelations = await fetchMeshRelations(Astro.locals, meshId);

// Group linked entities by type
const linkedEntities = meshRelations.reduce((acc, rel) => {
  const src = rel.source_id.toLowerCase().replace(/[:/]/g, '--');
  const tgt = rel.target_id.toLowerCase().replace(/[:/]/g, '--');
  const otherId = src === meshId ? tgt : src;
  
  if (!otherId || otherId === meshId) return acc;
  
  let type = 'Other';
  let path = '#';
  let name = otherId;

  if (otherId.startsWith('hf-model--') || otherId.includes('--')) {
    type = 'Model';
    const cleanId = otherId.replace('hf-model--', '');
    path = `/model/${cleanId.replace(/--/g, '/')}`;
    name = cleanId.split('--').pop() || cleanId;
  } else if (otherId.startsWith('report--')) {
    type = 'Report';
    const cleanId = otherId.replace('report--', '');
    path = `/reports/${cleanId}`;
    name = cleanId.replace(/-/g, ' ');
  } else if (otherId.startsWith('dataset--')) {
    type = 'Dataset';
    const cleanId = otherId.replace('dataset--', '');
    path = `/dataset/${cleanId}`;
    name = cleanId;
  } else if (otherId.startsWith('arxiv--') || otherId.startsWith('paper--')) {
    type = 'Paper';
    const cleanId = otherId.replace(/^(arxiv|paper)--/, '');
    path = `/paper/${cleanId}`;
    name = cleanId;
  }

  if (!acc[type]) acc[type] = [];
  // De-duplicate in tabular view
  if (!acc[type].find(e => e.id === otherId)) {
    acc[type].push({ id: otherId, name, path });
  }
  return acc;
}, {} as Record<string, any[]>);

import NeuralGraphExplorer from '../../components/NeuralGraphExplorer.astro';
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="article-container">
    {article ? (
      <>
        <KnowledgeHeader 
          title={article.title} 
          description={article.description} 
          category={article.category} 
          difficulty={article.difficulty}
          effort={article.effort}
          refs={cdnStats?.refs || 0}
        />

        <KnowledgeContent content={article.content} />

        <div class="mt-12">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-2">
            <span class="text-indigo-600">üï∏Ô∏è</span> Knowledge Mesh
          </h2>
          <div class="rounded-2xl border border-gray-100 dark:border-gray-700 bg-white dark:bg-gray-800/50 shadow-sm overflow-hidden">
            <NeuralGraphExplorer currentModelId={meshId} type="concept" />
          </div>
        </div>

        <!-- Linked Entities (Tabular View) -->
        {Object.keys(linkedEntities).length > 0 && (
          <div class="mt-12 p-8 bg-indigo-50/50 dark:bg-indigo-900/10 rounded-3xl border border-indigo-100 dark:border-indigo-900/30">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Grounded Entities</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              {Object.entries(linkedEntities).map(([type, entities]) => (
                <div>
                  <h3 class="text-xs font-bold text-indigo-600 uppercase tracking-widest mb-4 flex items-center gap-2">
                    <span>{type === 'Model' ? 'ü§ñ' : type === 'Report' ? 'üìä' : 'üìÑ'}</span>
                    {type}s
                  </h3>
                  <ul class="space-y-3">
                    {entities.map(ent => (
                      <li>
                        <a href={ent.path} class="group flex items-center justify-between p-3 bg-white dark:bg-gray-800 rounded-xl border border-gray-100 dark:border-gray-700 hover:border-indigo-500 transition-all shadow-sm">
                          <span class="text-sm font-semibold text-gray-700 dark:text-gray-300 group-hover:text-indigo-600 transition-colors uppercase">{ent.name}</span>
                          <span class="text-xs text-gray-400">View Details ‚Üí</span>
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        )}

        {relatedArticles.length > 0 && (
          <KnowledgeRelated articles={relatedArticles} />
        )}

        <KnowledgeSidebar slug={slug || ''} />

        <!-- CTA -->
        <div class="mt-12 flex flex-col sm:flex-row items-center justify-between gap-6 p-8 bg-gray-50 dark:bg-gray-800/40 rounded-3xl border border-gray-100 dark:border-gray-700">
          <div class="flex items-center gap-4">
             <button id="mark-read-btn" class="px-6 py-3 bg-white dark:bg-gray-900 text-gray-700 dark:text-gray-300 font-bold rounded-2xl border border-gray-200 dark:border-gray-600 hover:border-emerald-500 hover:text-emerald-600 transition-all shadow-sm">
                Mark as Read
             </button>
             <span id="read-status" class="hidden text-emerald-600 font-bold flex items-center gap-1">
                <span>‚úì</span> Read
             </span>
          </div>
          <div class="flex gap-4">
            <a href="/ranking" class="px-6 py-3 bg-indigo-600 text-white font-bold rounded-2xl hover:bg-indigo-700 transition-all shadow-lg shadow-indigo-500/20">View Rankings</a>
            <a href="/models" class="px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white font-bold rounded-2xl hover:bg-gray-300 dark:hover:bg-gray-600 transition-all">Browse Models</a>
          </div>
        </div>
      </>
    ) : (
      <div class="min-h-[60vh] flex flex-col items-center justify-center text-center">
        <div class="text-6xl mb-6">üîç</div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Article Not Found</h1>
        <p class="text-gray-600 dark:text-gray-400 mb-8 max-w-md">The article you're looking for doesn't exist or has been moved.</p>
        <a href="/knowledge" class="px-8 py-3 bg-indigo-600 text-white font-bold rounded-2xl shadow-lg">Back to Knowledge Base</a>
      </div>
    )}
  </div>
</Layout>

<script is:inline define:vars={{ slug }}>
  (function() {
      const STORAGE_KEY = 'f2ai_kb_progress';
      const btn = document.getElementById('mark-read-btn');
      const status = document.getElementById('read-status');
      
      if (!btn || !slug) return;

      // Load initial state
      let progress = {};
      try {
          progress = JSON.parse(localStorage.getItem(STORAGE_KEY) || '{}');
      } catch (e) {}

      if (progress[slug]) {
          showRead();
      }

      btn.addEventListener('click', () => {
          progress[slug] = true;
          localStorage.setItem(STORAGE_KEY, JSON.stringify(progress));
          showRead();
          
          // Trigger custom event for other components (like index page)
          window.dispatchEvent(new CustomEvent('kb-progress-updated', { detail: { slug, read: true } }));
      });

      function showRead() {
          btn.classList.add('hidden');
          status.classList.remove('hidden');
      }
  })();
</script>
