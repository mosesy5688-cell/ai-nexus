---
/**
 * Dataset Index Page - V14.5.6 Unified SSR (Catalog Style)
 * Lists AI datasets with filtering and sorting
 * Zero-Runtime SSR
 */

export const prerender = false;

import Layout from '../../layouts/Layout.astro';

// SSR Data Fetching (Zero-Runtime R2 Access)
let entities: any[] = [];
let error = null;

try {
  // 1. Try env.R2_ASSETS (SSOT: trending.json)
  // 1. Try env.R2_ASSETS (SSOT: trending.json)
  const runtime = Astro.locals.runtime;
  if (runtime?.env?.R2_ASSETS) {
      const r2 = runtime.env.R2_ASSETS;
      const trendingFile = await r2.get('cache/trending.json');
      if (trendingFile) {
          const data = await trendingFile.json();
          const datasetsData = data.datasets || [];
          const modelsData = data.models || (Array.isArray(data) ? data : []);
          const allData = [...datasetsData, ...modelsData];
          // Standardized Filter (Spec Art 7)
          entities = allData.filter((i:any) => i.type === 'dataset' || i.id?.includes('dataset'));
      }
  }

  // 2. Fallback to CDN
  if (entities.length === 0) {
      const res = await fetch('https://cdn.free2aitools.com/cache/trending.json');
      if (res.ok) {
          const data = await res.json();
          const datasetsData = data.datasets || [];
          const modelsData = data.models || (Array.isArray(data) ? data : []);
          const allData = [...datasetsData, ...modelsData];
          entities = allData.filter((i:any) => i.type === 'dataset' || i.id?.includes('dataset'));
      }
  }
} catch (e) {
  console.error("Datasets SSR Load Error:", e);
  error = 'Failed to load datasets';
}

const pageTitle = 'AI Datasets Catalog - Open Source Data';
const pageDescription = 'Explore thousands of AI and machine learning datasets. Find training data for NLP, computer vision, and more.';
const canonicalUrl = 'https://free2aitools.com/datasets';

// Category mapping for Datasets
const categories = [
  { id: 'nlp', label: 'NLP', icon: 'ğŸ’¬' },
  { id: 'vision', label: 'Computer Vision', icon: 'ğŸ‘ï¸' },
  { id: 'audio', label: 'Audio', icon: 'ğŸµ' },
  { id: 'tabular', label: 'Tabular', icon: 'ğŸ“ˆ' },
];
---

<Layout title={pageTitle} description={pageDescription}>
  <link slot="head" rel="canonical" href={canonicalUrl} />
  
  <main class="container mx-auto px-4 py-8">
    <!-- Page Header (Catalog Style) -->
    <div class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-2">
        AI Datasets Catalog
      </h1>
      <p class="text-gray-600 dark:text-gray-400">
        Browse and discover open-source datasets for training AI models
      </p>
    </div>

    <!-- Filters & Sort Bar -->
    <div class="flex flex-wrap items-center gap-4 mb-6 p-4 bg-white dark:bg-gray-800 rounded-xl shadow-sm">
      <!-- Search -->
      <div class="flex-1 min-w-[200px]">
        <input 
          type="text" 
          id="entity-search" 
          placeholder="Search datasets..." 
          class="w-full px-4 py-2 border border-gray-200 dark:border-gray-700 rounded-lg bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        />
      </div>
      
      <!-- Category Filter -->
      <select id="category-filter" class="px-4 py-2 border border-gray-200 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white">
        <option value="">All Categories</option>
        {categories.map(cat => <option value={cat.id}>{cat.icon} {cat.label}</option>)}
      </select>
      
      <!-- Sort -->
      <select id="sort-by" class="px-4 py-2 border border-gray-200 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white">
        <option value="downloads">ğŸ“¥ Downloads</option>
        <option value="likes">â¤ï¸ Likes</option>
        <option value="recent">ğŸ• Recently Updated</option>
      </select>
    </div>

    <!-- Stats Bar -->
    <div class="flex items-center gap-4 mb-6 text-sm text-gray-500 dark:text-gray-400">
      <span id="results-count">Loading...</span>
    </div>

    <!-- Grid -->
    <div id="entity-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
       {entities.length > 0 ? (
           entities.slice(0, 24).map((item: any) => (
            <a href={`/dataset/${item.slug || item.id}`} 
               class="p-4 bg-white dark:bg-gray-800 rounded-xl hover:shadow-lg transition-all border border-gray-100 dark:border-gray-700">
              <div class="flex items-center justify-between mb-2">
                 <span class="text-xs px-2 py-0.5 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300">Dataset</span>
              </div>
              <h3 class="font-bold text-gray-900 dark:text-white truncate">{item.name || item.id}</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1 line-clamp-2">{item.description || ''}</p>
            </a>
           ))
       ) : (
          /* Skeleton Fallback */
          Array(8).fill(0).map(() => (
            <div class="animate-pulse bg-white dark:bg-gray-800 rounded-xl p-5 h-48">
              <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-3/4 mb-3"></div>
              <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-full mb-2"></div>
            </div>
          ))
       )}
    </div>

    <!-- Pagination -->
    <div class="flex justify-center mt-8">
      <nav id="pagination" class="flex items-center gap-2"></nav>
    </div>
  </main>
</Layout>

<script define:vars={{ initialEntities: entities }}>
  // Inline Client Logic (Self-Contained for Robustness)
  const allEntities = initialEntities || [];
  let currentEntities = [...allEntities];
  const pageSize = 24;
  let currentPage = 1;

  document.addEventListener('DOMContentLoaded', () => {
     const searchInput = document.getElementById('entity-search');
     const categoryFilter = document.getElementById('category-filter');
     const sortBy = document.getElementById('sort-by');
     const grid = document.getElementById('entity-grid');
     const countSpan = document.getElementById('results-count');
     const pagination = document.getElementById('pagination');

     function render() {
        if (!grid) return;
        const start = (currentPage - 1) * pageSize;
        const pageItems = currentEntities.slice(start, start + pageSize);
        
        if (pageItems.length === 0) {
             grid.innerHTML = '<div class="col-span-full text-center py-8 text-gray-500">No datasets found.</div>';
             if(countSpan) countSpan.textContent = '0 datasets';
             if(pagination) pagination.innerHTML = '';
             return;
        }

        if(countSpan) countSpan.textContent = `${currentEntities.length} datasets available`;

        grid.innerHTML = pageItems.map(item => `
            <a href="/dataset/${item.slug || item.id}" 
               class="p-4 bg-white dark:bg-gray-800 rounded-xl hover:shadow-lg transition-all border border-gray-100 dark:border-gray-700">
               <div class="flex items-center justify-between mb-2">
                 <span class="text-xs px-2 py-0.5 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300">Dataset</span>
              </div>
              <h3 class="font-bold text-gray-900 dark:text-white truncate">${item.name || item.id}</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1 line-clamp-2">${item.description || ''}</p>
            </a>
        `).join('');

        // Pagination Simplified
        const totalPages = Math.ceil(currentEntities.length / pageSize);
        if (totalPages > 1) {
            pagination.innerHTML = `
                <button class="px-3 py-1 rounded border" ${currentPage===1?'disabled':''} onclick="window.changePage(${currentPage-1})">Prev</button>
                <span class="px-2">Page ${currentPage} of ${totalPages}</span>
                <button class="px-3 py-1 rounded border" ${currentPage===totalPages?'disabled':''} onclick="window.changePage(${currentPage+1})">Next</button>
            `;
        } else {
            pagination.innerHTML = '';
        }
     }

     window.changePage = (p) => {
        currentPage = p;
        render();
        window.scrollTo(0,0);
     };

     function applyFilters() {
        const query = searchInput?.value.toLowerCase() || '';
        const cat = categoryFilter?.value || '';
        const sort = sortBy?.value || 'downloads';

        currentEntities = allEntities.filter(e => {
            const matchQ = !query || e.name?.toLowerCase().includes(query) || e.description?.toLowerCase().includes(query);
            const matchC = !cat || e.tags?.includes(cat); 
            return matchQ && matchC;
        });

        // Sort
        currentEntities.sort((a,b) => {
            if (sort === 'likes') return (b.likes||0) - (a.likes||0);
            if (sort === 'recent') return new Date(b.lastModified||0) - new Date(a.lastModified||0);
            return (b.downloads||0) - (a.downloads||0); // default downloads
        });

        currentPage = 1;
        render();
     }

     searchInput?.addEventListener('input', () => setTimeout(applyFilters, 300));
     categoryFilter?.addEventListener('change', applyFilters);
     sortBy?.addEventListener('change', applyFilters);
  });
</script>
