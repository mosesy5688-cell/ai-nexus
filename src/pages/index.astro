---
import Layout from '@/layouts/Layout.astro';
import allModels from '../data/models.json';
import ModelCard from '../components/ModelCard.astro';
import { initializeSearch } from '../scripts/search.js';
import { algoliaConfig } from '../config';

const url = Astro.url;
const activeTag = url.searchParams.get('tag');
const initialQuery = url.searchParams.get('q') || '';

let pageTitle = "Free AI Tools: Your Hub for Open-Source AI";
let pageDescription = "Discover, explore, and stay updated with the latest open-source AI models, tools, and research. Your gateway to the world of open AI.";

// Fetch keywords dynamically. In a real app, this might come from an API or a more robust data source.
// For now, we'll derive it from the models data for simplicity, or use a dedicated keywords file.
import allKeywords from '../data/keywords.json';

// For server-side rendering (SSR) of initial models
const ITEMS_PER_PAGE = 24;
let initialModels = [];
// Only show initial models if there's no search query or tag filter
if (!activeTag && !initialQuery) {
    initialModels = allModels.slice(0, ITEMS_PER_PAGE);
}

// Dynamically update page title for SEO if there's a filter or query
if (activeTag) {
    const keyword = allKeywords.find(k => k.slug === activeTag);
    pageTitle = `Models tagged with '${keyword ? keyword.title : activeTag}'`;
    pageDescription = `Find AI models and tools related to ${keyword ? keyword.title : activeTag}.`;
}
if (initialQuery) {
    pageTitle = `Search results for '${initialQuery}'`;
}
---

<Layout title={pageTitle} description={pageDescription}>
    <div class="container mx-auto px-4 py-12">
        <!-- Main Page Header -->
        <header class="text-center mb-12">
            <h1 class="text-5xl font-extrabold text-gray-900 dark:text-white">Discover the World of Open Source AI</h1>
            <p class="mt-4 text-xl text-gray-500 dark:text-gray-400 max-w-3xl mx-auto">
                Your single destination to search, filter, and explore the latest open-source AI models.
            </p>
        </header>

        <!-- Search and Filter Section -->
        <div class="mb-8 flex flex-col md:flex-row gap-4 items-center sticky top-[65px] bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm py-4 z-30 max-w-4xl mx-auto w-full">
            <div id="search-container" class="w-full">
                <form id="search-form" class="w-full" onsubmit="return false;">
                    <div class="relative">
                        <input
                            type="search"
                            id="search-box"
                            name="q"
                            placeholder="Search for models, e.g., 'llama', 'image generation'..."
                            class="w-full p-4 pl-12 text-lg border border-gray-300 dark:border-gray-600 rounded-full bg-white dark:bg-gray-800 focus:ring-blue-500 focus:border-blue-500 shadow-lg"
                            aria-label="Search AI Models"
                            value={initialQuery}
                        />
                        <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                            <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                        </div>
                    </div>
                </form>
            </div>
            <div class="flex-shrink-0">
                <select id="sort-by" class="p-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 focus:ring-blue-500 focus:border-blue-500">
                    <option value="default">Sort by Relevance</option>
                    <option value="likes">Sort by Likes</option>
                    <option value="downloads">Sort by Downloads</option>
                    <option value="recent">Sort by Recent</option>
                </select>
            </div>
        </div>

        <!-- Keywords/Tags Cloud -->
        <div class="mb-10 text-center" id="tags-container">
            <div class="flex flex-wrap justify-center gap-2">
                {allKeywords.slice(0, 24).map(keyword => (
                    <button data-tag={keyword.slug} class:list={[
                        "tag-link px-4 py-2 text-sm font-medium rounded-full transition-colors cursor-pointer",
                        activeTag === keyword.slug
                            ? "bg-blue-600 text-white"
                            : "bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 hover:bg-blue-500 hover:text-white"
                    ]}>
                        {keyword.title}
                    </button>
                ))}
            </div>
        </div>

        <!-- Models Grid -->
        <div id="models-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {initialModels.map(model => (
                <ModelCard model={model} isRisingStar={model.is_rising_star} />
            ))}
        </div>
        <div id="no-results" class="text-center py-16 hidden">
            <p class="text-2xl font-semibold text-gray-700 dark:text-gray-200">No models found.</p>
            <p class="text-gray-500 dark:text-gray-400 mt-2">Try adjusting your search or filter criteria.</p>
        </div>
        <div id="loading-more" class="text-center py-8 hidden col-span-full">
            <p class="text-gray-500">Loading more models...</p>
        </div>
    </div>

    <!-- Algolia Search Client -->
    <script src="https://cdn.jsdelivr.net/npm/algoliasearch@4/dist/algoliasearch-lite.umd.js"></script>
    <script type="module" define:vars={{ algoliaConfig, initialQuery, activeTag }}>
        import { initializeSearch } from '@/scripts/search.js';

        document.addEventListener('DOMContentLoaded', () => {
            initializeSearch({
                algoliaAppId: algoliaConfig.appId,
                algoliaSearchKey: algoliaConfig.searchKey,
            algoliaIndices: algoliaConfig.indices,
                initialQuery,
                activeTag
            });
        });
    </script>
</Layout>
