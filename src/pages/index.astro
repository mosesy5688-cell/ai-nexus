---
// This is the root index page (/) which serves as the main entry point
// and displays the list of core keywords for navigation.
import Layout from '../layouts/Layout.astro'; // Relative path (Stable)
import { CORE_KEYWORDS } from '../content/config.ts'; // FIX: Revert to relative path for TS file

// Note: The logic from the old src/pages/[lang]/index.astro is moved here.
---
<Layout title="AI Nexus - Explore Core Models & Tools">
  <main class="max-w-4xl mx-auto px-4 py-16">
    <header class="text-center mb-12">
      <h1 class="text-5xl font-extrabold text-gray-900 dark:text-gray-100 mb-4">
        Discover AI Models and Tools
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400">
        Browse core keywords to find the best open-source models for your needs.
      </p>
    </header>
    
    <div class="bg-white dark:bg-gray-800 shadow-xl rounded-2xl p-6 sm:p-10">
      <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-6 border-b pb-3 border-gray-200 dark:border-gray-700">
        Core Keywords
      </h2>
      
      <ul class="space-y-4">
        {CORE_KEYWORDS.map(keyword => (
          <li class="group">
            <a 
              href={`/${keyword.slug}`} 
              class="block p-4 rounded-lg bg-gray-50 hover:bg-blue-50 dark:bg-gray-700 dark:hover:bg-blue-900/50 transition duration-150 ease-in-out border border-gray-100 dark:border-gray-600"
            >
              <div class="flex items-center justify-between">
                <span class="text-lg font-medium text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400">
                  {keyword.title}
                </span>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-transform duration-150 ease-in-out transform group-hover:translate-x-1"><path d="m9 18 6-6-6-6"/></svg>
              </div>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                {keyword.description}
              </p>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </main>
</Layout>
