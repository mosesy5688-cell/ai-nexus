---
// src/pages/index.astro
// Constitution V5.1.2 Entity-First Architecture - Homepage (Refactored)
// V10.0: UX Strategy V2.0 Entry Layer - Simplified navigation

// Core imports
import Layout from '../layouts/Layout.astro';
// EntityTabs removed per UX Strategy V2.0: Entry Layer simplified navigation

// Components
import HomeHero from '../components/home/HomeHero.astro';
import HomeSearch from '../components/home/HomeSearch.astro';
import HomeDailyBanner from '../components/home/HomeDailyBanner.astro';
import HomeSkeleton from '../components/home/HomeSkeleton.astro';
import HomeEntitySection from '../components/home/HomeEntitySection.astro';
import OnboardingTour from '../components/common/OnboardingTour.astro';
import TrendChart from '../components/charts/TrendChart.astro';

// V4.3.2 Constitution Core Requirements
import { buildIndexSEO } from '../utils/seo-schema.js';

// URL parameters
const url = Astro.url;
const initialQuery = url.searchParams.get('q') || '';
const initialTag = url.searchParams.get('tag') || '';

// SEO - Constitution Required
const pageTitle = "Free AI Tools ‚Äì Explore the Entire Open-Source AI Ecosystem";
const pageDescription = "Discover open-source AI models, datasets, papers, benchmarks, and agents. Updated daily with UMID-verified data.";

// Build JSON-LD (Constitution SEO requirement)
const seoSchema = buildIndexSEO();
---

<Layout title={pageTitle} description={pageDescription} jsonld={seoSchema}>

    <div 
        id="home-container" 
        data-initial-query={initialQuery} 
        data-initial-tag={initialTag}
    >
        <HomeHero />
        
        <!-- V10.0 UX Strategy V2.0: EntityTabs removed from Entry Layer -->
        <!-- Design principle: "Subtract complexity: hide filters, show results" -->

        <!-- V3.1 Phase 6: Search FIRST in flow -->
        <HomeSearch initialQuery={initialQuery} />

        <HomeDailyBanner />

        <!-- V9.0: Search Results Grid (appears immediately after search) -->
        <div id="models-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 hidden mb-8">
            <!-- Populated by search.js -->
        </div>
        <div id="no-results" class="text-center py-16 hidden">
            <p class="text-2xl font-semibold text-gray-700 dark:text-gray-200">No models found.</p>
            <p class="text-gray-500 dark:text-gray-400 mt-2">Try a different search term.</p>
        </div>

        <!-- V3.1 Phase 6: Categories after Search (hide when searching) -->
        <section id="category-section" class="mb-8 mt-6 hide-on-search">
            <h2 class="text-xl md:text-2xl font-bold text-center mb-4 text-gray-900 dark:text-white">
                Explore AI Models by Category
            </h2>
            <!-- V6.2: Mobile horizontal scroll, desktop grid -->
            <div class="flex md:grid md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 overflow-x-auto md:overflow-visible pb-4 md:pb-0 snap-x snap-mandatory scroll-smooth -mx-4 px-4 md:mx-0 md:px-0">
                <!-- Hero Card: Text Generation -->
                <a href="/text-generation" class="category-card group relative overflow-hidden rounded-2xl p-6 md:p-8 col-span-1 md:col-span-2 lg:col-span-2 transition-all duration-300 hover:scale-[1.02] hover:shadow-glow snap-start flex-shrink-0 min-w-[280px] md:min-w-0 bg-white/50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 glass-effect" data-category="text-generation">
                    <div class="text-5xl mb-4 transition-transform group-hover:scale-110">üí¨</div>
                    <h3 class="text-2xl font-bold text-theme-primary mb-2">Text Generation & Content Creation</h3>
                    <p class="text-theme-secondary mb-4">ChatGPT alternatives, code assistants, content writing, summarization</p>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-indigo-600 dark:text-indigo-400 font-medium group-hover:underline">Explore models ‚Üí</span>
                        <span class="category-count text-xs px-2 py-1 bg-indigo-100 dark:bg-indigo-900/50 text-indigo-700 dark:text-indigo-300 rounded-full" data-category="text-generation">Loading...</span>
                    </div>
                </a>
                
                <!-- Knowledge Retrieval -->
                <a href="/knowledge-retrieval" class="category-card group relative overflow-hidden rounded-2xl p-5 md:p-6 transition-all duration-300 hover:scale-[1.02] hover:shadow-glow snap-start flex-shrink-0 min-w-[200px] md:min-w-0 bg-white/50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 glass-effect" data-category="knowledge-retrieval">
                    <div class="text-4xl mb-3 transition-transform group-hover:scale-110">üîç</div>
                    <h3 class="text-lg font-bold text-theme-primary mb-2">Knowledge Retrieval</h3>
                    <p class="text-sm text-theme-secondary mb-3 line-clamp-2">RAG, embeddings, Q&A systems</p>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-emerald-600 dark:text-emerald-400 font-medium group-hover:underline">Explore ‚Üí</span>
                        <span class="category-count text-xs px-2 py-1 bg-emerald-100 dark:bg-emerald-900/50 text-emerald-700 dark:text-emerald-300 rounded-full" data-category="knowledge-retrieval">Loading...</span>
                    </div>
                </a>
                
                <!-- Vision & Multimedia -->
                <a href="/vision-multimedia" class="category-card group relative overflow-hidden rounded-2xl p-5 md:p-6 transition-all duration-300 hover:scale-[1.02] hover:shadow-glow snap-start flex-shrink-0 min-w-[200px] md:min-w-0 bg-white/50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 glass-effect" data-category="vision-multimedia">
                    <div class="text-4xl mb-3 transition-transform group-hover:scale-110">üé®</div>
                    <h3 class="text-lg font-bold text-theme-primary mb-2">Vision & Multimedia</h3>
                    <p class="text-sm text-theme-secondary mb-3 line-clamp-2">Image generation, video, speech</p>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-amber-600 dark:text-amber-400 font-medium group-hover:underline">Explore ‚Üí</span>
                        <span class="category-count text-xs px-2 py-1 bg-amber-100 dark:bg-amber-900/50 text-amber-700 dark:text-amber-300 rounded-full" data-category="vision-multimedia">Loading...</span>
                    </div>
                </a>
                
                <!-- Automation -->
                <a href="/automation-workflow" class="category-card group relative overflow-hidden rounded-2xl p-5 md:p-6 transition-all duration-300 hover:scale-[1.02] hover:shadow-glow snap-start flex-shrink-0 min-w-[200px] md:min-w-0 bg-white/50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 glass-effect" data-category="automation-workflow">
                    <div class="text-4xl mb-3 transition-transform group-hover:scale-110">‚ö°</div>
                    <h3 class="text-lg font-bold text-theme-primary mb-2">Automation</h3>
                    <p class="text-sm text-theme-secondary mb-3 line-clamp-2">AI agents, workflow tools</p>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-violet-600 dark:text-violet-400 font-medium group-hover:underline">Explore ‚Üí</span>
                        <span class="category-count text-xs px-2 py-1 bg-violet-100 dark:bg-violet-900/50 text-violet-700 dark:text-violet-300 rounded-full" data-category="automation-workflow">Loading...</span>
                    </div>
                </a>
                
                <!-- Infrastructure -->
                <a href="/infrastructure-ops" class="category-card group relative overflow-hidden rounded-2xl p-5 md:p-6 transition-all duration-300 hover:scale-[1.02] hover:shadow-glow snap-start flex-shrink-0 min-w-[200px] md:min-w-0 bg-white/50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 glass-effect" data-category="infrastructure-ops">
                    <div class="text-4xl mb-3 transition-transform group-hover:scale-110">üîß</div>
                    <h3 class="text-lg font-bold text-theme-primary mb-2">Infrastructure</h3>
                    <p class="text-sm text-theme-secondary mb-3 line-clamp-2">Fine-tuning, optimization</p>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-slate-600 dark:text-slate-400 font-medium group-hover:underline">Explore ‚Üí</span>
                        <span class="category-count text-xs px-2 py-1 bg-slate-100 dark:bg-slate-900/50 text-slate-700 dark:text-slate-300 rounded-full" data-category="infrastructure-ops">Loading...</span>
                    </div>
                </a>
            </div>
        </section>

        <!-- Static Content Container (hide when searching) -->
        <div id="static-content-container" class="hide-on-search">
            
            <!-- V13: Top Picks Section (FNI-ranked) -->
            <section class="mb-16">
                <div class="text-center mb-10">
                    <h2 class="text-3xl md:text-5xl font-black text-gradient pb-2">‚≠ê Top Picks</h2>
                    <p class="text-theme-secondary mt-2 font-medium">Precision Intelligence, Ranked by Free2AI Nexus Index (FNI)</p>
                </div>
                
                <!-- Loading State with Skeletons -->
                <div class="glass-effect rounded-3xl p-4 md:p-8 border border-gray-100 dark:border-gray-800 bg-white/30 dark:bg-gray-900/30">
                    <HomeSkeleton count={12} />
                </div>
                
                <!-- Error State -->
                <div id="hot-models-error" class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
                    <strong class="font-bold">Error:</strong>
                    <span class="block sm:inline" id="hot-models-error-msg"></span>
                </div>
                
                <!-- Top Picks Grid (FNI-sorted models) -->
                <div id="hot-models-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 hidden">
                    <!-- Populated by client-side JS with FNI-sorted models -->
                </div>

                <!-- V16.35: Minimalist Ecosystem Pulse (Professional Inline) -->
                <div class="mt-8 border-t border-gray-100 dark:border-gray-800 pt-8 hidden" id="home-ecosystem-pulse">
                    <div class="max-w-4xl mx-auto">
                        <TrendChart minimalist={true} title="Ecosystem Pulse" height="180px" />
                        <p class="text-[10px] text-center text-gray-400 uppercase tracking-[0.2em] mt-2">
                           Real-time knowledge mesh indexing active
                        </p>
                    </div>
                </div>

                <!-- V16.2: Link to Ranking Hub -->
                <div class="mt-12 text-center">
                    <a href="/ranking" class="inline-flex items-center gap-2 px-8 py-4 rounded-2xl bg-indigo-600 hover:bg-indigo-700 text-white font-black transition-all shadow-glow hover:scale-105 tracking-widest uppercase text-sm">
                        View Technical Index <span class="text-xl">‚Üí</span>
                    </a>
                </div>
            </section>

            <!-- V15: Entity Type Showcase (All 6 Types) -->
            <HomeEntitySection />

            <!-- V6.0: Old Explore by Category removed - replaced by new 5-card layout above -->
        </div>

        <!-- V9.0: Search results moved above Category section for better visibility -->
    </div>

    <script>
        import { loadHotModels, loadDailyReport } from '../scripts/home-client.js';

        // V6.2: Load category model counts from category_stats API
        async function loadCategoryCounts() {
            try {
                const res = await fetch('https://cdn.free2aitools.com/cache/category_stats.json');
                if (!res.ok) throw new Error('Failed to fetch category stats');
                const data = await res.json();
                const categories = data.categories || [];

                for (const cat of categories) {
                    const catId = cat.id || cat.category;
                    if (!catId) continue;
                    const badges = document.querySelectorAll(`.category-count[data-category="${catId}"]`);
                    badges.forEach(badge => {
                        badge.textContent = cat.count > 0 ? `${cat.count.toLocaleString()} models` : 'Browse';
                    });
                }
            } catch (e) {
                console.warn('[Homepage] Failed to load category counts:', e);
                // Fallback: show Browse for all
                document.querySelectorAll('.category-count').forEach(badge => {
                    badge.textContent = 'Browse';
                });
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            // Parse URL parameters from the client side
            const urlParams = new URLSearchParams(window.location.search);
            const initialQuery = urlParams.get('q') || '';
            const initialTag = urlParams.get('tag') || '';
            
            // V14.5: Global Search initialization is handled by HomeSearch component
            // Legacy search.js initializeSearch removed per V16.6 Unification mandate

            // Load hot models if no search query or tag
            if (!initialQuery && !initialTag) {
                loadHotModels().then(() => {
                    // Show pulse after models load to maintain layout flow
                    document.getElementById('home-ecosystem-pulse')?.classList.remove('hidden');
                });
            }

            // V4.9.1 Step 2.3: Load Daily Report Banner
            loadDailyReport();

            // V6.2: Load category counts
            loadCategoryCounts();
        });
    </script>
</Layout>
