---
// src/pages/index.astro
// Constitution V5.1.2 Entity-First Architecture - Homepage (Refactored)

// Core imports
import Layout from '../layouts/Layout.astro';
import CategoryGroup from '../components/CategoryGroup.astro';
import EntityTabs from '../components/entity/EntityTabs.astro';
import allCategories from '../data/categories.json';

// Components
import HomeHero from '../components/home/HomeHero.astro';
import HomeSearch from '../components/home/HomeSearch.astro';
import HomeWebsiteBanner from '../components/home/HomeWeeklyBanner.astro';
import HomeSkeleton from '../components/home/HomeSkeleton.astro';

// V4.3.2 Constitution Core Requirements
import { buildIndexSEO } from '../utils/seo-schema.js';

// URL parameters
const url = Astro.url;
const initialQuery = url.searchParams.get('q') || '';
const initialTag = url.searchParams.get('tag') || '';

// SEO - Constitution Required
const pageTitle = "Free AI Tools ‚Äì Explore the Entire Open-Source AI Ecosystem";
const pageDescription = "Discover open-source AI models, datasets, papers, benchmarks, and agents. Updated daily with UMID-verified data.";

// Build JSON-LD (Constitution SEO requirement)
const seoSchema = buildIndexSEO();
---

<Layout title={pageTitle} description={pageDescription} jsonld={seoSchema}>

    <div 
        class="container mx-auto px-4 py-12" 
        id="home-container" 
        data-initial-query={initialQuery} 
        data-initial-tag={initialTag}
    >
        <HomeHero />
        
        <!-- V4.9: Entity Type Navigation (Art.X-Entity-List) -->
        <div class="flex justify-center mb-8">
            <EntityTabs activeType="model" basePath="/explore" />
        </div>

        <HomeWebsiteBanner />

        <HomeSearch initialQuery={initialQuery} />

        <!-- V6.0: Primary Category Navigation (Constitution Annex A.2.1) -->
        <section class="mb-12 mt-8">
            <h2 class="text-2xl font-bold text-center mb-6 text-gray-900 dark:text-white">
                Explore AI Models by Category
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Hero Card: Text Generation -->
                <a href="/text-generation" class="category-card group relative overflow-hidden rounded-2xl p-8 col-span-1 md:col-span-2 lg:col-span-2 transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl" style="background: linear-gradient(135deg, #6366f115 0%, #6366f105 100%); border: 1px solid #6366f130;">
                    <div class="text-5xl mb-4 transition-transform group-hover:scale-110">üí¨</div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Text Generation & Content Creation</h3>
                    <p class="text-gray-600 dark:text-gray-400 mb-4">ChatGPT alternatives, code assistants, content writing, summarization</p>
                    <span class="text-sm text-indigo-600 dark:text-indigo-400 font-medium group-hover:underline">Explore models ‚Üí</span>
                </a>
                
                <!-- Knowledge Retrieval -->
                <a href="/knowledge-retrieval" class="category-card group relative overflow-hidden rounded-2xl p-6 transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl" style="background: linear-gradient(135deg, #10b98115 0%, #10b98105 100%); border: 1px solid #10b98130;">
                    <div class="text-4xl mb-3 transition-transform group-hover:scale-110">üîç</div>
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Knowledge Retrieval</h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 line-clamp-2">RAG, embeddings, Q&A systems</p>
                    <span class="text-sm text-emerald-600 dark:text-emerald-400 font-medium group-hover:underline">Explore ‚Üí</span>
                </a>
                
                <!-- Vision & Multimedia -->
                <a href="/vision-multimedia" class="category-card group relative overflow-hidden rounded-2xl p-6 transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl" style="background: linear-gradient(135deg, #f59e0b15 0%, #f59e0b05 100%); border: 1px solid #f59e0b30;">
                    <div class="text-4xl mb-3 transition-transform group-hover:scale-110">üé®</div>
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Vision & Multimedia</h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 line-clamp-2">Image generation, video, speech</p>
                    <span class="text-sm text-amber-600 dark:text-amber-400 font-medium group-hover:underline">Explore ‚Üí</span>
                </a>
                
                <!-- Automation -->
                <a href="/automation-workflow" class="category-card group relative overflow-hidden rounded-2xl p-6 transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl" style="background: linear-gradient(135deg, #8b5cf615 0%, #8b5cf605 100%); border: 1px solid #8b5cf630;">
                    <div class="text-4xl mb-3 transition-transform group-hover:scale-110">‚ö°</div>
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Automation</h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 line-clamp-2">AI agents, workflow tools</p>
                    <span class="text-sm text-violet-600 dark:text-violet-400 font-medium group-hover:underline">Explore ‚Üí</span>
                </a>
                
                <!-- Infrastructure -->
                <a href="/infrastructure-ops" class="category-card group relative overflow-hidden rounded-2xl p-6 transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl" style="background: linear-gradient(135deg, #64748b15 0%, #64748b05 100%); border: 1px solid #64748b30;">
                    <div class="text-4xl mb-3 transition-transform group-hover:scale-110">üîß</div>
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Infrastructure</h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 line-clamp-2">Fine-tuning, optimization</p>
                    <span class="text-sm text-slate-600 dark:text-slate-400 font-medium group-hover:underline">Explore ‚Üí</span>
                </a>
            </div>
        </section>

        <!-- Static Content Container -->
        <div id="static-content-container" class="hidden">
            
            <!-- Hot Models Section -->
            <section class="mb-16">
                <h2 class="text-3xl font-bold text-center mb-8">üî• Hot Models</h2>
                
                <!-- Loading State with Skeletons -->
                <HomeSkeleton count={12} />
                
                <!-- Error State -->
                <div id="hot-models-error" class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
                    <strong class="font-bold">Error:</strong>
                    <span class="block sm:inline" id="hot-models-error-msg"></span>
                </div>
                
                <!-- Hot Models Grid -->
                <div id="hot-models-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 hidden">
                    <!-- Populated by client-side JS with FNI-sorted models -->
                </div>
            </section>

            <!-- Divider -->
            <hr class="my-16 border-gray-200 dark:border-gray-700" />

            <!-- Explore by Category Section -->
            <section class="mb-16">
                <h2 class="text-3xl font-bold text-center mb-10">Explore by Category</h2>
                {allCategories.map(categoryGroup => (
                    <CategoryGroup group={categoryGroup} />
                ))}
            </section>
        </div>

        <!-- Search Results Grid (initially hidden) -->
        <div id="models-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 hidden">
            <!-- Populated by search.js -->
        </div>
        <div id="no-results" class="text-center py-16 hidden">
            <p class="text-2xl font-semibold text-gray-700 dark:text-gray-200">No models found.</p>
            <p class="text-gray-500 dark:text-gray-400 mt-2">Try a different search term.</p>
        </div>
    </div>

    <script>
        import { initializeSearch } from '../scripts/search.js';
        import { loadHotModels, loadWeeklyReport } from '../scripts/home-client.js';

        document.addEventListener('DOMContentLoaded', () => {
            // Parse URL parameters from the client side
            const urlParams = new URLSearchParams(window.location.search);
            const initialQuery = urlParams.get('q') || '';
            const initialTag = urlParams.get('tag') || '';
            
            initializeSearch({
                initialQuery,
                activeTag: initialTag,
                isExplorePage: false
            });

            // Load hot models if no search query or tag
            if (!initialQuery && !initialTag) {
                loadHotModels();
            }

            // V4.9.1 Step 2.3: Load Weekly Report Banner
            loadWeeklyReport();
        });
    </script>

</Layout>
