---
import Layout from '@/layouts/Layout.astro';
import ModelCard from '@/components/ModelCard.astro';
import KeywordCard from '@/components/KeywordCard.astro';
import allKeywords from '@/data/keywords.json';
import rankings from '@/data/rankings.json';

const url = Astro.url;
const activeTag = url.searchParams.get('tag');
const initialQuery = url.searchParams.get('q') || '';

// Get top 12 hot models for the featured section
const hotModels = rankings.hot.slice(0, 12);

let pageTitle = "Free AI Tools: Your Hub for Open-Source AI";
let pageDescription = "Discover, explore, and stay updated with the latest open-source AI models, tools, and research. Your gateway to the world of open AI.";

// Dynamically update page title for SEO if there's a filter or query
if (activeTag) {
    const keyword = allKeywords.find(k => k.slug === activeTag);
    pageTitle = `Models tagged with '${keyword ? keyword.title : activeTag}'`;
    pageDescription = `Find AI models and tools related to ${keyword ? keyword.title : activeTag}.`;
} else if (initialQuery) {
    pageTitle = `Search results for '${initialQuery}'`;
} else {
    // Default homepage SEO
    pageTitle = "AI Nexus: Discover Top Open-Source AI Models";
    pageDescription = "Explore a curated directory of the best open-source AI models. Search, filter, and find tools for text generation, image analysis, and more.";
}
---

<Layout title={pageTitle} description={pageDescription}>
    <div class="container mx-auto px-4 py-12">
        <!-- Main Page Header -->
        <header class="text-center mb-12">
            <h1 class="text-5xl font-extrabold text-gray-900 dark:text-white">Discover the World of Open Source AI</h1>
            <p class="mt-4 text-xl text-gray-500 dark:text-gray-400 max-w-4xl mx-auto">
                Your single destination to search, filter, and explore the latest open-source AI models.
            </p>
        </header>

        <!-- Search and Filter Section -->
        <div class="mb-8 flex flex-col md:flex-row gap-4 items-center sticky top-[65px] bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm py-4 z-30 max-w-4xl mx-auto w-full">
            <div id="search-container" class="w-full">
                <form id="search-form" class="w-full" onsubmit="return false;">
                    <div class="relative">
                        <input
                            type="search"
                            id="search-box"
                            name="q"
                            placeholder="Search for models, e.g., 'llama', 'image generation'..."
                            class="w-full p-4 pl-12 text-lg border border-gray-300 dark:border-gray-600 rounded-full bg-white dark:bg-gray-800 focus:ring-blue-500 focus:border-blue-500 shadow-lg"
                            aria-label="Search AI Models"
                            value={initialQuery}
                        />
                        <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                            <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- This container will be hidden when a search is active -->
        <div id="static-content-container">
            <!-- Hot Models Section -->
            <section class="mb-16">
                <h2 class="text-3xl font-bold text-center mb-8">ðŸ”¥ Hot Models</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    {hotModels.map(model => (
                        <ModelCard model={model} isRisingStar={model.is_rising_star} />
                    ))}
                </div>
            </section>

            <!-- Divider -->
            <hr class="my-16 border-gray-200 dark:border-gray-700" />

            <!-- Explore by Category Section -->
            <section class="mb-16">
                <h2 class="text-3xl font-bold text-center mb-8">Explore by Category</h2>
                <div id="keyword-cards-container" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    {allKeywords.slice(0, 16).map(keyword => (
                        <KeywordCard keyword={keyword} />
                    ))}
                </div>
            </section>
        </div>

        <!-- Search Results Grid (initially hidden) -->
        <div id="models-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            <!-- This grid will be populated by search.js -->
        </div>
        <div id="no-results" class="text-center py-16 hidden">
            <p class="text-2xl font-semibold text-gray-700 dark:text-gray-200">No models found.</p>
            <p class="text-gray-500 dark:text-gray-400 mt-2">Try adjusting your search criteria.</p>
        </div>
    </div>

    <script type="module" define:vars={{ initialQuery, activeTag }}>
        import { initializeSearch } from '@/scripts/search.js';
        document.addEventListener('DOMContentLoaded', () => {
            initializeSearch({ // We can remove algoliaConfig from here now
                initialQuery,
                activeTag
            });
        });
    </script>
</Layout>
