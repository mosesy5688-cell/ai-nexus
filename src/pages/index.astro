---
import Layout from '@/layouts/Layout.astro';
import ModelCard from '@/components/ModelCard.astro';
import { CORE_KEYWORDS } from '@/content/config';
import models from '../../public/models.json';

const featuredModels = models.slice(0, 12); // Show top 12 models on the homepage
---

<Layout 
  title="Free AI Tools | The Ultimate Open-Source AI Index"
  description="Discover the best free, open-source AI models and tools. An automated, comprehensive directory for developers, researchers, and AI enthusiasts.">

  <!-- Hero Section -->
  <section class="text-center py-20 sm:py-32">
    <div class="container max-w-4xl mx-auto px-4">
      <h1 class="text-5xl md:text-7xl font-black tracking-tighter text-gray-900 dark:text-white">
        The Open-Source AI Universe
      </h1>
      <p class="mt-6 text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Your automated guide to the most popular and powerful open-source AI models.
      </p>
    </div>
  </section>

  <!-- Core Keywords Section -->
  <section id="keywords" class="py-16 bg-gray-100 dark:bg-gray-900">
    <div class="container max-w-7xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-900 dark:text-white">Explore Core AI Fields</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {CORE_KEYWORDS.map(keyword => (
          <a href={`/keyword/${keyword.slug}`} class="block p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl hover:-translate-y-1 transition-all">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white">{keyword.title}</h3>
            <p class="mt-2 text-gray-600 dark:text-gray-400">Explore models &rarr;</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Models Section -->
  <section class="py-20">
    <div class="container max-w-7xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-900 dark:text-white">Featured Models</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredModels.map(model => (
          <ModelCard model={model} />
        ))}
      </div>
    </div>
  </section>

</Layout>