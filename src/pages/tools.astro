---
/**
 * AI Tools & Utilities (V16.5)
 */
import Layout from '../layouts/Layout.astro';
import HomeEntitySection from '../components/home/HomeEntitySection.astro';

const pageTitle = "AI Tools & Utilities - Free2AI";
const pageDescription = "Technical toolkit for AI developers, including fine-tuning and optimization assets.";
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="container mx-auto px-4 py-16">
        <header class="mb-12 text-center">
            <h1 class="text-4xl font-black text-gray-900 dark:text-white mb-4 tracking-tighter uppercase">
                AI Tools & Utilities
            </h1>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
                Essential utilities for training, optimizing, and deploying state-of-the-art AI.
            </p>
        </header>

        <section class="max-w-5xl mx-auto">
            <HomeEntitySection />
        </section>

        <div class="mt-16 p-8 border border-dashed border-gray-200 dark:border-gray-800 rounded-2xl text-center">
            <h2 class="text-xl font-bold mb-4">Developer Toolkit</h2>
            <p class="text-gray-500 mb-6">Find quantization tools, inference engines, and fine-tuning scripts.</p>
            <a href="/search?type=tool" class="inline-block px-8 py-3 bg-indigo-600 text-white rounded-xl font-bold hover:bg-indigo-700 transition">
                Search Tools
            </a>
        </div>
    </main>
</Layout>
