---
/**
 * AI Tools Catalog (V4.1)
 * Optimized SSR + UniversalCatalog Engine
 */
import Layout from '../layouts/Layout.astro';
import ListingControls from '../components/common/ListingControls.astro';
import { fetchCatalogData, truncateListingItem } from '../utils/catalog-fetcher.js';
import CatalogCard from '../components/common/CatalogCard.astro';

// SSR Data Fetching
const { items: allTools = [], error } = await fetchCatalogData('tool', Astro.locals.runtime?.env);
const tools = allTools.slice(0, 48).map(truncateListingItem);

const pageTitle = "AI Tools & Utilities Catalog | Free2AI";
const pageDescription = "Discover the best open-source AI tools, libraries, and utilities for developers and researchers.";

// V18.10.2: Explicit Edge Caching with Revalidation Guard
Astro.response.headers.set('Cache-Control', 'public, max-age=0, must-revalidate, s-maxage=60');
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="max-w-[1400px] mx-auto px-4 py-8">
        <header class="mb-8">
            <h1 class="text-3xl font-black text-gray-900 dark:text-white mb-2 tracking-tighter uppercase">
                AI Tools <span class="text-emerald-500">Utilities</span>
            </h1>
            <p class="text-xs font-bold text-gray-400 dark:text-zinc-500 max-w-2xl uppercase tracking-widest">
                High-Resolution Catalog of Neural Frameworks & SDKs
            </p>
        </header>

        <ListingControls type="tool" searchId="tools-search" />

        <div id="tools-catalog-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 xl:grid-cols-5 gap-3">
            {tools.map((tool: any) => (
                <div class="animate-in fade-in slide-in-from-bottom-1 duration-300">
                    <CatalogCard item={tool} type="tool" />
                </div>
            ))}
        </div>

        <div id="pagination" class="mt-12 flex justify-center items-center gap-4"></div>
    </main>

    <script define:vars={{ initialData: tools }}>
        window.__CATALOG_DATA__ = initialData;
    </script>

    <script>
        import { UniversalCatalog } from '../scripts/lib/UniversalCatalog.js';
        
        const init = () => {
            new UniversalCatalog({
                initialData: window.__CATALOG_DATA__ || [],
                type: 'tool',
                gridId: 'tools-catalog-grid',
                searchId: 'tools-search',
                dataUrl: 'https://cdn.free2aitools.com/cache/rankings/tool/p1.json'
            });
        };

        document.addEventListener('astro:page-load', init);
    </script>
</Layout>
