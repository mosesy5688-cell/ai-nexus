---
/**
 * AI Tools Catalog (V4.1)
 * Optimized SSR + UniversalCatalog Engine
 */
import Layout from '../layouts/Layout.astro';
import ListingControls from '../components/common/ListingControls.astro';
import CatalogCard from '../components/common/CatalogCard.astro';

// SSR Data Fetching
const { items: allTools, error } = await fetchCatalogData('tool', Astro.locals.runtime?.env);
const tools = allTools.slice(0, 48).map(truncateListingItem);

const pageTitle = "AI Tools & Utilities Catalog | Free2AI";
const pageDescription = "Discover the best open-source AI tools, libraries, and utilities for developers and researchers.";
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="container mx-auto px-4 py-12 min-h-screen">
        <header class="mb-10">
            <h1 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-2 tracking-tight">
                Developer <span class="text-emerald-600">Tools</span>
            </h1>
            <p class="text-lg text-gray-600 dark:text-zinc-400 max-w-2xl">
                A curated collection of frameworks, libraries, and CLI tools powering the AI revolution.
            </p>
        </header>

        <ListingControls type="tool" searchId="tools-search" />

        <div id="tools-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {tools.map((tool: any) => (
                <div class="animate-in fade-in slide-in-from-bottom-4 duration-500">
                    <div class="h-full" data-ssr-item>
                         <CatalogCard item={tool} type="tool" />
                    </div>
                </div>
            ))}
        </div>

        <div id="pagination" class="mt-16 flex justify-center items-center gap-4"></div>
    </main>

    <script define:vars={{ initialData: tools }}>
        window.__CATALOG_DATA__ = initialData;
    </script>

    <script>
        import { UniversalCatalog } from '../scripts/lib/UniversalCatalog.js';
        
        const init = () => {
            new UniversalCatalog({
                initialData: window.__CATALOG_DATA__ || [],
                type: 'tool',
                gridId: 'tools-grid',
                searchId: 'tools-search',
                dataUrl: 'https://cdn.free2aitools.com/cache/rankings/tool/p1.json'
            });
        };

        document.addEventListener('DOMContentLoaded', init);
    </script>
</Layout>
